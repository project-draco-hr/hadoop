{
  this.constructFullMapAtInit=constructFullMapAtInit;
  long updateTime=conf.getLong(IdMappingConstant.USERGROUPID_UPDATE_MILLIS_KEY,IdMappingConstant.USERGROUPID_UPDATE_MILLIS_DEFAULT);
  if (updateTime < IdMappingConstant.USERGROUPID_UPDATE_MILLIS_MIN) {
    LOG.info("User configured user account update time is less" + " than 1 minute. Use 1 minute instead.");
    timeout=IdMappingConstant.USERGROUPID_UPDATE_MILLIS_MIN;
  }
 else {
    timeout=updateTime;
  }
  String staticFilePath=conf.get(IdMappingConstant.STATIC_ID_MAPPING_FILE_KEY,IdMappingConstant.STATIC_ID_MAPPING_FILE_DEFAULT);
  staticMappingFile=new File(staticFilePath);
  updateStaticMapping();
  updateMaps();
}
