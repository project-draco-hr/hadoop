{
  long blockSize=8192;
  byte[] bytes=new byte[(int)blockSize];
  FSDataOutputStream stm=fs.create(file,false,4096,(short)1,blockSize);
  stm.write(bytes);
  stm.write(bytes);
  stm.write(bytes);
  stm.close();
  FileStatus stat=fs.getFileStatus(file);
  assertEquals(blockSize,stat.getBlockSize());
}
