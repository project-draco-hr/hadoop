{
  try {
    BufferedReader probe=new BufferedReader(new FileReader(file.getAbsoluteFile()));
    if (firstLine == null || (!firstLine.equals(probe.readLine()))) {
      probe.close();
      reader.close();
      reader=new BufferedReader(new FileReader(file.getAbsoluteFile()));
      firstLine=null;
      offset=0;
    }
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
}
