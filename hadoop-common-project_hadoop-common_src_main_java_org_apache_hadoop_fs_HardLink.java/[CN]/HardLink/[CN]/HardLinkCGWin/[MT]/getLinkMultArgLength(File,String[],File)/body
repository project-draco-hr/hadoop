{
  int sum=0;
  for (  String x : fileBaseNames) {
    sum+=1 + ((x == null) ? 0 : x.length());
  }
  sum+=2 + fileDir.getCanonicalPath().length() + linkDir.getCanonicalPath().length();
  sum+=("cmd.exe /q /c for %f in ( ) do " + Shell.WINUTILS + " hardlink create \\%f %f 1>NUL ").length();
  return sum;
}
