{
  String[] buf=new String[fileBaseNames.length + hardLinkMultPrefix.length + hardLinkMultSuffix.length];
  String td=linkDir.getCanonicalPath() + hardLinkMultDir;
  int mark=0;
  System.arraycopy(hardLinkMultPrefix,0,buf,mark,hardLinkMultPrefix.length);
  mark+=hardLinkMultPrefix.length;
  System.arraycopy(fileBaseNames,0,buf,mark,fileBaseNames.length);
  mark+=fileBaseNames.length;
  System.arraycopy(hardLinkMultSuffix,0,buf,mark,hardLinkMultSuffix.length);
  mark+=hardLinkMultSuffix.length;
  buf[mark - 2]=td;
  return buf;
}
