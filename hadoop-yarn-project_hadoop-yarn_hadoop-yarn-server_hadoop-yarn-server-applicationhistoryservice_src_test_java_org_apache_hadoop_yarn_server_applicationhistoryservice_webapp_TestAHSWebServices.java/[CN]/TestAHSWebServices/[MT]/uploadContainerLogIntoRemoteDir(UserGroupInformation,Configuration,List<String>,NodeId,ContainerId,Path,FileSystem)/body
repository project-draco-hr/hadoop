{
  Path path=new Path(appDir,LogAggregationUtils.getNodeString(nodeId));
  AggregatedLogFormat.LogWriter writer=new AggregatedLogFormat.LogWriter(configuration,path,ugi);
  writer.writeApplicationOwner(ugi.getUserName());
  writer.append(new AggregatedLogFormat.LogKey(containerId),new AggregatedLogFormat.LogValue(rootLogDirs,containerId,ugi.getShortUserName()));
  writer.close();
}
