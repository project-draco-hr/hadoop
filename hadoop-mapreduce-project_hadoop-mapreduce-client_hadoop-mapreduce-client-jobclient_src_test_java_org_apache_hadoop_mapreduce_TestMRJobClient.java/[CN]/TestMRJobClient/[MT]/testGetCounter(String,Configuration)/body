{
  ByteArrayOutputStream out=new ByteArrayOutputStream();
  int exitCode=runTool(conf,createJobClient(),new String[]{"-counter"},out);
  assertEquals("Exit code",-1,exitCode);
  exitCode=runTool(conf,createJobClient(),new String[]{"-counter",jobId,"org.apache.hadoop.mapreduce.TaskCounter","MAP_INPUT_RECORDS"},out);
  assertEquals("Exit code",0,exitCode);
  assertEquals("Counter","3",out.toString().trim());
}
