{
  if (rBlock == null) {
    return null;
  }
  ExtendedBlockWritable eb=ExtendedBlockWritable.convertExtendedBlock(rBlock.getBlock());
  DatanodeInfoWritable[] dnInfo=DatanodeInfoWritable.convertDatanodeInfo(rBlock.getLocations());
  return new RecoveringBlockWritable(eb,dnInfo,rBlock.getNewGenerationStamp());
}
