{
  String[] rootLogDirs=getConf().getStrings(NMConfig.NM_LOG_DIR,NMConfig.DEFAULT_NM_LOG_DIR);
  boolean appLogDirStatus=false;
  FsPermission appLogDirPerms=new FsPermission(LOGDIR_PERM);
  for (  String rootLogDir : rootLogDirs) {
    Path appLogDir=new Path(rootLogDir,appId);
    try {
      lfs.mkdir(appLogDir,appLogDirPerms,true);
    }
 catch (    IOException e) {
      LOG.warn("Unable to create the app-log directory : " + appLogDir,e);
      continue;
    }
    appLogDirStatus=true;
  }
  if (!appLogDirStatus) {
    throw new IOException("Not able to initialize app-log directories " + "in any of the configured local directories for app " + appId);
  }
}
