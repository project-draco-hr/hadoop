{
  StringBuilder datanodes=new StringBuilder();
  for (Iterator<DatanodeDescriptor> it=blocksMap.nodeIterator(b); it.hasNext(); ) {
    DatanodeDescriptor node=it.next();
    addToInvalidates(b,node,false);
    datanodes.append(node.getName()).append(" ");
  }
  if (datanodes.length() != 0) {
    NameNode.stateChangeLog.info("BLOCK* NameSystem.addToInvalidates: " + b + " to "+ datanodes.toString());
  }
}
