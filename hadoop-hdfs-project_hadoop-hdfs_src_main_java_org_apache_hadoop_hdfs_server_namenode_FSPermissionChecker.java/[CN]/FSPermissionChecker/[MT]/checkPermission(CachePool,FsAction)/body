{
  CachePoolInfo info=pool.getInfo();
  FsPermission mode=info.getMode();
  if (isSuperUser()) {
    return true;
  }
  if (user.equals(info.getOwnerName()) && mode.getUserAction().implies(access)) {
    return true;
  }
  if (groups.contains(info.getGroupName()) && mode.getGroupAction().implies(access)) {
    return true;
  }
  if (mode.getOtherAction().implies(access)) {
    return true;
  }
  return false;
}
