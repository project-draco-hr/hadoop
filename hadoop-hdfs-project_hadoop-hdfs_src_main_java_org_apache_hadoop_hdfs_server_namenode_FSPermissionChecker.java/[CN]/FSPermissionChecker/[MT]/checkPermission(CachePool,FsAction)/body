{
  FsPermission mode=pool.getMode();
  if (isSuperUser()) {
    return true;
  }
  if (user.equals(pool.getOwnerName()) && mode.getUserAction().implies(access)) {
    return true;
  }
  if (groups.contains(pool.getGroupName()) && mode.getGroupAction().implies(access)) {
    return true;
  }
  if (mode.getOtherAction().implies(access)) {
    return true;
  }
  return false;
}
