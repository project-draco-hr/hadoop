{
  if (inode == null) {
    return;
  }
  FsPermission mode=inode.getFsPermission(snapshot);
  if (user.equals(inode.getUserName(snapshot))) {
    if (mode.getUserAction().implies(access)) {
      return;
    }
  }
 else   if (groups.contains(inode.getGroupName(snapshot))) {
    if (mode.getGroupAction().implies(access)) {
      return;
    }
  }
 else {
    if (mode.getOtherAction().implies(access)) {
      return;
    }
  }
  throw new AccessControlException("Permission denied: user=" + user + ", access="+ access+ ", inode="+ toAccessControlString(inode));
}
