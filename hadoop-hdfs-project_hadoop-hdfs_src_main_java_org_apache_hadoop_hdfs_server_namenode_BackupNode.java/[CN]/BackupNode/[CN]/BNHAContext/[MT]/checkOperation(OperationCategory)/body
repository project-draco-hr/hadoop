{
  if (op == OperationCategory.UNCHECKED || op == OperationCategory.CHECKPOINT) {
    return;
  }
  if (OperationCategory.JOURNAL != op && !(OperationCategory.READ == op && !isRole(NamenodeRole.CHECKPOINT))) {
    String msg="Operation category " + op + " is not supported at "+ getRole();
    throw new StandbyException(msg);
  }
}
