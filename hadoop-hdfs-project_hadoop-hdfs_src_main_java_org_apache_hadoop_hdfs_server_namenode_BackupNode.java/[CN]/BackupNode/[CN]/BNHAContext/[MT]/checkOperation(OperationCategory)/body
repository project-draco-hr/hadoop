{
  if (op == OperationCategory.UNCHECKED || op == OperationCategory.CHECKPOINT) {
    return;
  }
  if (OperationCategory.JOURNAL != op && !(OperationCategory.READ == op && allowStaleStandbyReads)) {
    String msg="Operation category " + op + " is not supported at the BackupNode";
    throw new StandbyException(msg);
  }
}
