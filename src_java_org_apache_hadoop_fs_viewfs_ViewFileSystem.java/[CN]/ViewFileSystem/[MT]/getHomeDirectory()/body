{
  String base="/user/";
  ;
  if (homeDir == null) {
    try {
      if (this.exists(new Path("/user/"))) {
        base="/user/";
      }
 else       if (this.exists(new Path("/Users"))) {
        base="/Users/";
      }
 else       if (this.exists(new Path("/homes"))) {
        base="/homes/";
      }
    }
 catch (    IOException e) {
    }
    homeDir=this.makeQualified(new Path(base + ugi.getShortUserName()));
  }
  return homeDir;
}
