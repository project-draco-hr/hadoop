{
synchronized (fds) {
    for (    ReplicaInfo b : FsDatasetTestUtil.getReplicas(fds,bpid)) {
      File f=b.getBlockFile();
      File mf=b.getMetaFile();
      if (f.exists() && mf.exists() && f.delete()) {
        LOG.info("Deleting block file " + f.getAbsolutePath());
        return b.getBlockId();
      }
    }
  }
  return 0;
}
