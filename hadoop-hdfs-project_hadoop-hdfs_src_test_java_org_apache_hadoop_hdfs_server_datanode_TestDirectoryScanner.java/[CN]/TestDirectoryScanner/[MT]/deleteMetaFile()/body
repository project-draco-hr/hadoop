{
  try (AutoCloseableLock lock=fds.acquireDatasetLock()){
    for (    ReplicaInfo b : FsDatasetTestUtil.getReplicas(fds,bpid)) {
      if (b.metadataExists() && b.deleteMetadata()) {
        LOG.info("Deleting metadata " + b.getMetadataURI());
        return b.getBlockId();
      }
    }
  }
   return 0;
}
