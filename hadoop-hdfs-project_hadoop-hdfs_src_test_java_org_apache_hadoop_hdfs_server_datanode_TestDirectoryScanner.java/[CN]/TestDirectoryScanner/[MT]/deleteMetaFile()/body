{
synchronized (fds) {
    for (    ReplicaInfo b : FsDatasetTestUtil.getReplicas(fds,bpid)) {
      File file=b.getMetaFile();
      if (file.exists() && file.delete()) {
        LOG.info("Deleting metadata file " + file.getAbsolutePath());
        return b.getBlockId();
      }
    }
  }
  return 0;
}
