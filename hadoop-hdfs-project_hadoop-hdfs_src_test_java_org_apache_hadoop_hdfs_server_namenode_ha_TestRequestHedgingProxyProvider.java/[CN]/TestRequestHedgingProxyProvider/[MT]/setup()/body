{
  ns="mycluster-" + Time.monotonicNow();
  nnUri=new URI("hdfs://" + ns);
  conf=new Configuration();
  conf.set(DFSConfigKeys.DFS_NAMESERVICES,ns);
  conf.set(DFSConfigKeys.DFS_HA_NAMENODES_KEY_PREFIX + "." + ns,"nn1,nn2");
  conf.set(DFSConfigKeys.DFS_NAMENODE_RPC_ADDRESS_KEY + "." + ns+ ".nn1","machine1.foo.bar:8020");
  conf.set(DFSConfigKeys.DFS_NAMENODE_RPC_ADDRESS_KEY + "." + ns+ ".nn2","machine2.foo.bar:8020");
}
