{
  writeLock();
  try {
    DatanodeDescriptor nodeInfo=getBlockManager().getDatanodeManager().getDatanode(nodeID);
    if (nodeInfo != null) {
      removeDatanode(nodeInfo);
    }
 else {
      NameNode.stateChangeLog.warn("BLOCK* NameSystem.removeDatanode: " + nodeID.getName() + " does not exist");
    }
  }
  finally {
    writeUnlock();
  }
}
