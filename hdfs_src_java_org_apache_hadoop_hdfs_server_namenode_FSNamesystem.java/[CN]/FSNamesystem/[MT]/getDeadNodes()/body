{
  final Map<String,Map<String,Object>> info=new HashMap<String,Map<String,Object>>();
  final ArrayList<DatanodeDescriptor> liveNodeList=new ArrayList<DatanodeDescriptor>();
  final ArrayList<DatanodeDescriptor> deadNodeList=new ArrayList<DatanodeDescriptor>();
  DFSNodesStatus(liveNodeList,deadNodeList);
  removeDecomNodeFromList(deadNodeList);
  for (  DatanodeDescriptor node : deadNodeList) {
    final Map<String,Object> innerinfo=new HashMap<String,Object>();
    innerinfo.put("lastContact",getLastContact(node));
    innerinfo.put("decommissioned",node.isDecommissioned());
    info.put(node.getHostName(),innerinfo);
  }
  return JSON.toString(info);
}
