{
  Configuration conf=new Configuration();
  conf.setStrings(AuxServices.AUX_SERVICES,new String[]{"Asrv","Bsrv"});
  conf.setClass(String.format(AuxServices.AUX_SERVICE_CLASS_FMT,"Asrv"),ServiceA.class,Service.class);
  conf.setClass(String.format(AuxServices.AUX_SERVICE_CLASS_FMT,"Bsrv"),ServiceB.class,Service.class);
  final AuxServices aux=new AuxServices();
  aux.init(conf);
  aux.start();
  Service s=aux.getServices().iterator().next();
  s.stop();
  assertEquals("Auxiliary service stopped, but AuxService unaffected.",STOPPED,aux.getServiceState());
  assertTrue(aux.getServices().isEmpty());
}
