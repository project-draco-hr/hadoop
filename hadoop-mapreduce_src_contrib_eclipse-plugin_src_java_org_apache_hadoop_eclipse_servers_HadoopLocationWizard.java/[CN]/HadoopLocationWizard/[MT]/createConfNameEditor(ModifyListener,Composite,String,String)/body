{
{
    ConfProp prop=ConfProp.getByName(propName);
    if (prop != null)     return createConfLabelText(listener,parent,prop,labelText);
  }
  Label label=new Label(parent,SWT.NONE);
  if (labelText == null)   labelText=propName;
  label.setText(labelText);
  Text text=new Text(parent,SWT.SINGLE | SWT.BORDER);
  GridData data=new GridData(GridData.FILL_HORIZONTAL);
  text.setLayoutData(data);
  text.setData("hPropName",propName);
  text.setText(location.getConfProp(propName));
  text.addModifyListener(listener);
  return text;
}
