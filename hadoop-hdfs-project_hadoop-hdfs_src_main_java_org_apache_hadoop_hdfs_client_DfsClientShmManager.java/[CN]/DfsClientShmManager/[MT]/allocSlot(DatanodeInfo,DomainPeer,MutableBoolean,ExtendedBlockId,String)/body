{
  lock.lock();
  try {
    EndpointShmManager shmManager=datanodes.get(datanode);
    if (shmManager == null) {
      shmManager=new EndpointShmManager(datanode);
      datanodes.put(datanode,shmManager);
    }
    return shmManager.allocSlot(peer,usedPeer,clientName,blockId);
  }
  finally {
    lock.unlock();
  }
}
