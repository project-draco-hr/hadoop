{
  InputFormat indirIF=(InputFormat)ReflectionUtils.newInstance(job.getClass(org.apache.hadoop.mapreduce.GenericMRLoadGenerator.INDIRECT_INPUT_FORMAT,SequenceFileInputFormat.class),job);
  IndirectSplit is=((IndirectSplit)split);
  return indirIF.getRecordReader(new FileSplit(is.getPath(),0,is.getLength(),(String[])null),job,reporter);
}
