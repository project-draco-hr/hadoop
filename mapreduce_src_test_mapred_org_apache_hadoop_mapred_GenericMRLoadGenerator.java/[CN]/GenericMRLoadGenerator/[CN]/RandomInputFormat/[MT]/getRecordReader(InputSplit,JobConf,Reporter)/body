{
  final IndirectInputFormat.IndirectSplit clSplit=(IndirectInputFormat.IndirectSplit)split;
  return new RecordReader<Text,Text>(){
    boolean once=true;
    public boolean next(    Text key,    Text value){
      if (once) {
        key.set(clSplit.getPath().toString());
        once=false;
        return true;
      }
      return false;
    }
    public Text createKey(){
      return new Text();
    }
    public Text createValue(){
      return new Text();
    }
    public long getPos(){
      return 0;
    }
    public void close(){
    }
    public float getProgress(){
      return 0.0f;
    }
  }
;
}
