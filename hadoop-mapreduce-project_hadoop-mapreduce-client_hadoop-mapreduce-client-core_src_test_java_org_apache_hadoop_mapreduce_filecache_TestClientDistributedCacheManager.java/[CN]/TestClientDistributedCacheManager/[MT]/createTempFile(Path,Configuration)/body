{
  SequenceFile.Writer writer=null;
  try {
    writer=SequenceFile.createWriter(fs,conf,p,Text.class,Text.class,CompressionType.NONE);
    writer.append(new Text("text"),new Text("moretext"));
  }
 catch (  Exception e) {
    throw new IOException(e.getLocalizedMessage());
  }
 finally {
    if (writer != null) {
      writer.close();
    }
    writer=null;
  }
  LOG.info("created: " + p);
}
