{
  while (running) {
    try {
      Thread.sleep(cleanUpCheckPeriod);
      baseDirManager.checkAndCleanup();
    }
 catch (    IOException e) {
      LOG.error("Exception in DistributedCache CleanupThread.",e);
    }
catch (    InterruptedException e) {
      LOG.info("Cleanup...",e);
      running=false;
    }
catch (    Throwable t) {
      exitTaskTracker(t);
    }
  }
}
