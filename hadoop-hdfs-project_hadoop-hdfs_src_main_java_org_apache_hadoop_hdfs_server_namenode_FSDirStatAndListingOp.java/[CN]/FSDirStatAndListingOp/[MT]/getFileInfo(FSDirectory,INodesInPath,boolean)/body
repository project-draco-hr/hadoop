{
  fsd.readLock();
  try {
    final INode node=iip.getLastINode();
    if (node == null) {
      return null;
    }
    byte policy=(includeStoragePolicy && !node.isSymlink()) ? node.getStoragePolicyID() : HdfsConstants.BLOCK_STORAGE_POLICY_ID_UNSPECIFIED;
    return createFileStatus(fsd,iip,null,policy,false);
  }
  finally {
    fsd.readUnlock();
  }
}
