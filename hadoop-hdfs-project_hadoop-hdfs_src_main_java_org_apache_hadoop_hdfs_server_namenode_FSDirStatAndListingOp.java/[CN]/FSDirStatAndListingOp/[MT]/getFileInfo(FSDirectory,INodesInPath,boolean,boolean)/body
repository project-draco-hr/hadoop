{
  fsd.readLock();
  try {
    final INode i=src.getLastINode();
    byte policyId=includeStoragePolicy && i != null && !i.isSymlink() ? i.getStoragePolicyID() : BlockStoragePolicySuite.ID_UNSPECIFIED;
    return i == null ? null : createFileStatus(fsd,HdfsFileStatus.EMPTY_NAME,i,policyId,src.getPathSnapshotId(),isRawPath,src);
  }
  finally {
    fsd.readUnlock();
  }
}
