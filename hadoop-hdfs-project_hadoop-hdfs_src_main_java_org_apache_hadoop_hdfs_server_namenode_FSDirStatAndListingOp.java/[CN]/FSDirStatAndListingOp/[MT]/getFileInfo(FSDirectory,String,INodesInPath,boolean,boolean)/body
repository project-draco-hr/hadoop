{
  fsd.readLock();
  try {
    final INode i=src.getLastINode();
    if (i == null) {
      return null;
    }
    byte policyId=includeStoragePolicy && !i.isSymlink() ? i.getStoragePolicyID() : HdfsConstants.BLOCK_STORAGE_POLICY_ID_UNSPECIFIED;
    INodeAttributes nodeAttrs=getINodeAttributes(fsd,path,HdfsFileStatus.EMPTY_NAME,i,src.getPathSnapshotId());
    return createFileStatus(fsd,HdfsFileStatus.EMPTY_NAME,i,nodeAttrs,policyId,src.getPathSnapshotId(),isRawPath,src);
  }
  finally {
    fsd.readUnlock();
  }
}
