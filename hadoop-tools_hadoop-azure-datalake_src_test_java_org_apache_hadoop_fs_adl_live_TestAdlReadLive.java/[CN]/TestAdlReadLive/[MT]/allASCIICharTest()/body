{
  final Path path=new Path("/delete14/" + UUID.randomUUID().toString().replaceAll("-",""));
  FileSystem fs=this.getFileSystem();
  final byte[] actualData=new byte[127];
  for (byte i=0; i < 127; ++i) {
    actualData[i]=i;
  }
  fs.delete(path,true);
  FSDataOutputStream os=fs.create(path);
  os.write(actualData);
  os.close();
  FSDataInputStream bb=fs.open(path);
  byte[] data=new byte[127];
  bb.readFully(0,data,0,data.length);
  bb.close();
  Assert.assertArrayEquals(data,actualData);
  bb=fs.open(path);
  int byteRead=1;
  while (bb.read() != -1) {
    byteRead++;
  }
  bb.seek(0);
  byteRead=1;
  while (bb.read() != -1) {
    byteRead++;
  }
  bb.close();
}
