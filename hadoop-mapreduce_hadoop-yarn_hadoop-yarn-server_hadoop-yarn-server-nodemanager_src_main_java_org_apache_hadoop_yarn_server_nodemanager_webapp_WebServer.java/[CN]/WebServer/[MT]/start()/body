{
  String bindAddress=getConfig().get(NMConfig.NM_HTTP_BIND_ADDRESS,NMConfig.DEFAULT_NM_HTTP_BIND_ADDRESS);
  LOG.info("Instantiating NMWebApp at " + bindAddress);
  try {
    this.webApp=WebApps.$for("yarn",Context.class,this.nmContext).at(bindAddress).with(getConfig()).start(new NMWebApp(this.resourceView));
  }
 catch (  Exception e) {
    String msg="NMWebapps failed to start.";
    LOG.error(msg,e);
    throw new YarnException(msg);
  }
  super.start();
}
