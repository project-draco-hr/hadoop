{
  try {
    fs.canonicalizeUri(path.toUri());
    fs.checkPath(path);
    assertTrue(text + " Not a directory",fs.getFileStatus(new Path("/")).isDirectory());
    fs.globStatus(path);
  }
 catch (  AssertionError e) {
    throw e;
  }
catch (  Exception e) {
    LOG.debug("{} failure: {}",text,e,e);
    fail(text + " Test failed");
  }
}
