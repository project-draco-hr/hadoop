{
  checkFile(blockFile);
  LOG.info("Corrupting block file: " + blockFile);
  final int BUF_SIZE=32;
  byte[] buf=new byte[BUF_SIZE];
  try (RandomAccessFile raf=new RandomAccessFile(blockFile,"rw")){
    int nread=raf.read(buf);
    for (int i=0; i < nread; i++) {
      buf[i]++;
    }
    raf.seek(0);
    raf.write(buf);
  }
 }
