{
  String periodStr=getAttribute(attributeName);
  if (periodStr != null) {
    int period=0;
    try {
      period=Integer.parseInt(periodStr);
    }
 catch (    NumberFormatException nfe) {
    }
    if (period <= 0) {
      throw new MetricsException("Invalid period: " + periodStr);
    }
    setPeriod(period);
  }
}
