{
  final String operation="refreshUserToGroupsMappings";
  UserGroupInformation user=checkAcls(operation);
  checkRMStatus(user.getShortUserName(),operation,"refresh user-groups.");
  Groups.getUserToGroupsMappingService(getConfiguration(new Configuration(false),YarnConfiguration.CORE_SITE_CONFIGURATION_FILE)).refresh();
  RMAuditLogger.logSuccess(user.getShortUserName(),operation,"AdminService");
  return recordFactory.newRecordInstance(RefreshUserToGroupsMappingsResponse.class);
}
