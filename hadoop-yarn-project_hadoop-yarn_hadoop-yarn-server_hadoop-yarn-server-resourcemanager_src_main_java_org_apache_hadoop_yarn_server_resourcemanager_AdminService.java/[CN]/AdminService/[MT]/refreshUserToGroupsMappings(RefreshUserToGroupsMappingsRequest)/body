{
  UserGroupInformation user=checkAcls("refreshUserToGroupsMappings");
  if (!isRMActive()) {
    RMAuditLogger.logFailure(user.getShortUserName(),"refreshUserToGroupsMapping",adminAcl.toString(),"AdminService","ResourceManager is not active. Can not refresh user-groups.");
    throwStandbyException();
  }
  Groups.getUserToGroupsMappingService().refresh();
  RMAuditLogger.logSuccess(user.getShortUserName(),"refreshUserToGroupsMappings","AdminService");
  return recordFactory.newRecordInstance(RefreshUserToGroupsMappingsResponse.class);
}
