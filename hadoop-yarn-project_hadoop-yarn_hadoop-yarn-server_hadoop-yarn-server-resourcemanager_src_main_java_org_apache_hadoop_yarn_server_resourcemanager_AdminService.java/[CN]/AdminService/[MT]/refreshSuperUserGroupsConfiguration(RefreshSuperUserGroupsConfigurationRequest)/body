{
  final String operation="refreshSuperUserGroupsConfiguration";
  UserGroupInformation user=checkAcls(operation);
  checkRMStatus(user.getShortUserName(),operation,"refresh super-user-groups.");
  Configuration conf=getConfiguration(new Configuration(false),YarnConfiguration.CORE_SITE_CONFIGURATION_FILE,YarnConfiguration.YARN_SITE_CONFIGURATION_FILE);
  RMServerUtils.processRMProxyUsersConf(conf);
  ProxyUsers.refreshSuperUserGroupsConfiguration(conf);
  RMAuditLogger.logSuccess(user.getShortUserName(),operation,"AdminService");
  return recordFactory.newRecordInstance(RefreshSuperUserGroupsConfigurationResponse.class);
}
