{
  Resource absMaxCapIdealAssignedDelta=Resources.componentwiseMax(Resources.subtract(maxCapacity,idealAssigned),Resource.newInstance(0,0));
  Resource accepted=Resources.min(rc,clusterResource,absMaxCapIdealAssignedDelta,Resources.min(rc,clusterResource,avail,Resources.subtract(Resources.add(current,pending),idealAssigned)));
  Resource remain=Resources.subtract(avail,accepted);
  Resources.addTo(idealAssigned,accepted);
  return remain;
}
