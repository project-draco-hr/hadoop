{
  lock.lock();
  try {
    checkDiskBalancerEnabled();
    if (this.currentResult == Result.PLAN_UNDER_PROGRESS && this.future != null && this.future.isDone()) {
      this.currentResult=Result.PLAN_DONE;
    }
    DiskBalancerWorkStatus status=new DiskBalancerWorkStatus(this.currentResult,this.planID);
    for (    Map.Entry<VolumePair,DiskBalancerWorkItem> entry : workMap.entrySet()) {
      DiskBalancerWorkEntry workEntry=new DiskBalancerWorkEntry(entry.getKey().getSource().getBasePath(),entry.getKey().getDest().getBasePath(),entry.getValue());
      status.addWorkEntry(workEntry);
    }
    return status;
  }
  finally {
    lock.unlock();
  }
}
