{
  if (stream == null) {
    throw new IllegalArgumentException("Null InputStream");
  }
  if (client == null || !client.isConnected()) {
    throw new IllegalArgumentException("FTP client null or not connected");
  }
  this.wrappedStream=stream;
  this.client=client;
  this.stats=stats;
  this.pos=0;
  this.closed=false;
}
