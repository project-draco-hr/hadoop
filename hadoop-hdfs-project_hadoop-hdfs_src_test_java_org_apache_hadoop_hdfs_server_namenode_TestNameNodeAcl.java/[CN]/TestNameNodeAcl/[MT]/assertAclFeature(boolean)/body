{
  INode inode=cluster.getNamesystem().getFSDirectory().getRoot().getNode(path.toUri().getPath(),false);
  assertNotNull(inode);
  AclFeature aclFeature=inode.getAclFeature(Snapshot.CURRENT_STATE_ID);
  if (expectAclFeature) {
    assertNotNull(aclFeature);
  }
 else {
    assertNull(aclFeature);
  }
}
