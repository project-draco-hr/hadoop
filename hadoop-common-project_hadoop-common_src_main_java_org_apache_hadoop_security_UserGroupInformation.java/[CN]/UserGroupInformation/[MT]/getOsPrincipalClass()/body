{
  ClassLoader cl=ClassLoader.getSystemClassLoader();
  try {
    if (System.getProperty("java.vendor").contains("IBM")) {
      if (windows) {
        return (Class<? extends Principal>)cl.loadClass("com.ibm.security.auth.UsernamePrincipal");
      }
 else {
        return (Class<? extends Principal>)(System.getProperty("os.arch").contains("64") ? cl.loadClass("com.ibm.security.auth.UsernamePrincipal") : cl.loadClass("com.ibm.security.auth.LinuxPrincipal"));
      }
    }
 else {
      return (Class<? extends Principal>)(windows ? cl.loadClass("com.sun.security.auth.NTUserPrincipal") : cl.loadClass("com.sun.security.auth.UnixPrincipal"));
    }
  }
 catch (  ClassNotFoundException e) {
    LOG.error("Unable to find JAAS classes:" + e.getMessage());
  }
  return null;
}
