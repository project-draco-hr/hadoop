{
  if (closed) {
    throw new IOException("Stream closed");
  }
  int result=-1;
  if (pos < fileLength) {
    if (pos > blockEnd) {
      blockSeekTo(pos);
    }
    result=blockStream.read();
    if (result >= 0) {
      pos++;
    }
  }
  if (stats != null && result >= 0) {
    stats.incrementBytesRead(1);
  }
  return result;
}
