{
  int connectionRetryCount=0;
  boolean success=false;
  while (!success && connectionRetryCount < NUM_RETRIES) {
    LOG.debug("Establishing zookeeper connection");
    try {
      createConnection();
      success=true;
    }
 catch (    IOException e) {
      LOG.warn(e);
      sleepFor(5000);
    }
    ++connectionRetryCount;
  }
  return success;
}
