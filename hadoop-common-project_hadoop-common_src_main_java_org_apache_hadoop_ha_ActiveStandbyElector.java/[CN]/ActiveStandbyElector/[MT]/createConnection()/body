{
  if (zkClient != null) {
    try {
      zkClient.close();
    }
 catch (    InterruptedException e) {
      throw new IOException("Interrupted while closing ZK",e);
    }
    zkClient=null;
    watcher=null;
  }
  zkClient=connectToZooKeeper();
  if (LOG.isDebugEnabled()) {
    LOG.debug("Created new connection for " + this);
  }
}
