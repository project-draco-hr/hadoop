{
  try {
    if (zkClient == null) {
      createConnection();
    }
    Stat stat=new Stat();
    return zkClient.getData(zkLockFilePath,false,stat);
  }
 catch (  KeeperException e) {
    Code code=e.code();
    if (isNodeDoesNotExist(code)) {
      throw new ActiveNotFoundException();
    }
 else {
      throw e;
    }
  }
}
