{
  StringBuffer buf=new StringBuffer();
  long u=0;
  if (numBytes >= TB) {
    u=numBytes / TB;
    numBytes-=u * TB;
    buf.append(u + " TB ");
  }
  if (numBytes >= GB) {
    u=numBytes / GB;
    numBytes-=u * GB;
    buf.append(u + " GB ");
  }
  if (numBytes >= MB) {
    u=numBytes / MB;
    numBytes-=u * MB;
    buf.append(u + " MB ");
  }
  if (numBytes >= KB) {
    u=numBytes / KB;
    numBytes-=u * KB;
    buf.append(u + " KB ");
  }
  buf.append(u + " B");
  return buf.toString();
}
