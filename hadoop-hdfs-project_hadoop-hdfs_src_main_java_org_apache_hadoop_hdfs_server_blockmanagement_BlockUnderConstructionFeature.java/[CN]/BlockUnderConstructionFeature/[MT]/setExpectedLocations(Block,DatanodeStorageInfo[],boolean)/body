{
  if (targets == null) {
    return;
  }
  int numLocations=0;
  for (  DatanodeStorageInfo target : targets) {
    if (target != null) {
      numLocations++;
    }
  }
  this.replicas=new ReplicaUnderConstruction[numLocations];
  int offset=0;
  for (int i=0; i < targets.length; i++) {
    if (targets[i] != null) {
      Block replicaBlock=isStriped ? new Block(block.getBlockId() + i,0,block.getGenerationStamp()) : block;
      replicas[offset++]=new ReplicaUnderConstruction(replicaBlock,targets[i],ReplicaState.RBW);
    }
  }
}
