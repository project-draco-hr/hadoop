{
  JobConf conf=new JobConf();
  conf.setInt(MRJobConfig.MAX_RESOURCES,rlConf.maxResources);
  conf.setLong(MRJobConfig.MAX_RESOURCES_MB,rlConf.maxResourcesMB);
  conf.setLong(MRJobConfig.MAX_SINGLE_RESOURCE_MB,rlConf.maxSingleResourceMB);
  conf.set("tmpfiles",buildPathString("file://tmpFiles",rlConf.numOfTmpFiles));
  conf.set("tmpjars",buildPathString("file://tmpjars",rlConf.numOfTmpLibJars));
  conf.set("tmparchives",buildPathString("file://tmpArchives",rlConf.numOfTmpArchives));
  conf.set(MRJobConfig.CACHE_ARCHIVES,buildPathString("file://cacheArchives",rlConf.numOfDCArchives));
  conf.set(MRJobConfig.CACHE_FILES,buildPathString("file://cacheFiles",rlConf.numOfDCFiles));
  if (rlConf.jobJar) {
    conf.setJar("file://jobjar.jar");
  }
  return conf;
}
