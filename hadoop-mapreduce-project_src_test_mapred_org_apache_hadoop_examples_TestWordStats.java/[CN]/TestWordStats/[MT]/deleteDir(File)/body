{
  if (dir.isDirectory()) {
    String[] children=dir.list();
    for (int i=0; i < children.length; i++) {
      boolean success=deleteDir(new File(dir,children[i]));
      if (!success) {
        System.out.println("Could not delete directory after test!");
        return false;
      }
    }
  }
  return dir.delete();
}
