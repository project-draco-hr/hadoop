{
  if (e instanceof SocketException || e instanceof SocketTimeoutException || e instanceof ClosedChannelException|| e instanceof ClosedByInterruptException) {
    return true;
  }
  String msg=e.getMessage();
  return null != msg && (msg.startsWith("An established connection was aborted") || msg.startsWith("Broken pipe") || msg.startsWith("Connection reset")|| msg.contains("java.nio.channels.SocketChannel"));
}
