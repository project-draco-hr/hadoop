{
  LOG.warn("checkDiskError: exception: ",e);
  if (e instanceof SocketException || e instanceof SocketTimeoutException || e instanceof ClosedByInterruptException|| e.getMessage().startsWith("Broken pipe")) {
    LOG.info("Not checking disk as checkDiskError was called on a network" + " related exception");
    return;
  }
  if (e.getMessage() != null && e.getMessage().startsWith("No space left on device")) {
    throw new DiskOutOfSpaceException("No space left on device");
  }
 else {
    checkDiskError();
  }
}
