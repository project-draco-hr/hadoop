{
  if (null == id) {
    id=bpRegistration;
  }
  if (storage.getStorageID().equals("")) {
    storage.setStorageID(bpRegistration.getDatanodeUuid());
    storage.writeAll();
    LOG.info("New storage id " + bpRegistration.getDatanodeUuid() + " is assigned to data-node "+ bpRegistration);
  }
 else   if (!storage.getStorageID().equals(bpRegistration.getDatanodeUuid())) {
    throw new IOException("Inconsistent storage IDs. Name-node returned " + bpRegistration.getDatanodeUuid() + ". Expecting "+ storage.getStorageID());
  }
  registerBlockPoolWithSecretManager(bpRegistration,blockPoolId);
}
