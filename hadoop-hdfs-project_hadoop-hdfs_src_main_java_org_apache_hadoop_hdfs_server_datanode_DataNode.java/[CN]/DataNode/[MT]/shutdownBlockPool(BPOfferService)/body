{
  blockPoolManager.remove(bpos);
  if (bpos.hasBlockPoolId()) {
    String bpId=bpos.getBlockPoolId();
    if (blockScanner != null) {
      blockScanner.removeBlockPool(bpId);
    }
    if (data != null) {
      data.shutdownBlockPool(bpId);
    }
    if (storage != null) {
      storage.removeBlockPoolStorage(bpId);
    }
  }
}
