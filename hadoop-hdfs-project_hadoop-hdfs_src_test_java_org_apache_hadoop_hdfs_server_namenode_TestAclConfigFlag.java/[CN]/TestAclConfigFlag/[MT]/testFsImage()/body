{
  initCluster(true,true);
  fs.mkdirs(PATH);
  fs.setAcl(PATH,Lists.newArrayList(aclEntry(DEFAULT,USER,"foo",READ_WRITE)));
  restart(true,true);
  try {
    restart(false,false);
    fail("expected IOException");
  }
 catch (  IOException e) {
    GenericTestUtils.assertExceptionContains("Failed to load an FSImage file",e);
  }
  restart(false,true);
  fs.removeAcl(PATH);
  restart(true,false);
}
