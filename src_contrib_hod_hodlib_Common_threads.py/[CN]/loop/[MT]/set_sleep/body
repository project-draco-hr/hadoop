def set_sleep(self, sleep, wait=None, offset=None):
    'Modify loop frequency paramaters.\n\n           sleep        - time to wait between function execs\n           wait         - time to wait before executing the first time\n           offset       - set true to sleep as an offset of the start of the\n                          last func exec instead of the end of the last func\n                          exec\n        '
    self.__sleep = sleep
    if (wait != None):
        self.__wait = wait
    if (offset != None):
        self.__offset = offset
