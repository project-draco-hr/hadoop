{
  List<FileStatus> files=super.listStatus(job);
  int len=files.size();
  for (int i=0; i < len; ++i) {
    FileStatus file=files.get(i);
    if (file.isDirectory()) {
      Path p=file.getPath();
      FileSystem fs=p.getFileSystem(job.getConfiguration());
      files.set(i,fs.getFileStatus(new Path(p,MapFile.DATA_FILE_NAME)));
    }
  }
  return files;
}
