{
  final ServerSocket socket=new ServerSocket(0);
  Thread t=new Thread(){
    @Override public void run(){
      while (true) {
        try {
          Socket s=socket.accept();
          s.getOutputStream().write(1234);
          s.shutdownOutput();
        }
 catch (        Exception e) {
          break;
        }
      }
    }
  }
;
  t.start();
  try {
    Configuration conf=new Configuration();
    URI fsUri=URI.create("hsftp://localhost:" + socket.getLocalPort());
    Exception ex=null;
    try {
      FileSystem.newInstance(fsUri,conf).getDelegationToken(null);
    }
 catch (    Exception e) {
      ex=e;
    }
    assertNotNull(ex);
    assertNotNull(ex.getCause());
    assertEquals("Remote host closed connection during handshake",ex.getCause().getMessage());
  }
  finally {
    t.interrupt();
  }
}
