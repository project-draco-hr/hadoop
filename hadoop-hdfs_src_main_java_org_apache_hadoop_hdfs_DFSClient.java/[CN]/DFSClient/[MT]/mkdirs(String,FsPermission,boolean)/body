{
  checkOpen();
  if (permission == null) {
    permission=FsPermission.getDefault();
  }
  FsPermission masked=permission.applyUMask(dfsClientConf.uMask);
  if (LOG.isDebugEnabled()) {
    LOG.debug(src + ": masked=" + masked);
  }
  try {
    return namenode.mkdirs(src,masked,createParent);
  }
 catch (  RemoteException re) {
    throw re.unwrapRemoteException(AccessControlException.class,InvalidPathException.class,FileAlreadyExistsException.class,FileNotFoundException.class,ParentNotDirectoryException.class,SafeModeException.class,NSQuotaExceededException.class,UnresolvedPathException.class);
  }
}
