{
  long newLength=BLOCKSIZE + BLOCKSIZE / 2;
  long diff=-BLOCKSIZE / 2;
  long usage=(BLOCKSIZE + BLOCKSIZE / 2) * REPLICATION;
  testTruncate(newLength,diff,usage);
  newLength=BLOCKSIZE;
  diff=-BLOCKSIZE / 2;
  usage=BLOCKSIZE * REPLICATION;
  testTruncate(newLength,diff,usage);
  testTruncate(0,-BLOCKSIZE,0);
}
