{
  long newLength=BLOCKSIZE + BLOCKSIZE / 2;
  long diff=BLOCKSIZE;
  long usage=BLOCKSIZE * 3 * REPLICATION;
  testTruncate(newLength,diff,usage);
  newLength=BLOCKSIZE;
  diff=-BLOCKSIZE / 2;
  usage=(BLOCKSIZE * 2 + BLOCKSIZE / 2) * REPLICATION;
  testTruncate(newLength,diff,usage);
  testTruncate(0,0,usage);
}
