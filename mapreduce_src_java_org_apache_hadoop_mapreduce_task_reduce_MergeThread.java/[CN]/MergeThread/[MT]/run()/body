{
  while (true) {
    try {
synchronized (this) {
        while (!inProgress) {
          wait();
        }
      }
      merge(inputs);
    }
 catch (    InterruptedException ie) {
      return;
    }
catch (    Throwable t) {
      reporter.reportException(t);
      return;
    }
 finally {
synchronized (this) {
        inputs=null;
        inProgress=false;
        notifyAll();
      }
    }
  }
}
