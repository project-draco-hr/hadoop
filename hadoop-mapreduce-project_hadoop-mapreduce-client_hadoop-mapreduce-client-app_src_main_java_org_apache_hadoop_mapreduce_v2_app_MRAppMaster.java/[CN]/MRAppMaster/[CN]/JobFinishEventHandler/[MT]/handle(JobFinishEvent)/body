{
  try {
    Thread.sleep(5000);
  }
 catch (  InterruptedException e) {
    e.printStackTrace();
  }
  LOG.info("Calling stop for all the services");
  try {
    stop();
  }
 catch (  Throwable t) {
    LOG.warn("Graceful stop failed ",t);
  }
  try {
    cleanupStagingDir();
  }
 catch (  IOException io) {
    LOG.warn("Failed to delete staging dir");
  }
  LOG.info("Exiting MR AppMaster..GoodBye!");
  sysexit();
}
