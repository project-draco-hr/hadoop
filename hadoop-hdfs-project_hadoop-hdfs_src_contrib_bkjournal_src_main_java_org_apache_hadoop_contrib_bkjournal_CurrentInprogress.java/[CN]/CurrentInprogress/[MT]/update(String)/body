{
  CurrentInprogressProto.Builder builder=CurrentInprogressProto.newBuilder();
  builder.setPath(path).setHostname(hostName);
  String content=TextFormat.printToString(builder.build());
  try {
    zkc.setData(this.currentInprogressNode,content.getBytes(UTF_8),this.versionNumberForPermission);
  }
 catch (  KeeperException e) {
    throw new IOException("Exception when setting the data " + "[" + content + "] to CurrentInprogress. ",e);
  }
catch (  InterruptedException e) {
    throw new IOException("Interrupted while setting the data " + "[" + content + "] to CurrentInprogress",e);
  }
  if (LOG.isDebugEnabled()) {
    LOG.debug("Updated data[" + content + "] to CurrentInprogress");
  }
}
