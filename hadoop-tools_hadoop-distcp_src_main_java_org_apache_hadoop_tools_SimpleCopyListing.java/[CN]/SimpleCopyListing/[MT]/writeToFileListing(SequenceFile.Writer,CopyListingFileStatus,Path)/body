{
  if (LOG.isDebugEnabled()) {
    LOG.debug("REL PATH: " + DistCpUtils.getRelativePath(sourcePathRoot,fileStatus.getPath()) + ", FULL PATH: "+ fileStatus.getPath());
  }
  if (!shouldCopy(fileStatus.getPath())) {
    return;
  }
  fileListWriter.append(new Text(DistCpUtils.getRelativePath(sourcePathRoot,fileStatus.getPath())),fileStatus);
  fileListWriter.sync();
  if (!fileStatus.isDirectory()) {
    totalBytesToCopy+=fileStatus.getLen();
  }
 else {
    totalDirs++;
  }
  totalPaths++;
  maybePrintStats();
}
