{
  if (blockReaders == null || blockReaders.length == 0) {
    return;
  }
  for (int i=0; i < groupSize; i++) {
    if (blockReaders[i] == null) {
      continue;
    }
    try {
      blockReaders[i].close();
    }
 catch (    IOException e) {
      DFSClient.LOG.error("error closing blockReader",e);
    }
    blockReaders[i]=null;
  }
  blockEnd=-1;
}
