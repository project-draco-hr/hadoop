{
  JobId jobId;
  Job job;
  try {
    jobId=MRApps.toJobID(jid);
  }
 catch (  YarnRuntimeException e) {
    throw new NotFoundException(e.getMessage());
  }
catch (  IllegalArgumentException e) {
    throw new NotFoundException(e.getMessage());
  }
  if (jobId == null) {
    throw new NotFoundException("job, " + jid + ", is not found");
  }
  job=appCtx.getJob(jobId);
  if (job == null) {
    throw new NotFoundException("job, " + jid + ", is not found");
  }
  return job;
}
