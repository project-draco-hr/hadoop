def _wait_for_volume(ec2_connection, volume_id):
    '\n  Waits until a volume becomes available.\n  '
    while True:
        volumes = ec2_connection.get_all_volumes([volume_id])
        if (volumes[0].status == 'available'):
            break
        sys.stdout.write('.')
        sys.stdout.flush()
        time.sleep(1)
