{
  double mag=r.getSchedulingResourceUsage().getCachedUsed(CommonNodeLabelsManager.ANY).getMemorySize();
  if (sizeBasedWeight) {
    double weight=Math.log1p(r.getSchedulingResourceUsage().getCachedDemand(CommonNodeLabelsManager.ANY).getMemorySize()) / Math.log(2);
    mag=mag / weight;
  }
  return mag;
}
