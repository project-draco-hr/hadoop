{
  DomainSocketWatcher watcher=new DomainSocketWatcher(interruptCheckPeriodMs);
  watcher.watcherThread.setUncaughtExceptionHandler(new Thread.UncaughtExceptionHandler(){
    @Override public void uncaughtException(    Thread thread,    Throwable t){
      trappedException=t;
    }
  }
);
  return watcher;
}
