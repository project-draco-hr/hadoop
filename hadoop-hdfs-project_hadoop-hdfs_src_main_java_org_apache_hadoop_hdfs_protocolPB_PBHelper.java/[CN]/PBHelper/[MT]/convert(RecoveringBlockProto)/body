{
  ExtendedBlock block=PBHelperClient.convert(b.getBlock().getB());
  DatanodeInfo[] locs=PBHelperClient.convert(b.getBlock().getLocsList());
  return (b.hasTruncateBlock()) ? new RecoveringBlock(block,locs,PBHelperClient.convert(b.getTruncateBlock())) : new RecoveringBlock(block,locs,b.getNewGenStamp());
}
