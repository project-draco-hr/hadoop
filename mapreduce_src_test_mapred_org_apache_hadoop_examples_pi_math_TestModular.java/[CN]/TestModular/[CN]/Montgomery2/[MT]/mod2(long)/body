{
  long r0=R - N;
  long r1=r0 << 1;
  if (r1 >= N)   r1-=N;
  for (long mask=Long.highestOneBit(y); mask > 0; mask>>>=1) {
    if ((mask & y) == 0) {
      r1=product.m(r0,r1);
      r0=product.m(r0,r0);
    }
 else {
      r0=product.m(r0,r1);
      r1=product.m(r1,r1);
    }
  }
  return product.m(r0,1);
}
