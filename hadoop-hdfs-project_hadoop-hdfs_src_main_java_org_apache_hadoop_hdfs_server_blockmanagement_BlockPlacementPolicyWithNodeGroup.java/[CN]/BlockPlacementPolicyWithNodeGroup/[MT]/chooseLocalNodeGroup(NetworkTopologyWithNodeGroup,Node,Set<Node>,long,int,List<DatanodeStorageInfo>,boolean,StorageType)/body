{
  if (localMachine == null) {
    return chooseRandom(NodeBase.ROOT,excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes,storageType);
  }
  try {
    return chooseRandom(clusterMap.getNodeGroup(localMachine.getNetworkLocation()),excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes,storageType);
  }
 catch (  NotEnoughReplicasException e1) {
    final DatanodeDescriptor newLocal=secondNode(localMachine,results);
    if (newLocal != null) {
      try {
        return chooseRandom(clusterMap.getNodeGroup(newLocal.getNetworkLocation()),excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes,storageType);
      }
 catch (      NotEnoughReplicasException e2) {
        return chooseRandom(NodeBase.ROOT,excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes,storageType);
      }
    }
 else {
      return chooseRandom(NodeBase.ROOT,excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes,storageType);
    }
  }
}
