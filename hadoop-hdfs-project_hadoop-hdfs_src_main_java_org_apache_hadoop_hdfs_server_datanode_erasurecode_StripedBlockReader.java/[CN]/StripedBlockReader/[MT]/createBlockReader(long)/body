{
  if (offsetInBlock >= block.getNumBytes()) {
    return null;
  }
  try {
    InetSocketAddress dnAddr=stripedReader.getSocketAddress4Transfer(source);
    Token<BlockTokenIdentifier> blockToken=datanode.getBlockAccessToken(block,EnumSet.of(BlockTokenIdentifier.AccessMode.READ));
    return RemoteBlockReader2.newBlockReader("dummy",block,blockToken,offsetInBlock,block.getNumBytes() - offsetInBlock,true,"",newConnectedPeer(block,dnAddr,blockToken,source),source,null,stripedReader.getCachingStrategy(),datanode.getTracer(),-1);
  }
 catch (  IOException e) {
    LOG.debug("Exception while creating remote block reader, datanode {}",source,e);
    return null;
  }
}
