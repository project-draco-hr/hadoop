{
  Statistics matchedStats=null;
  path=path.getFileSystem(conf).makeQualified(path);
  String scheme=path.toUri().getScheme();
  for (  Statistics stats : FileSystem.getAllStatistics()) {
    if (stats.getScheme().equals(scheme)) {
      matchedStats=stats;
      break;
    }
  }
  return matchedStats;
}
