{
  if (!isMapOrReduce()) {
    return -1;
  }
  if (isMapTask() && conf.getNumReduceTasks() > 0) {
    try {
      Path mapOutput=mapOutputFile.getOutputFile();
      FileSystem fs=mapOutput.getFileSystem(conf);
      return fs.getFileStatus(mapOutput).getLen();
    }
 catch (    IOException e) {
      LOG.warn("Could not find output size ",e);
    }
  }
  return -1;
}
