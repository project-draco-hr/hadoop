{
  int retries=MAX_RETRIES;
  while (true) {
    try {
      umbilical.done(getTaskID());
      LOG.info("Task '" + taskId + "' done.");
      return;
    }
 catch (    IOException ie) {
      LOG.warn("Failure signalling completion: " + StringUtils.stringifyException(ie));
      if (--retries == 0) {
        throw ie;
      }
    }
  }
}
