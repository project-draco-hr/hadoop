{
  if (!isDiskHealthCheckerEnabled) {
    return "";
  }
  StringBuilder report=new StringBuilder();
  List<String> failedLocalDirsList=localDirs.getFailedDirs();
  List<String> failedLogDirsList=logDirs.getFailedDirs();
  int numLocalDirs=localDirs.getGoodDirs().size() + failedLocalDirsList.size();
  int numLogDirs=logDirs.getGoodDirs().size() + failedLogDirsList.size();
  if (!failedLocalDirsList.isEmpty()) {
    report.append(failedLocalDirsList.size() + "/" + numLocalDirs+ " local-dirs turned bad: "+ StringUtils.join(",",failedLocalDirsList)+ ";");
  }
  if (!failedLogDirsList.isEmpty()) {
    report.append(failedLogDirsList.size() + "/" + numLogDirs+ " log-dirs turned bad: "+ StringUtils.join(",",failedLogDirsList));
  }
  return report.toString();
}
