{
  localDirs=new DirectoryCollection(conf.getTrimmedStrings(YarnConfiguration.NM_LOCAL_DIRS));
  logDirs=new DirectoryCollection(conf.getTrimmedStrings(YarnConfiguration.NM_LOG_DIRS));
  localDirsAllocator=new LocalDirAllocator(YarnConfiguration.NM_LOCAL_DIRS);
  logDirsAllocator=new LocalDirAllocator(YarnConfiguration.NM_LOG_DIRS);
}
