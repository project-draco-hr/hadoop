{
  String jars=conf.get("tmpjars");
  if (jars == null || jars.trim().isEmpty()) {
    return null;
  }
  String[] files=jars.split(",");
  List<URL> cp=new ArrayList<URL>();
  for (  String file : files) {
    Path tmp=new Path(file);
    if (tmp.getFileSystem(conf).equals(FileSystem.getLocal(conf))) {
      cp.add(FileSystem.getLocal(conf).pathToFile(tmp).toURI().toURL());
    }
 else {
      LOG.warn("The libjars file " + tmp + " is not on the local "+ "filesystem. It will not be added to the local classpath.");
    }
  }
  return cp.toArray(new URL[0]);
}
