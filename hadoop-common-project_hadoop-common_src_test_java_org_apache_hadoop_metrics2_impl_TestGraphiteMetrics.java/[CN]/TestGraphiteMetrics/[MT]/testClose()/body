{
  GraphiteSink sink=new GraphiteSink();
  Writer mockWriter=mock(Writer.class);
  Whitebox.setInternalState(sink,"writer",mockWriter);
  try {
    sink.close();
  }
 catch (  IOException ioe) {
    ioe.printStackTrace();
  }
  try {
    verify(mockWriter).close();
  }
 catch (  IOException ioe) {
    ioe.printStackTrace();
  }
}
