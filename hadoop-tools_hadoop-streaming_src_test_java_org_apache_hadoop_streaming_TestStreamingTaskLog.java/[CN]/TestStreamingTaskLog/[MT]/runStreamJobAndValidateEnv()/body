{
  int returnStatus=-1;
  boolean mayExit=false;
  StreamJob job=new StreamJob(genArgs(),mayExit);
  returnStatus=job.go();
  assertEquals("StreamJob failed.",0,returnStatus);
  String env=MapReduceTestUtil.readOutput(outputPath,mr.createJobConf());
  long logSize=USERLOG_LIMIT_KB * 1024;
  assertTrue("environment set for child is wrong",env.contains("INFO,CLA") && env.contains("-Dyarn.app.mapreduce.container.log.dir=") && env.contains("-Dyarn.app.mapreduce.container.log.filesize=" + logSize)&& env.contains("-Dlog4j.configuration="));
}
