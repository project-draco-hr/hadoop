{
  List<ResourceRequest> reqs=new ArrayList<ResourceRequest>();
  for (  String host : hosts) {
    ResourceRequest hostReq=createResourceReq(host,memory,priority,containers);
    reqs.add(hostReq);
    ResourceRequest rackReq=createResourceReq("/default-rack",memory,priority,containers);
    reqs.add(rackReq);
  }
  ResourceRequest offRackReq=createResourceReq("*",memory,priority,containers);
  reqs.add(offRackReq);
  return reqs;
}
