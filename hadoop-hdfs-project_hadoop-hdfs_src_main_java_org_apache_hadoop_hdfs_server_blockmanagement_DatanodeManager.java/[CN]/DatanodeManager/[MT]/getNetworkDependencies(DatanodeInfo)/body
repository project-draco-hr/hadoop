{
  List<String> dependencies=Collections.emptyList();
  if (dnsToSwitchMapping instanceof DNSToSwitchMappingWithDependency) {
    dependencies=((DNSToSwitchMappingWithDependency)dnsToSwitchMapping).getDependency(node.getHostName());
    if (dependencies == null) {
      LOG.error("The dependency call returned null for host " + node.getHostName());
      throw new UnresolvedTopologyException("The dependency call returned " + "null for host " + node.getHostName());
    }
  }
  return dependencies;
}
