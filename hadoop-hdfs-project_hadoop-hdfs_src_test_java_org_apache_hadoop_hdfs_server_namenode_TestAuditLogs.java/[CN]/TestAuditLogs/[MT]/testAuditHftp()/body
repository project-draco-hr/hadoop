{
  final Path file=new Path(fnames[0]);
  final String hftpUri="hftp://" + conf.get(DFSConfigKeys.DFS_NAMENODE_HTTP_ADDRESS_KEY);
  HftpFileSystem hftpFs=null;
  setupAuditLogs();
  try {
    hftpFs=(HftpFileSystem)new Path(hftpUri).getFileSystem(conf);
    InputStream istream=hftpFs.open(file);
    @SuppressWarnings("unused") int val=istream.read();
    istream.close();
    verifyAuditLogs(true);
  }
  finally {
    if (hftpFs != null)     hftpFs.close();
  }
}
