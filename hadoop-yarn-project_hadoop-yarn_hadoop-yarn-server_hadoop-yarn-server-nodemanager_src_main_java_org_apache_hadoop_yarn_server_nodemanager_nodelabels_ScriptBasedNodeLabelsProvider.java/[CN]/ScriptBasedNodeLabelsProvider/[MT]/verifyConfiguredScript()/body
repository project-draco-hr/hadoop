{
  boolean invalidConfiguration=false;
  if (nodeLabelsScriptPath == null || nodeLabelsScriptPath.trim().isEmpty()) {
    invalidConfiguration=true;
  }
 else {
    File f=new File(nodeLabelsScriptPath);
    invalidConfiguration=!f.exists() || !FileUtil.canExecute(f);
  }
  if (invalidConfiguration) {
    throw new IOException("Distributed Node labels provider script \"" + nodeLabelsScriptPath + "\" is not configured properly. Please check whether the script "+ "path exists, owner and the access rights are suitable for NM "+ "process to execute it");
  }
}
