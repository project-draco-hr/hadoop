{
  int lvl_a=a.getLevel();
  int lvl_b=b.getLevel();
  int retval=0;
  if (lvl_a > lvl_b) {
    retval=lvl_a - lvl_b;
    for (int i=0; i < retval; ++i) {
      a=a.getParent();
    }
  }
 else   if (lvl_a < lvl_b) {
    retval=lvl_b - lvl_a;
    for (int i=0; i < retval; ++i) {
      b=b.getParent();
    }
  }
  while (a != b) {
    a=a.getParent();
    b=b.getParent();
    ++retval;
  }
  return retval;
}
