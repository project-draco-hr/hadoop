{
  if (limit > bytes.length) {
    limit=bytes.length;
  }
  int len=limit * 2;
  len+=limit;
  len+=2;
  char[] hexChars=new char[len];
  hexChars[0]='0';
  hexChars[1]='x';
  for (int j=0; j < limit; j++) {
    int v=bytes[j] & 0xFF;
    hexChars[j * 3 + 2]=HEX_CHARS[v >>> 4];
    hexChars[j * 3 + 3]=HEX_CHARS[v & 0x0F];
    hexChars[j * 3 + 4]=' ';
  }
  return new String(hexChars);
}
