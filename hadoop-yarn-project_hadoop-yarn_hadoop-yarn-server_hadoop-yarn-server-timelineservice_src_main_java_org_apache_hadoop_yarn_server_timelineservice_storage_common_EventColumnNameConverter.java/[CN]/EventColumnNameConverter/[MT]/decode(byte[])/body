{
  byte[][] components=Separator.VALUES.split(bytes,SEGMENT_SIZES);
  if (components.length != 3) {
    throw new IllegalArgumentException("the column name is not valid");
  }
  String id=Separator.decode(Bytes.toString(components[0]),Separator.VALUES,Separator.TAB,Separator.SPACE);
  Long ts=LongConverter.invertLong(Bytes.toLong(components[1]));
  String infoKey=components[2].length == 0 ? null : Separator.decode(Bytes.toString(components[2]),Separator.VALUES,Separator.TAB,Separator.SPACE);
  return new EventColumnName(id,ts,infoKey);
}
