{
  final String path="hdfs://" + cluster.getNameNode().getHostAndPort() + "/tmp";
  MetricsSystem ms=initMetricsSystem(path,true,false);
  new MyMetrics1().registerWith(ms);
  ms.publishMetricsNow();
  shutdownHdfs();
  ErrorSink.errored=false;
  ms.stop();
  assertFalse("An exception was generated stopping sink " + "while HDFS was unavailable, even though the sink is set to " + "ignore errors",ErrorSink.errored);
  ms.shutdown();
}
