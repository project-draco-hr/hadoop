{
  int i=1;
  while (i < 40) {
    try {
      cli.ping();
      break;
    }
 catch (    Exception e) {
      i++;
      Thread.sleep(1000);
      LOG.info("Waiting for Jobtracker on host : " + cli.getHostName() + " to come up.");
    }
  }
  for (  AbstractDaemonClient tcli : cluster.getTTClients()) {
    i=1;
    while (i < 40) {
      try {
        tcli.ping();
        break;
      }
 catch (      Exception e) {
        i++;
        Thread.sleep(1000);
        LOG.info("Waiting for Tasktracker on host : " + tcli.getHostName() + " to come up.");
      }
    }
  }
}
