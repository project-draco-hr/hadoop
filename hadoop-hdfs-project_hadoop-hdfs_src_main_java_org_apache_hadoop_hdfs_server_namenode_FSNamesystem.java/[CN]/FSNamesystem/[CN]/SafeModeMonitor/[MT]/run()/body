{
  while (fsRunning) {
    writeLock();
    try {
      if (safeMode == null) {
        break;
      }
      if (safeMode.canLeave()) {
        safeMode.leave();
        smmthread=null;
        break;
      }
    }
  finally {
      writeUnlock();
    }
    try {
      Thread.sleep(recheckInterval);
    }
 catch (    InterruptedException ie) {
    }
  }
  if (!fsRunning) {
    LOG.info("NameNode is being shutdown, exit SafeModeMonitor thread");
  }
}
