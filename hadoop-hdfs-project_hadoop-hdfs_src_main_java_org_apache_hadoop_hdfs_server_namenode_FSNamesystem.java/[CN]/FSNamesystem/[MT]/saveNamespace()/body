{
  checkSuperuserPrivilege();
  readLock();
  try {
    if (!isInSafeMode()) {
      throw new IOException("Safe mode should be turned ON " + "in order to create namespace image.");
    }
    getFSImage().saveNamespace(this);
    LOG.info("New namespace image has been created");
  }
  finally {
    readUnlock();
  }
}
