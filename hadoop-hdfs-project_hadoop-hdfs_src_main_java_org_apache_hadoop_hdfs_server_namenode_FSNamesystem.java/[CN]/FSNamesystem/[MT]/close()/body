{
  fsRunning=false;
  try {
    stopCommonServices();
    if (smmthread != null)     smmthread.interrupt();
  }
  finally {
    try {
      stopActiveServices();
      stopStandbyServices();
    }
 catch (    IOException ie) {
    }
 finally {
      IOUtils.cleanup(LOG,dir);
      IOUtils.cleanup(LOG,fsImage);
    }
  }
}
