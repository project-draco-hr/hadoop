{
  writeLock();
  try {
    if (!isInSafeMode()) {
      NameNode.stateChangeLog.info("STATE* Safe mode is already OFF.");
      return;
    }
    if (upgradeManager.getUpgradeState())     throw new SafeModeException("Distributed upgrade is in progress",safeMode);
    safeMode.leave(checkForUpgrades);
  }
  finally {
    writeUnlock();
  }
}
