{
  checkOperation(OperationCategory.WRITE);
  final FSPermissionChecker pc=isPermissionEnabled ? getPermissionChecker() : null;
  writeLock();
  boolean success=false;
  try {
    checkOperation(OperationCategory.WRITE);
    if (isInSafeMode()) {
      throw new SafeModeException("Cannot remove cache pool " + cachePoolName,safeMode);
    }
    if (pc != null) {
      pc.checkSuperuserPrivilege();
    }
    cacheManager.removeCachePool(cachePoolName);
    getEditLog().logRemoveCachePool(cachePoolName,logRetryCache);
    success=true;
  }
  finally {
    writeUnlock();
    if (isAuditEnabled() && isExternalInvocation()) {
      String poolNameStr="{poolName: " + cachePoolName + "}";
      logAuditEvent(success,"removeCachePool",poolNameStr,null,null);
    }
  }
  getEditLog().logSync();
}
