{
  checkSuperuserPrivilege();
  checkOperation(OperationCategory.WRITE);
  writeLock();
  try {
    checkOperation(OperationCategory.WRITE);
    checkNameNodeSafeMode("Cannot set quota on " + path);
    dir.setQuota(path,nsQuota,dsQuota);
  }
  finally {
    writeUnlock();
  }
  getEditLog().logSync();
}
