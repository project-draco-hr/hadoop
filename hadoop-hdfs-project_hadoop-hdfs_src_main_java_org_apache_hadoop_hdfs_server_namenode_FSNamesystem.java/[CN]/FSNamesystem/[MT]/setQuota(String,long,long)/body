{
  writeLock();
  try {
    checkOperation(OperationCategory.WRITE);
    if (isInSafeMode()) {
      throw new SafeModeException("Cannot set quota on " + path,safeMode);
    }
    if (isPermissionEnabled) {
      checkSuperuserPrivilege();
    }
    dir.setQuota(path,nsQuota,dsQuota);
  }
  finally {
    writeUnlock();
  }
  getEditLog().logSync();
}
