{
  writeLock();
  try {
    checkSuperuserPrivilege();
    File file=new File(System.getProperty("hadoop.log.dir"),filename);
    PrintWriter out=new PrintWriter(new BufferedWriter(new FileWriter(file,true)));
    metaSave(out);
    out.flush();
    out.close();
  }
  finally {
    writeUnlock();
  }
}
