{
  writeLock();
  try {
    checkOperation(OperationCategory.WRITE);
    if (isInSafeMode()) {
      throw new SafeModeException("Cannot allow snapshot for " + path,safeMode);
    }
    checkOwner(path);
    snapshotManager.setSnapshottable(path,256);
    getEditLog().logAllowSnapshot(path);
  }
  finally {
    writeUnlock();
  }
  getEditLog().logSync();
  if (auditLog.isInfoEnabled() && isExternalInvocation()) {
    logAuditEvent(UserGroupInformation.getCurrentUser(),getRemoteIp(),"allowSnapshot",path,null,null);
  }
}
