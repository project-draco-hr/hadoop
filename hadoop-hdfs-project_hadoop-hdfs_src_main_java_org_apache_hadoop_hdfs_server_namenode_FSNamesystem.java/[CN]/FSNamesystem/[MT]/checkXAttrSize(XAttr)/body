{
  if (xattrMaxSize == 0) {
    return;
  }
  int size=xAttr.getName().getBytes(Charsets.UTF_8).length;
  if (xAttr.getValue() != null) {
    size+=xAttr.getValue().length;
  }
  if (size > xattrMaxSize) {
    throw new HadoopIllegalArgumentException("The XAttr is too big. The maximum combined size of the" + " name and value is " + xattrMaxSize + ", but the total size is "+ size);
  }
}
