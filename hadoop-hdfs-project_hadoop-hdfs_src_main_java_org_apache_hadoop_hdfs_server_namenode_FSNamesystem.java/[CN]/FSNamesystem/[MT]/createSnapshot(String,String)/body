{
  writeLock();
  try {
    checkOperation(OperationCategory.WRITE);
    if (isInSafeMode()) {
      throw new SafeModeException("Cannot create snapshot for " + path,safeMode);
    }
    checkOwner(path);
    dir.writeLock();
    try {
      snapshotManager.createSnapshot(snapshotName,path);
    }
  finally {
      dir.writeUnlock();
    }
    getEditLog().logCreateSnapshot(snapshotName,path);
  }
  finally {
    writeUnlock();
  }
  getEditLog().logSync();
  if (auditLog.isInfoEnabled() && isExternalInvocation()) {
    Path snapshotRoot=new Path(path,HdfsConstants.DOT_SNAPSHOT_DIR + "/" + snapshotName);
    logAuditEvent(UserGroupInformation.getCurrentUser(),getRemoteIp(),"createSnapshot",path,snapshotRoot.toString(),null);
  }
}
