{
  if (!isAccessTimeSupported() && atime != -1) {
    throw new IOException("Access time for hdfs is not configured. " + " Please set dfs.support.accessTime configuration parameter.");
  }
  writeLock();
  try {
    checkOperation(OperationCategory.WRITE);
    if (isPermissionEnabled) {
      checkPathAccess(src,FsAction.WRITE);
    }
    INode inode=dir.getINode(src);
    if (inode != null) {
      dir.setTimes(src,inode,mtime,atime,true);
      if (auditLog.isInfoEnabled() && isExternalInvocation()) {
        final HdfsFileStatus stat=dir.getFileInfo(src,false);
        logAuditEvent(UserGroupInformation.getCurrentUser(),Server.getRemoteIp(),"setTimes",src,null,stat);
      }
    }
 else {
      throw new FileNotFoundException("File/Directory " + src + " does not exist.");
    }
  }
  finally {
    writeUnlock();
  }
}
