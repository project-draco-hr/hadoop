{
  INodeFileUnderConstruction cons=new INodeFileUnderConstruction(file.getLocalNameBytes(),file.getFileReplication(),file.getModificationTime(),file.getPreferredBlockSize(),file.getBlocks(),file.getPermissionStatus(),leaseHolder,clientMachine,clientNode);
  dir.replaceINodeFile(src,file,cons,latestSnapshot);
  leaseManager.addLease(cons.getClientName(),src);
  LocatedBlock ret=blockManager.convertLastBlockToUnderConstruction(cons);
  if (writeToEditLog) {
    getEditLog().logOpenFile(src,cons);
  }
  return ret;
}
