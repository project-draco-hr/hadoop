{
  final Map<String,Map<String,Object>> info=new HashMap<String,Map<String,Object>>();
  final List<DatanodeDescriptor> decomNodeList=blockManager.getDatanodeManager().getDecommissioningNodes();
  for (  DatanodeDescriptor node : decomNodeList) {
    Map<String,Object> innerinfo=ImmutableMap.<String,Object>builder().put("xferaddr",node.getXferAddr()).put("underReplicatedBlocks",node.decommissioningStatus.getUnderReplicatedBlocks()).put("decommissionOnlyReplicas",node.decommissioningStatus.getDecommissionOnlyReplicas()).put("underReplicateInOpenFiles",node.decommissioningStatus.getUnderReplicatedInOpenFiles()).build();
    info.put(node.getHostName() + ":" + node.getXferPort(),innerinfo);
  }
  return JSON.toString(info);
}
