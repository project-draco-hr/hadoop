{
  writeLock();
  try {
    checkSuperuserPrivilege();
    if (arg.equals("check"))     return getFSImage().getStorage().getRestoreFailedStorage();
    boolean val=arg.equals("true");
    getFSImage().getStorage().setRestoreFailedStorage(val);
    return val;
  }
  finally {
    writeUnlock();
  }
}
