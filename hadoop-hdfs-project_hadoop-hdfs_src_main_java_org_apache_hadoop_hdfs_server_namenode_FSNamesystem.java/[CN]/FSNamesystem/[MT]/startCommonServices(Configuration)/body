{
  this.registerMBean();
  writeLock();
  try {
    nnResourceChecker=new NameNodeResourceChecker(conf);
    checkAvailableResources();
    setBlockTotal();
    blockManager.activate(conf);
    this.nnrmthread=new Daemon(new NameNodeResourceMonitor());
    nnrmthread.start();
  }
  finally {
    writeUnlock();
  }
  registerMXBean();
  DefaultMetricsSystem.instance().register(this);
}
