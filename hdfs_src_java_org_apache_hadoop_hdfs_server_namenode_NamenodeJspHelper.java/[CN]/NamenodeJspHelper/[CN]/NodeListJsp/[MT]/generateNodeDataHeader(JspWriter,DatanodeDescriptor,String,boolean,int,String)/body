{
  String url="http://" + d.getHostName() + ":"+ d.getInfoPort()+ "/browseDirectory.jsp?namenodeInfoPort="+ nnHttpPort+ "&dir="+ URLEncoder.encode("/","UTF-8")+ JspHelper.getUrlParam(JspHelper.NAMENODE_ADDRESS,nnaddr);
  String name=d.getHostName() + ":" + d.getPort();
  if (!name.matches("\\d+\\.\\d+.\\d+\\.\\d+.*"))   name=name.replaceAll("\\.[^.:]*","");
  int idx=(suffix != null && name.endsWith(suffix)) ? name.indexOf(suffix) : -1;
  out.print(rowTxt() + "<td class=\"name\"><a title=\"" + d.getHost()+ ":"+ d.getPort()+ "\" href=\""+ url+ "\">"+ ((idx > 0) ? name.substring(0,idx) : name)+ "</a>"+ ((alive) ? "" : "\n"));
}
