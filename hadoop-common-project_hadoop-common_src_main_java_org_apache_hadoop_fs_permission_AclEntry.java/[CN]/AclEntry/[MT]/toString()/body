{
  StringBuilder sb=new StringBuilder();
  if (scope == AclEntryScope.DEFAULT) {
    sb.append("default:");
  }
  if (type != null) {
    sb.append(type.toString().toLowerCase());
  }
  sb.append(':');
  if (name != null) {
    sb.append(name);
  }
  sb.append(':');
  if (permission != null) {
    sb.append(permission.SYMBOL);
  }
  return sb.toString();
}
