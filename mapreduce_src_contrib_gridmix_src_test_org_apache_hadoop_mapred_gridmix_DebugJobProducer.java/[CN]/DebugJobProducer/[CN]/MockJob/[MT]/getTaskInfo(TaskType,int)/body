{
switch (taskType) {
case MAP:
    return new TaskInfo(m_bytesIn[taskNumber],m_recsIn[taskNumber],m_bytesOut[taskNumber],m_recsOut[taskNumber],-1);
case REDUCE:
  return new TaskInfo(r_bytesIn[taskNumber],r_recsIn[taskNumber],r_bytesOut[taskNumber],r_recsOut[taskNumber],-1);
default :
throw new IllegalArgumentException("Not interested");
}
}
