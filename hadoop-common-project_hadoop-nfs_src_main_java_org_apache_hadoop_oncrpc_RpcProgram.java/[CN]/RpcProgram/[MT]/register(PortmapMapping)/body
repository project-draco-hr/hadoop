{
  XDR mappingRequest=PortmapRequest.create(mapEntry);
  SimpleUdpClient registrationClient=new SimpleUdpClient(host,RPCB_PORT,mappingRequest);
  try {
    registrationClient.run();
  }
 catch (  IOException e) {
    LOG.error("Registration failure with " + host + ":"+ port+ ", portmap entry: "+ mapEntry);
    throw new RuntimeException("Registration failure");
  }
}
