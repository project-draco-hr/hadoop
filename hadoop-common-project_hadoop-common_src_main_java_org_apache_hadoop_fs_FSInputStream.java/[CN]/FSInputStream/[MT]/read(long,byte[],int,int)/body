{
  validatePositionedReadArgs(position,buffer,offset,length);
  if (length == 0) {
    return 0;
  }
synchronized (this) {
    long oldPos=getPos();
    int nread=-1;
    try {
      seek(position);
      nread=read(buffer,offset,length);
    }
 catch (    EOFException e) {
      LOG.debug("Downgrading EOFException raised trying to" + " read {} bytes at offset {}",length,offset,e);
    }
 finally {
      seek(oldPos);
    }
    return nread;
  }
}
