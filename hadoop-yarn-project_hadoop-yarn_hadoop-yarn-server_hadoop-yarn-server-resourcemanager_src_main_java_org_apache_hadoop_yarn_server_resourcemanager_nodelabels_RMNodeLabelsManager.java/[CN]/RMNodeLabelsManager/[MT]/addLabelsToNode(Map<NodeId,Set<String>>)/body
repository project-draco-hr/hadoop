{
  try {
    writeLock.lock();
    Map<String,Host> before=cloneNodeMap(addedLabelsToNode.keySet());
    super.addLabelsToNode(addedLabelsToNode);
    Map<String,Host> after=cloneNodeMap(addedLabelsToNode.keySet());
    updateResourceMappings(before,after);
  }
  finally {
    writeLock.unlock();
  }
}
