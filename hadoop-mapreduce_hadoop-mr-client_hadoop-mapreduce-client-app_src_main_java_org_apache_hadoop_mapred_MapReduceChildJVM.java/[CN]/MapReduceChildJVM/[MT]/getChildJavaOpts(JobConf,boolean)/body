{
  if (isMapTask) {
    return jobConf.get(JobConf.MAPRED_MAP_TASK_JAVA_OPTS,jobConf.get(JobConf.MAPRED_TASK_JAVA_OPTS,JobConf.DEFAULT_MAPRED_TASK_JAVA_OPTS));
  }
  return jobConf.get(JobConf.MAPRED_REDUCE_TASK_JAVA_OPTS,jobConf.get(JobConf.MAPRED_TASK_JAVA_OPTS,JobConf.DEFAULT_MAPRED_TASK_JAVA_OPTS));
}
