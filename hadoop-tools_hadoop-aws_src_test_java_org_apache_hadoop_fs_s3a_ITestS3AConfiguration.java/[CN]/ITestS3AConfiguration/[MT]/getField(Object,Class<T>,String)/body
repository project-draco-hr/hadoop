{
  Object obj=FieldUtils.readField(target,fieldName,true);
  assertNotNull(String.format("Could not read field named %s in object with class %s.",fieldName,target.getClass().getName()),obj);
  assertTrue(String.format("Unexpected type found for field named %s, expected %s, actual %s.",fieldName,fieldType.getName(),obj.getClass().getName()),fieldType.isAssignableFrom(obj.getClass()));
  return fieldType.cast(obj);
}
