{
  for (int i=0; i < decoded.length; i++) {
    decoded[i]=0;
  }
  for (int i=0; i < inputs.length; i++) {
    inputs[i]=readBufs[i][idx] & 0x000000FF;
  }
  reedSolomonCode.decode(inputs,erasedLocations,decoded);
  for (int i=0; i < decoded.length; i++) {
    writeBufs[i][idx]=(byte)decoded[i];
  }
}
