{
synchronized (dataQueue) {
    try {
      while (!isClosed() && dataQueue.size() + ackQueue.size() > dfsClient.getConf().writeMaxPackets) {
        try {
          dataQueue.wait();
        }
 catch (        InterruptedException e) {
          Thread.currentThread().interrupt();
          break;
        }
      }
      checkClosed();
      queueCurrentPacket();
    }
 catch (    ClosedChannelException e) {
    }
  }
}
