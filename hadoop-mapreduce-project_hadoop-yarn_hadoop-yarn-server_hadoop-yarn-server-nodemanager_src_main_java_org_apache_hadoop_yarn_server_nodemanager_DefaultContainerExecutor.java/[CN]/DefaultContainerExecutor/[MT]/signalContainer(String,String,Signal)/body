{
  final String sigpid=ContainerExecutor.isSetsidAvailable ? "-" + pid : pid;
  LOG.debug("Sending signal " + signal.getValue() + " to pid "+ sigpid+ " as user "+ user);
  try {
    sendSignal(sigpid,Signal.NULL);
  }
 catch (  ExitCodeException e) {
    return false;
  }
  try {
    sendSignal(sigpid,signal);
  }
 catch (  IOException e) {
    try {
      sendSignal(sigpid,Signal.NULL);
    }
 catch (    IOException ignore) {
      return false;
    }
    throw e;
  }
  return true;
}
