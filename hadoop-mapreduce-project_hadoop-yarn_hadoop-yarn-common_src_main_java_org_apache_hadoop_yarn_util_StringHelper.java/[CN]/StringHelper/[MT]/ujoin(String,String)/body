{
  StringBuilder sb=new StringBuilder();
  boolean first=true;
  for (  String part : args) {
    if (first) {
      first=false;
      if (part.startsWith("#") || isAbsUrl(part)) {
        sb.append(part);
      }
 else {
        sb.append('/').append(pathPrefix).append('/').append(part);
      }
    }
 else {
      sb.append('/').append(part);
    }
  }
  return sb.toString();
}
