{
  Path file=getDefaultWorkFile(job,"");
  final DataOutputStream fileOut;
  fileOut=new DataOutputStream(CompressionEmulationUtil.getPossiblyCompressedOutputStream(file,job.getConfiguration()));
  return new RecordWriter<K,GridmixRecord>(){
    @Override public void write(    K ignored,    GridmixRecord value) throws IOException {
      value.write(fileOut);
    }
    @Override public void close(    TaskAttemptContext ctxt) throws IOException {
      fileOut.close();
    }
  }
;
}
