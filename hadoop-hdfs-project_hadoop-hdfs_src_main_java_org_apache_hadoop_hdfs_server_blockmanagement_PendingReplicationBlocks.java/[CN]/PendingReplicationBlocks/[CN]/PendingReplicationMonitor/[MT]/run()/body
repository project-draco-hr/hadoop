{
  while (fsRunning) {
    long period=Math.min(DEFAULT_RECHECK_INTERVAL,timeout);
    try {
      pendingReplicationCheck();
      Thread.sleep(period);
    }
 catch (    InterruptedException ie) {
      if (LOG.isDebugEnabled()) {
        LOG.debug("PendingReplicationMonitor thread is interrupted.",ie);
      }
    }
  }
}
