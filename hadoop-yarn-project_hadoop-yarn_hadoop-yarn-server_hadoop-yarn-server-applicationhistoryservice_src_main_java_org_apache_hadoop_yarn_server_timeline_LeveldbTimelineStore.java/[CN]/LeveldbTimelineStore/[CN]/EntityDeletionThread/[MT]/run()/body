{
  while (true) {
    long timestamp=System.currentTimeMillis() - ttl;
    try {
      discardOldEntities(timestamp);
      Thread.sleep(ttlInterval);
    }
 catch (    IOException e) {
      LOG.error(e);
    }
catch (    InterruptedException e) {
      LOG.info("Deletion thread received interrupt, exiting");
      break;
    }
  }
}
