{
  ApplicationId applicationID=ConverterUtils.toApplicationId(this.recordFactory,$(APPLICATION_ID));
  Application app=this.nmContext.getApplications().get(applicationID);
  Map<ContainerId,Container> containers=app.getContainers();
  info("Application's information")._("ApplicationId",ConverterUtils.toString(app.getAppId()))._("ApplicationState",app.getApplicationState().toString())._("User",app.getUser());
  TABLE<Hamlet> containersListBody=html._(InfoBlock.class).table("#containers");
  for (  ContainerId containerId : containers.keySet()) {
    String containerIdStr=ConverterUtils.toString(containerId);
    containersListBody.tr().td().a(url("container",containerIdStr),containerIdStr)._()._();
  }
  containersListBody._();
}
