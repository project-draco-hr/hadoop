{
  this.zkPath=path;
  String finalisedData;
  if (inprogress) {
    finalisedData=String.format("%d;%d;%d",version,ledgerId,firstTxId);
  }
 else {
    finalisedData=String.format("%d;%d;%d;%d",version,ledgerId,firstTxId,lastTxId);
  }
  try {
    zkc.create(path,finalisedData.getBytes(),Ids.OPEN_ACL_UNSAFE,CreateMode.PERSISTENT);
  }
 catch (  KeeperException.NodeExistsException nee) {
    throw nee;
  }
catch (  KeeperException e) {
    throw new IOException("Error creating ledger znode",e);
  }
catch (  InterruptedException ie) {
    throw new IOException("Interrupted creating ledger znode",ie);
  }
}
