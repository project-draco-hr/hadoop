{
  String name=null;
  if (config.get(DFS_DATANODE_HOST_NAME_KEY) != null) {
    name=config.get(DFS_DATANODE_HOST_NAME_KEY);
  }
  if (name == null) {
    name=DNS.getDefaultHost(config.get("dfs.datanode.dns.interface","default"),config.get("dfs.datanode.dns.nameserver","default"));
  }
  return name;
}
