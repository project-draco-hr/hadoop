{
  while (shouldRun) {
    try {
      blockPoolManager.joinAll();
      if (blockPoolManager.getAllNamenodeThreads() != null && blockPoolManager.getAllNamenodeThreads().length == 0) {
        shouldRun=false;
      }
      Thread.sleep(2000);
    }
 catch (    InterruptedException ex) {
      LOG.warn("Received exception in Datanode#join: " + ex);
    }
  }
}
