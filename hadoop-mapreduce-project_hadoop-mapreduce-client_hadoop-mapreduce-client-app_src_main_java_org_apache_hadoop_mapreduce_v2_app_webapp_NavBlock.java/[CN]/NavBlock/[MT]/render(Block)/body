{
  String rmweb=$(RM_WEB);
  DIV<Hamlet> nav=html.div("#nav").h3("Cluster").ul().li().a(url(rmweb,prefix(),"cluster"),"About")._().li().a(url(rmweb,prefix(),"apps"),"Applications")._().li().a(url(rmweb,prefix(),"scheduler"),"Scheduler")._()._().h3("Application").ul().li().a(url("app/info"),"About")._().li().a(url("app"),"Jobs")._()._();
