    String jobid=MRApps.toString(app.getJob().getID());
    nav.h3("Job").ul().li().a(url("job",jobid),"Overview")._().li().a(url("jobcounters",jobid),"Counters")._().li().a(url("tasks",jobid,"m"),"Map tasks")._().li().a(url("tasks",jobid,"r"),"Reduce tasks")._()._();
  }
  nav.h3("Tools").ul().li().a("/conf","Configuration")._().li().a("/logs","Local logs")._().li().a("/stacks","Server stacks")._().li().a("/metrics","Server metrics")._()._()._().div("#themeswitcher")._();
}
