{
  shouldRun=true;
  checkpointConf=new CheckpointConf(conf);
  String fullInfoAddr=conf.get(DFS_NAMENODE_BACKUP_HTTP_ADDRESS_KEY,DFS_NAMENODE_BACKUP_HTTP_ADDRESS_DEFAULT);
  infoBindAddress=fullInfoAddr.substring(0,fullInfoAddr.indexOf(":"));
  LOG.info("Checkpoint Period : " + checkpointConf.getPeriod() + " secs "+ "("+ checkpointConf.getPeriod() / 60 + " min)");
  LOG.info("Transactions count is  : " + checkpointConf.getTxnCount() + ", to trigger checkpoint");
}
