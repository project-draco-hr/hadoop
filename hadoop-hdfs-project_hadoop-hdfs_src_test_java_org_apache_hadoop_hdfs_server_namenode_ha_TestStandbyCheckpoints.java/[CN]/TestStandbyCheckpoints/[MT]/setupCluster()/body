{
  Configuration conf=new Configuration();
  conf.setInt(DFSConfigKeys.DFS_NAMENODE_CHECKPOINT_CHECK_PERIOD_KEY,1);
  conf.setInt(DFSConfigKeys.DFS_NAMENODE_CHECKPOINT_TXNS_KEY,5);
  MiniDFSNNTopology topology=new MiniDFSNNTopology().addNameservice(new MiniDFSNNTopology.NSConf(null).addNN(new MiniDFSNNTopology.NNConf("nn1").setHttpPort(10001)).addNN(new MiniDFSNNTopology.NNConf("nn2").setHttpPort(10002)));
  cluster=new MiniDFSCluster.Builder(conf).nnTopology(topology).numDataNodes(0).build();
  cluster.waitActive();
  nn0=cluster.getNameNode(0);
  nn1=cluster.getNameNode(1);
  fs=TestDFSClientFailover.configureFailoverFs(cluster,conf);
  nn1.getNamesystem().getEditLogTailer().setSleepTime(250);
  nn1.getNamesystem().getEditLogTailer().interrupt();
  cluster.transitionToActive(0);
}
