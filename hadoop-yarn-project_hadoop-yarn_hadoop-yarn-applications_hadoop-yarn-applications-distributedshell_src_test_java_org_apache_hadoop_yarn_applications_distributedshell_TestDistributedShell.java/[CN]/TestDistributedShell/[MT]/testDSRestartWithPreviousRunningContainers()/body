{
  String[] args={"--jar",APPMASTER_JAR,"--num_containers","1","--shell_command",Shell.WINDOWS ? "timeout 8" : "sleep 8","--master_memory","512","--container_memory","128","--keep_containers_across_application_attempts"};
  LOG.info("Initializing DS Client");
  Client client=new Client(TestDSFailedAppMaster.class.getName(),new Configuration(yarnCluster.getConfig()));
  client.init(args);
  LOG.info("Running DS Client");
  boolean result=client.run();
  LOG.info("Client run completed. Result=" + result);
  Assert.assertTrue(result);
}
