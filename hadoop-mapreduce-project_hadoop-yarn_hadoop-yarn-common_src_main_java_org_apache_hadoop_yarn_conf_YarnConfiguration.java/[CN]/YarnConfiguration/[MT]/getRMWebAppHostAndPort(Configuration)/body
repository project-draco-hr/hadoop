{
  int port=conf.getSocketAddr(YarnConfiguration.RM_WEBAPP_ADDRESS,YarnConfiguration.DEFAULT_RM_WEBAPP_ADDRESS,YarnConfiguration.DEFAULT_RM_WEBAPP_PORT).getPort();
  String host=conf.getSocketAddr(YarnConfiguration.RM_ADDRESS,YarnConfiguration.DEFAULT_RM_ADDRESS,YarnConfiguration.DEFAULT_RM_PORT).getHostName();
  InetSocketAddress address=NetUtils.createSocketAddrForHost(host,port);
  StringBuffer sb=new StringBuffer();
  InetAddress resolved=address.getAddress();
  if (resolved == null || resolved.isAnyLocalAddress() || resolved.isLoopbackAddress()) {
    String lh=host;
    try {
      lh=InetAddress.getLocalHost().getCanonicalHostName();
    }
 catch (    UnknownHostException e) {
    }
    sb.append(lh);
  }
 else {
    sb.append(address.getHostName());
  }
  sb.append(":").append(address.getPort());
  return sb.toString();
}
