{
  while (shouldRun) {
    try {
      doTailEdits();
    }
 catch (    InterruptedException ie) {
      continue;
    }
catch (    Throwable t) {
      LOG.error("Error encountered while tailing edits. Shutting down " + "standby NN.",t);
      runtime.exit(1);
    }
    try {
      Thread.sleep(sleepTime);
    }
 catch (    InterruptedException e) {
      LOG.warn("Edit log tailer interrupted",e);
    }
  }
}
