{
  if (actionName == null || actionName.equals(""))   throw new IllegalArgumentException();
  if (!(actionName.equals(RESET_ALL_MIN_MAX_OP)) || mbeanInfo.getOperations().length != 1) {
    throw new ReflectionException(new NoSuchMethodException(actionName));
  }
  for (  MetricsBase m : metricsRegistry.getMetricsList()) {
    if (MetricsTimeVaryingRate.class.isInstance(m)) {
      MetricsTimeVaryingRate.class.cast(m).resetMinMax();
    }
  }
  return null;
}
