{
  boolean userClassesTakesPrecedence=conf.getBoolean(MRJobConfig.MAPREDUCE_JOB_USER_CLASSPATH_FIRST,false);
  Apps.addToEnvironment(environment,Environment.CLASSPATH.name(),Environment.PWD.$());
  if (!userClassesTakesPrecedence) {
    MRApps.setMRFrameworkClasspath(environment,conf);
  }
  Apps.addToEnvironment(environment,Environment.CLASSPATH.name(),MRJobConfig.JOB_JAR);
  Apps.addToEnvironment(environment,Environment.CLASSPATH.name(),Environment.PWD.$() + Path.SEPARATOR + "*");
  if (userClassesTakesPrecedence) {
    MRApps.setMRFrameworkClasspath(environment,conf);
  }
}
