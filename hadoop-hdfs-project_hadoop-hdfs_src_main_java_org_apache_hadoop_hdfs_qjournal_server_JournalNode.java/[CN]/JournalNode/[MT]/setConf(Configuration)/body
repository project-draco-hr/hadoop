{
  this.conf=conf;
  this.localDir=new File(conf.get(DFSConfigKeys.DFS_JOURNALNODE_EDITS_DIR_KEY,DFSConfigKeys.DFS_JOURNALNODE_EDITS_DIR_DEFAULT).trim());
  if (this.tracer == null) {
    this.tracer=new Tracer.Builder("JournalNode").conf(TraceUtils.wrapHadoopConf("journalnode.htrace",conf)).build();
  }
}
