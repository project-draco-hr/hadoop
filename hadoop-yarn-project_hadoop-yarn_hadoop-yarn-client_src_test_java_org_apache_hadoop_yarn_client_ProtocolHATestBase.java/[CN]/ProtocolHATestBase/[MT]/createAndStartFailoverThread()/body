{
  Thread failoverThread=new Thread(){
    public void run(){
      keepRunning=true;
      while (keepRunning) {
        if (cluster.getStartFailoverFlag()) {
          try {
            explicitFailover();
            keepRunning=false;
            cluster.resetFailoverTriggeredFlag(true);
          }
 catch (          Exception e) {
          }
 finally {
            keepRunning=false;
          }
        }
        try {
          Thread.sleep(50);
        }
 catch (        InterruptedException e) {
        }
      }
    }
  }
;
  failoverThread.start();
  return failoverThread;
}
