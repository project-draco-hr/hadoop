{
  addRunningTaskToTIP(tip,taskId,new TaskTrackerStatus(taskTracker,JobInProgress.convertTrackerNameToHostName(taskTracker)),true);
  TaskStatus status=TaskStatus.createTaskStatus(tip.isMapTask(),taskId,0.0f,1,TaskStatus.State.RUNNING,"","",taskTracker,tip.isMapTask() ? Phase.MAP : Phase.REDUCE,new Counters());
  updateTaskStatus(tip,status);
}
