{
  if (targetPos > getFileLength()) {
    throw new EOFException("Cannot seek after EOF");
  }
  if (targetPos < 0) {
    throw new EOFException("Cannot seek to negative offset");
  }
  if (closed) {
    throw new IOException("Stream is closed!");
  }
  boolean done=false;
  if (pos <= targetPos && targetPos <= blockEnd) {
    int diff=(int)(targetPos - pos);
    if (diff <= blockReader.available()) {
      try {
        pos+=blockReader.skip(diff);
        if (pos == targetPos) {
          done=true;
        }
 else {
          String errMsg="BlockReader failed to seek to " + targetPos + ". Instead, it seeked to "+ pos+ ".";
          DFSClient.LOG.warn(errMsg);
          throw new IOException(errMsg);
        }
      }
 catch (      IOException e) {
        if (DFSClient.LOG.isDebugEnabled()) {
          DFSClient.LOG.debug("Exception while seek to " + targetPos + " from "+ getCurrentBlock()+ " of "+ src+ " from "+ currentNode,e);
        }
      }
    }
  }
  if (!done) {
    pos=targetPos;
    blockEnd=-1;
  }
}
