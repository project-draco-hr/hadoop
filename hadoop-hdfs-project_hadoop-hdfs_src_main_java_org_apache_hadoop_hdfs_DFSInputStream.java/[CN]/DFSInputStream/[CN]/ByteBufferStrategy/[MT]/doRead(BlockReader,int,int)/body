{
  int oldpos=buf.position();
  int oldlimit=buf.limit();
  boolean success=false;
  try {
    int ret=blockReader.read(buf);
    success=true;
    updateReadStatistics(readStatistics,ret,blockReader);
    return ret;
  }
  finally {
    if (!success) {
      buf.position(oldpos);
      buf.limit(oldlimit);
    }
  }
}
