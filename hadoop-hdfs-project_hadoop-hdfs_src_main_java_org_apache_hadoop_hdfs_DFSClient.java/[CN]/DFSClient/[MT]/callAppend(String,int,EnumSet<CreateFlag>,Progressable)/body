{
  CreateFlag.validateForAppend(flag);
  try {
    LastBlockWithStatus blkWithStatus=namenode.append(src,clientName,new EnumSetWritable<>(flag,CreateFlag.class));
    return DFSOutputStream.newStreamForAppend(this,src,flag.contains(CreateFlag.NEW_BLOCK),buffersize,progress,blkWithStatus.getLastBlock(),blkWithStatus.getFileStatus(),dfsClientConf.createChecksum());
  }
 catch (  RemoteException re) {
    throw re.unwrapRemoteException(AccessControlException.class,FileNotFoundException.class,SafeModeException.class,DSQuotaExceededException.class,UnsupportedOperationException.class,UnresolvedPathException.class,SnapshotAccessControlException.class);
  }
}
