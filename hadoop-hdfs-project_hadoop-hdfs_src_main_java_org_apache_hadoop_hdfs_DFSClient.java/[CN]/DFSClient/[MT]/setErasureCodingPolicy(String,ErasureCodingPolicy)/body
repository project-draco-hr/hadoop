{
  checkOpen();
  TraceScope scope=getPathTraceScope("setErasureCodingPolicy",src);
  try {
    namenode.setErasureCodingPolicy(src,ecPolicy);
  }
 catch (  RemoteException re) {
    throw re.unwrapRemoteException(AccessControlException.class,SafeModeException.class,UnresolvedPathException.class);
  }
 finally {
    scope.close();
  }
}
