{
  TraceScope scope=Trace.startSpan(description,traceSampler);
  Span span=scope.getSpan();
  if (span != null) {
    if (src != null) {
      span.addKVAnnotation(SRC,src.getBytes(Charset.forName("UTF-8")));
    }
    if (dst != null) {
      span.addKVAnnotation(DST,dst.getBytes(Charset.forName("UTF-8")));
    }
  }
  return scope;
}
