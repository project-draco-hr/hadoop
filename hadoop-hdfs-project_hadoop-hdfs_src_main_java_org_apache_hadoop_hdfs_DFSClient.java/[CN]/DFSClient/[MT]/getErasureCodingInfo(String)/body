{
  checkOpen();
  TraceScope scope=getPathTraceScope("getErasureCodingInfo",src);
  try {
    return namenode.getErasureCodingInfo(src);
  }
 catch (  RemoteException re) {
    throw re.unwrapRemoteException(AccessControlException.class,FileNotFoundException.class,UnresolvedPathException.class);
  }
 finally {
    scope.close();
  }
}
