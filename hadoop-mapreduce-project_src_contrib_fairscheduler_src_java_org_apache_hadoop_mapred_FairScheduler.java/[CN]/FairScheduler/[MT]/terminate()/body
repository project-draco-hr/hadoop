{
  if (eventLog != null)   eventLog.log("SHUTDOWN");
  running=false;
  jobInitializer.terminate();
  if (jobListener != null)   taskTrackerManager.removeJobInProgressListener(jobListener);
  if (eventLog != null)   eventLog.shutdown();
  if (metricsUpdater != null) {
    MetricsContext context=MetricsUtil.getContext("fairscheduler");
    context.unregisterUpdater(metricsUpdater);
    metricsUpdater=null;
  }
}
