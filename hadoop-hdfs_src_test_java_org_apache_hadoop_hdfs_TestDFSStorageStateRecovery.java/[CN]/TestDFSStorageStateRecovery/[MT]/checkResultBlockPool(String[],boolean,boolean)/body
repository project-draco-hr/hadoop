{
  if (currentShouldExist) {
    for (int i=0; i < baseDirs.length; i++) {
      File bpCurDir=new File(baseDirs[i],Storage.STORAGE_DIR_CURRENT);
      assertEquals(UpgradeUtilities.checksumContents(DATA_NODE,bpCurDir),UpgradeUtilities.checksumMasterBlockPoolContents());
    }
  }
  if (previousShouldExist) {
    for (int i=0; i < baseDirs.length; i++) {
      File bpPrevDir=new File(baseDirs[i],Storage.STORAGE_DIR_PREVIOUS);
      assertTrue(bpPrevDir.isDirectory());
      assertEquals(UpgradeUtilities.checksumContents(DATA_NODE,bpPrevDir),UpgradeUtilities.checksumMasterBlockPoolContents());
    }
  }
}
