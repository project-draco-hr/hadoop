{
  StringBuilder str=new StringBuilder();
  if (bytes < 0) {
    bytes=0;
  }
  str.append(bytes);
  str.append(" bytes or ");
  str.append(bytes / 1024);
  str.append(" kilobytes or ");
  str.append(bytes / (1024 * 1024));
  str.append(" megabytes or ");
  str.append(bytes / (1024 * 1024 * 1024));
  str.append(" gigabytes");
  return str.toString();
}
