{
  conf.set(DFSConfigKeys.DFS_DATANODE_DATA_DIR_KEY,System.getProperty("test.build.data") + File.separator + testName+ File.separator+ "dfs"+ File.separator+ "data");
  conf.set(DFSConfigKeys.DFS_NAMENODE_NAME_DIR_KEY,System.getProperty("test.build.data") + File.separator + testName+ File.separator+ "dfs"+ File.separator+ "name");
