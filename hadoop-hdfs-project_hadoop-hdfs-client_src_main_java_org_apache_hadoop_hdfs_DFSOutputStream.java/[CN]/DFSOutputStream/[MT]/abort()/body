{
  final MultipleIOException.Builder b=new MultipleIOException.Builder();
synchronized (this) {
    if (isClosed()) {
      return;
    }
    getStreamer().getLastException().set(new IOException("Lease timeout of " + (dfsClient.getConf().getHdfsTimeout() / 1000) + " seconds expired."));
    try {
      closeThreads(true);
    }
 catch (    IOException e) {
      b.add(e);
    }
  }
  dfsClient.endFileLease(fileId);
  final IOException ioe=b.build();
  if (ioe != null) {
    throw ioe;
  }
}
