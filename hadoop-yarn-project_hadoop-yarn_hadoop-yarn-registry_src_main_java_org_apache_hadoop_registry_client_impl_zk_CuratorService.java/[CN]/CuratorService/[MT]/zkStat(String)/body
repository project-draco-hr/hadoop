{
  checkServiceLive();
  String fullpath=createFullPath(path);
  Stat stat;
  try {
    if (LOG.isDebugEnabled()) {
      LOG.debug("Stat {}",fullpath);
    }
    stat=curator.checkExists().forPath(fullpath);
  }
 catch (  Exception e) {
    throw operationFailure(fullpath,"read()",e);
  }
  if (stat == null) {
    throw new PathNotFoundException(path);
  }
  return stat;
}
