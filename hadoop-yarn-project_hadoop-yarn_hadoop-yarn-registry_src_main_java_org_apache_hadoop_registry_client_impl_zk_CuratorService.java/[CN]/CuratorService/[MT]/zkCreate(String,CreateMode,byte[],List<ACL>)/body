{
  Preconditions.checkArgument(data != null,"null data");
  checkServiceLive();
  String fullpath=createFullPath(path);
  try {
    if (LOG.isDebugEnabled()) {
      LOG.debug("Creating {} with {} bytes of data and ACL {}",fullpath,data.length,new RegistrySecurity.AclListInfo(acls));
    }
    curator.create().withMode(mode).withACL(acls).forPath(fullpath,data);
  }
 catch (  Exception e) {
    throw operationFailure(fullpath,"create()",e,acls);
  }
}
