{
  response.setContentType("text/html");
  response.setStatus(HttpServletResponse.SC_OK);
  String simulateInfo;
  if (SLSRunner.simulateInfoMap.isEmpty()) {
    String empty="<tr><td colspan='2' align='center'>" + "No information available</td></tr>";
    simulateInfo=MessageFormat.format(simulateInfoTemplate,empty);
  }
 else {
    StringBuilder info=new StringBuilder();
    for (    Map.Entry<String,Object> entry : SLSRunner.simulateInfoMap.entrySet()) {
      info.append("<tr>");
      info.append("<td class='td1'>").append(entry.getKey()).append("</td>");
      info.append("<td class='td2'>").append(entry.getValue()).append("</td>");
      info.append("</tr>");
    }
    simulateInfo=MessageFormat.format(simulateInfoTemplate,info.toString());
  }
  response.getWriter().println(simulateInfo);
  ((Request)request).setHandled(true);
}
