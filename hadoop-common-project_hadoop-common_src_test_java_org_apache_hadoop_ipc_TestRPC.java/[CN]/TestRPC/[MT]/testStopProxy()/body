{
  StoppedProtocol proxy=(StoppedProtocol)RPC.getProxy(StoppedProtocol.class,StoppedProtocol.versionID,null,conf);
  StoppedInvocationHandler invocationHandler=(StoppedInvocationHandler)Proxy.getInvocationHandler(proxy);
  assertEquals(invocationHandler.getCloseCalled(),0);
  RPC.stopProxy(proxy);
  assertEquals(invocationHandler.getCloseCalled(),1);
}
