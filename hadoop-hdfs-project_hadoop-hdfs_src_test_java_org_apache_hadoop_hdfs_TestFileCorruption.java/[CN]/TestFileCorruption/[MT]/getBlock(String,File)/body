{
  List<File> metadataFiles=MiniDFSCluster.getAllBlockMetadataFiles(dataDir);
  if (metadataFiles == null || metadataFiles.isEmpty()) {
    return null;
  }
  File metadataFile=metadataFiles.get(0);
  File blockFile=Block.metaToBlockFile(metadataFile);
  return new ExtendedBlock(bpid,Block.getBlockId(blockFile.getName()),blockFile.length(),Block.getGenerationStamp(metadataFile.getName()));
}
