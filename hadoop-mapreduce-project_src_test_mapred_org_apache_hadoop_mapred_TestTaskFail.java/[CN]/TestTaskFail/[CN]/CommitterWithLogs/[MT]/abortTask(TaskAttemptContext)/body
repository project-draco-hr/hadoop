{
  System.err.println(cleanupLog);
  String attemptId=System.getProperty("hadoop.tasklog.taskid");
  assertNotNull(attemptId);
  if (attemptId.endsWith("_0")) {
    assertFalse(Boolean.getBoolean(System.getProperty("hadoop.tasklog.iscleanup")));
  }
 else {
    assertTrue(Boolean.getBoolean(System.getProperty("hadoop.tasklog.iscleanup")));
  }
  super.abortTask(context);
}
