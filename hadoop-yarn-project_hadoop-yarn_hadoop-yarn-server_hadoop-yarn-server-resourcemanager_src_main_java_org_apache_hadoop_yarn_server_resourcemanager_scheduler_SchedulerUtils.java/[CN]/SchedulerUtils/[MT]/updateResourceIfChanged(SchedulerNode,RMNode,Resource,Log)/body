{
  Resource oldAvailableResource=node.getAvailableResource();
  Resource newAvailableResource=Resources.subtract(rmNode.getTotalCapability(),node.getUsedResource());
  if (!newAvailableResource.equals(oldAvailableResource)) {
    Resource deltaResource=Resources.subtract(newAvailableResource,oldAvailableResource);
    node.applyDeltaOnAvailableResource(deltaResource);
    Resources.addTo(clusterResource,deltaResource);
    log.info("Resource change on node: " + rmNode.getNodeAddress() + " with delta: CPU: "+ deltaResource.getMemory()+ "core, Memory: "+ deltaResource.getMemory()+ "MB");
  }
}
