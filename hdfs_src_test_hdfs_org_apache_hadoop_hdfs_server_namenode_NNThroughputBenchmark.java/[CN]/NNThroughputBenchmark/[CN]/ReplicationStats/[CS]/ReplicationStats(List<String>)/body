{
  super();
  numThreads=1;
  numDatanodes=3;
  nodesToDecommission=1;
  nodeReplicationLimit=100;
  totalBlocks=100;
  parseArguments(args);
  numOpsRequired=(totalBlocks * replication * nodesToDecommission* 2) / (numDatanodes * numDatanodes);
  String[] blkReportArgs={"-op","blockReport","-datanodes",String.valueOf(numDatanodes),"-blocksPerReport",String.valueOf(totalBlocks * replication / numDatanodes),"-blocksPerFile",String.valueOf(numDatanodes)};
  blockReportObject=new BlockReportStats(Arrays.asList(blkReportArgs));
  numDecommissionedBlocks=0;
  numPendingBlocks=0;
}
