{
  if (!blockFile.delete() || (!metaFile.delete() && metaFile.exists())) {
    DataNode.LOG.warn("Unexpected error trying to delete block " + blockPoolId + " "+ blockName+ " at file "+ blockFile+ ". Ignored.");
  }
 else {
    volume.decDfsUsed(blockPoolId,dfsBytes);
    DataNode.LOG.info("Deleted block " + blockPoolId + " "+ blockName+ " at file "+ blockFile);
  }
}
