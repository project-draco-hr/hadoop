{
  Preconditions.checkNotNull(existing);
  long modTime=now();
  INodesInPath newiip;
  fsd.writeLock();
  try {
    ErasureCodingPolicy ecPolicy=FSDirErasureCodingOp.getErasureCodingPolicy(fsd.getFSNamesystem(),existing);
    if (ecPolicy != null) {
      replication=ecPolicy.getId();
    }
    INodeFile newNode=newINodeFile(fsd.allocateNewInodeId(),permissions,modTime,modTime,replication,preferredBlockSize,ecPolicy != null);
    newNode.setLocalName(localName.getBytes(StandardCharsets.UTF_8));
    newNode.toUnderConstruction(clientName,clientMachine);
    newiip=fsd.addINode(existing,newNode);
  }
  finally {
    fsd.writeUnlock();
  }
  if (newiip == null) {
    NameNode.stateChangeLog.info("DIR* addFile: failed to add " + existing.getPath() + "/"+ localName);
    return null;
  }
  if (NameNode.stateChangeLog.isDebugEnabled()) {
    NameNode.stateChangeLog.debug("DIR* addFile: " + localName + " is added");
  }
  return newiip;
}
