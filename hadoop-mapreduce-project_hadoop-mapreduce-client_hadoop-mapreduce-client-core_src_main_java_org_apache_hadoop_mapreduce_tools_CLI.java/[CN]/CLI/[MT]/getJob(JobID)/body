{
  int maxRetry=getConf().getInt(MRJobConfig.MR_CLIENT_JOB_MAX_RETRIES,MRJobConfig.DEFAULT_MR_CLIENT_JOB_MAX_RETRIES);
  long retryInterval=getConf().getLong(MRJobConfig.MR_CLIENT_JOB_RETRY_INTERVAL,MRJobConfig.DEFAULT_MR_CLIENT_JOB_RETRY_INTERVAL);
  Job job=cluster.getJob(jobid);
  for (int i=0; i < maxRetry; ++i) {
    if (job != null) {
      return job;
    }
    LOG.info("Could not obtain job info after " + String.valueOf(i + 1) + " attempt(s). Sleeping for "+ String.valueOf(retryInterval / 1000)+ " seconds and retrying.");
    Thread.sleep(retryInterval);
    job=cluster.getJob(jobid);
  }
  return job;
}
