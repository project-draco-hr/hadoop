{
  FSDataInputStream in=fs.open(path);
  byte[] dest=new byte[len];
  int offset=0;
  int nread=0;
  try {
    while (nread < len) {
      int nbytes=in.read(dest,offset + nread,len - nread);
      if (nbytes < 0) {
        throw new EOFException("End of file reached before reading fully.");
      }
      nread+=nbytes;
    }
  }
  finally {
    in.close();
  }
  return dest;
}
