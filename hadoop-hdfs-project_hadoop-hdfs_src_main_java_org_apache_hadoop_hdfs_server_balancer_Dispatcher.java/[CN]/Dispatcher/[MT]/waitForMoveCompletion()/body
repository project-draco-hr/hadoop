{
  for (; ; ) {
    boolean empty=true;
    for (    BalancerDatanode.StorageGroup t : targets) {
      if (!t.getBalancerDatanode().isPendingQEmpty()) {
        empty=false;
        break;
      }
    }
    if (empty) {
      return;
    }
    try {
      Thread.sleep(blockMoveWaitTime);
    }
 catch (    InterruptedException ignored) {
    }
  }
}
