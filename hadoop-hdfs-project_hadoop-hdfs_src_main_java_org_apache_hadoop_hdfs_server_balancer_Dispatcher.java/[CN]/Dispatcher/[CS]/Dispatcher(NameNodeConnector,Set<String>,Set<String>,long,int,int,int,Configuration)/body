{
  this.nnc=nnc;
  this.excludedNodes=excludedNodes;
  this.includedNodes=includedNodes;
  this.movedBlocks=new MovedBlocks<StorageGroup>(movedWinWidth);
  this.cluster=NetworkTopology.getInstance(conf);
  this.dispatchExecutor=dispatcherThreads == 0 ? null : Executors.newFixedThreadPool(dispatcherThreads);
  this.moverThreadAllocator=new Allocator(moverThreads);
  this.maxConcurrentMovesPerNode=maxConcurrentMovesPerNode;
  this.saslClient=new SaslDataTransferClient(conf,DataTransferSaslUtil.getSaslPropertiesResolver(conf),TrustedChannelResolver.getInstance(conf),nnc.fallbackToSimpleAuth);
  this.ioFileBufferSize=DFSUtil.getIoFileBufferSize(conf);
}
