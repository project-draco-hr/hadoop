{
  assertEquals("ret: 1, You must supply a -path argument to recoverLease.\n",runCmd(new String[]{"recoverLease","-retries","1"}));
  FSDataOutputStream out=fs.create(new Path("/foo"));
  out.write(123);
  out.close();
  assertEquals("ret: 0, recoverLease SUCCEEDED on /foo\n",runCmd(new String[]{"recoverLease","-path","/foo"}));
}
