{
  FSDataOutputStream stm=fileSys.create(name,true,fileSys.getConf().getInt("io.file.buffer.size",4096),NUM_OF_DATANODES,BLOCK_SIZE);
  int i=0;
  for (; i < FILE_SIZE - BYTES_PER_CHECKSUM; i+=BYTES_PER_CHECKSUM) {
    stm.write(expected,i,BYTES_PER_CHECKSUM);
  }
  stm.write(expected,i,FILE_SIZE - 3 * BYTES_PER_CHECKSUM);
  stm.close();
  checkFile(name);
  cleanupFile(name);
}
