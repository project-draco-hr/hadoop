{
synchronized (this) {
    if (stopRequested)     return;
    stopRequested=true;
  }
  try {
    state.exitState(haContext);
  }
 catch (  ServiceFailedException e) {
    LOG.info("Encountered exception while exiting state " + e);
  }
  stopCommonServices();
  if (metrics != null) {
    metrics.shutdown();
  }
  if (namesystem != null) {
    namesystem.shutdown();
  }
}
