{
  for (  PathData item : waitList) {
    out.println("Waiting for " + item + " ...");
    out.flush();
    for (; ; ) {
      item.refreshStatus();
      if (item.stat.getLen() == newLength)       break;
      try {
        Thread.sleep(1000);
      }
 catch (      InterruptedException ignored) {
      }
    }
    out.println("Truncated " + item + " to length: "+ newLength);
    out.flush();
  }
}
