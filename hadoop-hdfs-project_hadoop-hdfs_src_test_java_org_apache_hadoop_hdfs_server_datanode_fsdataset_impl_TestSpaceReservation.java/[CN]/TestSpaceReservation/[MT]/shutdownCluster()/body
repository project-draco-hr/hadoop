{
  if (singletonVolumeRef != null) {
    singletonVolumeRef.close();
    singletonVolumeRef=null;
  }
  if (client != null) {
    client.close();
    client=null;
  }
  if (fs != null) {
    fs.close();
    fs=null;
  }
  if (cluster != null) {
    cluster.shutdown();
    cluster=null;
  }
  if (old != null) {
    DataNodeFaultInjector.set(old);
  }
}
