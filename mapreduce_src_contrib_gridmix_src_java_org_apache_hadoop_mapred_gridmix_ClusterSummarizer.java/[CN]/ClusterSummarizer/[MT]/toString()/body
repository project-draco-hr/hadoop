{
  StringBuilder builder=new StringBuilder();
  builder.append("Cluster Summary:-");
  builder.append("\nJobTracker: ").append(getJobTrackerInfo());
  builder.append("\nFileSystem: ").append(getNamenodeInfo());
  builder.append("\nNumber of blacklisted trackers: ").append(getNumBlacklistedTrackers());
  builder.append("\nNumber of active trackers: ").append(getNumActiveTrackers());
  builder.append("\nMax map task capacity: ").append(getMaxMapTasks());
  builder.append("\nMax reduce task capacity: ").append(getMaxReduceTasks());
  builder.append("\n\n");
  return builder.toString();
}
