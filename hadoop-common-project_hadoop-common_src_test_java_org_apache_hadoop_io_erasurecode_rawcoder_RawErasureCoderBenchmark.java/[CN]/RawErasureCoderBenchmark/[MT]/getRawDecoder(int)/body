{
  RawErasureDecoder decoder=CODER_MAKERS.get(index).createDecoder(BenchData.OPTIONS);
  final boolean isDirect=decoder.preferDirectBuffer();
  ByteBuffer[] inputs=getBufferForInit(BenchData.NUM_ALL_UNITS,1,isDirect);
  for (  int erasedIndex : BenchData.ERASED_INDEXES) {
    inputs[erasedIndex]=null;
  }
  decoder.decode(inputs,BenchData.ERASED_INDEXES,getBufferForInit(BenchData.ERASED_INDEXES.length,1,isDirect));
  return decoder;
}
