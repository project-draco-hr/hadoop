{
  int newperms=pp.applyNewPermission(file);
  if (file.getPermission().toShort() != newperms) {
    try {
      srcFs.setPermission(file.getPath(),new FsPermission((short)newperms));
    }
 catch (    IOException e) {
      LOG.debug("Error changing permissions of " + file.getPath(),e);
      System.err.println(getName() + ": changing permissions of '" + file.getPath()+ "':"+ e.getMessage());
    }
  }
}
