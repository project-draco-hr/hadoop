{
  TaskAttemptInfo ret;
  for (int i=0; true; ++i) {
    ret=jobdesc.getTaskAttemptInfo(type,task,i);
    if (ret.getRunState() == TaskStatus.State.SUCCEEDED) {
      break;
    }
  }
  if (ret.getRunState() != TaskStatus.State.SUCCEEDED) {
    LOG.warn("No sucessful attempts tasktype " + type + " task "+ task);
  }
  return ret;
}
