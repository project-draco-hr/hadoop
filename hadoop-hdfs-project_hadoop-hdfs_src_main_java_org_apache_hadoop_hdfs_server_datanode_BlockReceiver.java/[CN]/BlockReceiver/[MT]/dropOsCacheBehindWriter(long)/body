{
  try {
    if (outFd != null && offsetInBlock > lastCacheDropOffset + CACHE_DROP_LAG_BYTES) {
      long twoWindowsAgo=lastCacheDropOffset - CACHE_DROP_LAG_BYTES;
      if (twoWindowsAgo > 0 && dropCacheBehindWrites) {
        NativeIO.posixFadviseIfPossible(outFd,0,lastCacheDropOffset,NativeIO.POSIX_FADV_DONTNEED);
      }
      if (syncBehindWrites) {
        NativeIO.syncFileRangeIfPossible(outFd,lastCacheDropOffset,CACHE_DROP_LAG_BYTES,NativeIO.SYNC_FILE_RANGE_WRITE);
      }
      lastCacheDropOffset+=CACHE_DROP_LAG_BYTES;
    }
  }
 catch (  Throwable t) {
    LOG.warn("Couldn't drop os cache behind writer for " + block,t);
  }
}
