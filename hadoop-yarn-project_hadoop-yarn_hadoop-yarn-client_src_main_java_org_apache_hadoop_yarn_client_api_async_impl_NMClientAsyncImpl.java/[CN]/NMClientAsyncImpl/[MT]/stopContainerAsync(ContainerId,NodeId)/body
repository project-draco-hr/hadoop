{
  if (containers.get(containerId) == null) {
    callbackHandler.onStopContainerError(containerId,RPCUtil.getRemoteException("Container " + containerId + " is neither started nor scheduled to start"));
  }
  try {
    events.put(new ContainerEvent(containerId,nodeId,null,ContainerEventType.STOP_CONTAINER));
  }
 catch (  InterruptedException e) {
    LOG.warn("Exception when scheduling the event of stopping Container " + containerId);
    callbackHandler.onStopContainerError(containerId,e);
  }
}
