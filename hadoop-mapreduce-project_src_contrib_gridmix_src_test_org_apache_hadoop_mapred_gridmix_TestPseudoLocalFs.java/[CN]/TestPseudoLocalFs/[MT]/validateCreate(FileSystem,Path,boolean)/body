{
  boolean expectedExceptionSeen=false;
  try {
    pfs.create(path);
  }
 catch (  IOException e) {
    expectedExceptionSeen=true;
  }
  if (shouldSucceed) {
    assertFalse("create() has thrown Exception for valid file name " + path,expectedExceptionSeen);
  }
 else {
    assertTrue("create() did not throw Exception for invalid file name " + path,expectedExceptionSeen);
  }
}
