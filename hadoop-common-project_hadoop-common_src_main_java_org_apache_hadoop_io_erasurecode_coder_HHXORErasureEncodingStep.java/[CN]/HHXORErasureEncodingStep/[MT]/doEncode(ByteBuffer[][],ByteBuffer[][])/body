{
  final int numParityUnits=this.rsRawEncoder.getNumParityUnits();
  ByteBuffer[] piggyBacks=HHUtil.getPiggyBacksFromInput(inputs[0],piggyBackIndex,numParityUnits,0,xorRawEncoder);
  for (int i=0; i < getSubPacketSize(); ++i) {
    rsRawEncoder.encode(inputs[i],outputs[i]);
  }
  encodeWithPiggyBacks(piggyBacks,outputs,numParityUnits,inputs[0][0].isDirect());
}
