{
  if (name.equals("local")) {
    LOG.warn("\"local\" is a deprecated filesystem name." + " Use \"file:///\" instead.");
    name="file:///";
  }
 else   if (name.indexOf('/') == -1) {
    LOG.warn("\"" + name + "\" is a deprecated filesystem name."+ " Use \"hdfs://"+ name+ "/\" instead.");
    name="hdfs://" + name;
  }
  return name;
}
