{
  long startTime=System.currentTimeMillis();
  FSDataOutputStream out=fc.create(file,EnumSet.of(CreateFlag.OVERWRITE),CreateOpts.createParent(),CreateOpts.bufferSize(4096),CreateOpts.repFac((short)3));
  executionTime[CREATE]+=(System.currentTimeMillis() - startTime);
  totalNumOfOps[CREATE]++;
  for (long i=0; i < fileSize; i++) {
    out.writeByte('a');
  }
  startTime=System.currentTimeMillis();
  out.close();
  executionTime[WRITE_CLOSE]+=(System.currentTimeMillis() - startTime);
  totalNumOfOps[WRITE_CLOSE]++;
}
