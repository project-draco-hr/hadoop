{
  conf=new Configuration();
  conf.setBoolean(CommonConfigurationKeys.HADOOP_SECURITY_AUTHORIZATION,security);
  cluster=new MiniQJMHACluster.Builder(conf).build();
  setHAConf(conf,cluster.getDfsCluster().getNameNode(0).getHostAndPort(),cluster.getDfsCluster().getNameNode(1).getHostAndPort());
  cluster.getDfsCluster().getNameNode(0).getHostAndPort();
  admin=new DFSAdmin();
  admin.setConf(conf);
  assertTrue(HAUtil.isHAEnabled(conf,"ns1"));
  originOut=System.out;
  originErr=System.err;
  System.setOut(new PrintStream(out));
  System.setErr(new PrintStream(err));
}
