{
  long inodeId=++mockINodeId;
  final INodeFile bc=TestINodeFile.createINodeFile(inodeId);
  BlockInfo blockInfo=blockOnNodes(blockId,nodes);
  blockInfo.setReplication((short)3);
  blockInfo.setBlockCollectionId(inodeId);
