{
  DatanodeStorageInfo delHint=new DatanodeStorageInfo(DFSTestUtil.getLocalDatanodeDescriptor(),new DatanodeStorage("id"));
  List<DatanodeStorageInfo> moreThan1Racks=Arrays.asList(delHint);
  List<StorageType> excessTypes=new ArrayList<StorageType>();
  excessTypes.add(StorageType.DEFAULT);
  Assert.assertTrue(BlockPlacementPolicyDefault.useDelHint(true,delHint,null,moreThan1Racks,excessTypes));
  excessTypes.remove(0);
  excessTypes.add(StorageType.SSD);
  Assert.assertFalse(BlockPlacementPolicyDefault.useDelHint(true,delHint,null,moreThan1Racks,excessTypes));
}
