{
  int writtenSize=32 * 1024;
  File file=new File(DU_DIR,"data");
  createFile(file,writtenSize);
  Thread.sleep(5000);
  DU du=new DU(file,10000);
  du.start();
  long duSize=du.getUsed();
  du.shutdown();
  assertEquals(writtenSize,duSize);
  du=new DU(file,0);
  du.start();
  duSize=du.getUsed();
  du.shutdown();
  assertEquals(writtenSize,duSize);
  du=new DU(file,10000);
  duSize=du.getUsed();
  assertEquals(writtenSize,duSize);
}
