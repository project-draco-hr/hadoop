{
  Preconditions.checkArgument(b.triplets != null,"BlockInfo is not initialized");
  int last=b.numNodes();
  if (b.triplets.length >= (last + num) * 3) {
    return last;
  }
  Object[] old=b.triplets;
  b.triplets=new Object[(last + num) * 3];
  System.arraycopy(old,0,b.triplets,0,last * 3);
  return last;
}
