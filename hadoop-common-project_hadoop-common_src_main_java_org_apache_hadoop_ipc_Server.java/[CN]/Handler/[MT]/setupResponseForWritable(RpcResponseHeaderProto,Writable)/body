{
  ResponseBuffer buf=responseBuffer.get().reset();
  try {
    RpcWritable.wrap(header).writeTo(buf);
    if (rv != null) {
      RpcWritable.wrap(rv).writeTo(buf);
    }
    return buf.toByteArray();
  }
  finally {
    if (buf.capacity() > maxRespSize) {
      buf.setCapacity(INITIAL_RESP_BUF_SIZE);
    }
  }
}
