{
  Throwable cause=e;
  while (cause != null) {
    if (cause instanceof RetriableException) {
      return cause;
    }
 else     if (cause instanceof StandbyException) {
      return cause;
    }
 else     if (cause instanceof InvalidToken) {
      if (cause.getCause() != null) {
        cause=cause.getCause();
      }
      return cause;
    }
    cause=cause.getCause();
  }
  return e;
}
