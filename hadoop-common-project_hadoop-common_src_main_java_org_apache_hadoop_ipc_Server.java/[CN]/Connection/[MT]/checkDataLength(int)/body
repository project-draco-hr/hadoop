{
  if (dataLength < 0) {
    String error="Unexpected data length " + dataLength + "!! from "+ getHostAddress();
    LOG.warn(error);
    throw new IOException(error);
  }
 else   if (dataLength > maxDataLength) {
    String error="Requested data length " + dataLength + " is longer than maximum configured RPC length "+ maxDataLength+ ".  RPC came from "+ getHostAddress();
    LOG.warn(error);
    throw new IOException(error);
  }
}
