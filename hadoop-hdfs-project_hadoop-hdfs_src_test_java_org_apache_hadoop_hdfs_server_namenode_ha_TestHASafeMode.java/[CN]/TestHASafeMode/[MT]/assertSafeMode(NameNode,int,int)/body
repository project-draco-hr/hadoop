{
  String status=nn1.getNamesystem().getSafemode();
  if (safe == total) {
    assertTrue("Bad safemode status: '" + status + "'",status.startsWith("Safe mode is ON." + "The reported blocks " + safe + " has reached the threshold "+ "0.9990 of total blocks "+ total+ ". Safe mode will be "+ "turned off automatically"));
  }
 else {
    int additional=total - safe;
    assertTrue("Bad safemode status: '" + status + "'",status.startsWith("Safe mode is ON." + "The reported blocks " + safe + " needs additional "+ additional+ " blocks"));
  }
}
