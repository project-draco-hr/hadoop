{
  int globalMaxAppAttempts=conf.getInt(YarnConfiguration.RM_AM_MAX_ATTEMPTS,YarnConfiguration.DEFAULT_RM_AM_MAX_ATTEMPTS);
  if (globalMaxAppAttempts <= 0) {
    throw new YarnRuntimeException("Invalid global max attempts configuration" + ", " + YarnConfiguration.RM_AM_MAX_ATTEMPTS + "="+ globalMaxAppAttempts+ ", it should be a positive integer.");
  }
  long expireIntvl=conf.getLong(YarnConfiguration.RM_NM_EXPIRY_INTERVAL_MS,YarnConfiguration.DEFAULT_RM_NM_EXPIRY_INTERVAL_MS);
  long heartbeatIntvl=conf.getLong(YarnConfiguration.RM_NM_HEARTBEAT_INTERVAL_MS,YarnConfiguration.DEFAULT_RM_NM_HEARTBEAT_INTERVAL_MS);
  if (expireIntvl < heartbeatIntvl) {
    throw new YarnRuntimeException("Nodemanager expiry interval should be no" + " less than heartbeat interval, " + YarnConfiguration.RM_NM_EXPIRY_INTERVAL_MS + "="+ expireIntvl+ ", "+ YarnConfiguration.RM_NM_HEARTBEAT_INTERVAL_MS+ "="+ heartbeatIntvl);
  }
}
