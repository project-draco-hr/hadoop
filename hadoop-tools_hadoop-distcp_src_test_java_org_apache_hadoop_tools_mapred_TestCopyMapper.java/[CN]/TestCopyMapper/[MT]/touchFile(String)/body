{
  FileSystem fs;
  DataOutputStream outputStream=null;
  try {
    fs=cluster.getFileSystem();
    final Path qualifiedPath=new Path(path).makeQualified(fs.getUri(),fs.getWorkingDirectory());
    final long blockSize=fs.getDefaultBlockSize(qualifiedPath) * 2;
    outputStream=fs.create(qualifiedPath,true,0,(short)(fs.getDefaultReplication(qualifiedPath) * 2),blockSize);
    outputStream.write(new byte[FILE_SIZE]);
    pathList.add(qualifiedPath);
    ++nFiles;
    FileStatus fileStatus=fs.getFileStatus(qualifiedPath);
    System.out.println(fileStatus.getBlockSize());
    System.out.println(fileStatus.getReplication());
  }
  finally {
    IOUtils.cleanup(null,outputStream);
  }
}
