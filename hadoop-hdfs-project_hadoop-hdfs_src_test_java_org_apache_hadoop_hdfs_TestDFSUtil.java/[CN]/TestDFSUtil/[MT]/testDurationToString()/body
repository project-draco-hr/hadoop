{
  assertEquals("000:00:00:00",DFSUtil.durationToString(0));
  try {
    DFSUtil.durationToString(-199);
  }
 catch (  IllegalArgumentException e) {
    GenericTestUtils.assertExceptionContains("Invalid negative duration",e);
  }
  assertEquals("001:01:01:01",DFSUtil.durationToString(((24 * 60 * 60) + (60 * 60) + (60)+ 1) * 1000));
  assertEquals("000:23:59:59",DFSUtil.durationToString(((23 * 60 * 60) + (59 * 60) + (59)) * 1000));
}
