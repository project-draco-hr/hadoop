{
  try {
    final DataOutputStream out=fs.create(idPath);
    out.writeBytes(InetAddress.getLocalHost().getHostName());
    out.flush();
    return out;
  }
 catch (  RemoteException e) {
    if (AlreadyBeingCreatedException.class.getName().equals(e.getClassName())) {
      return null;
    }
 else {
      throw e;
    }
  }
}
