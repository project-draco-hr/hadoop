{
  try {
    final FSDataOutputStream out=fs.create(idPath);
    if (write2IdFile) {
      out.writeBytes(InetAddress.getLocalHost().getHostName());
      out.hflush();
    }
    return out;
  }
 catch (  RemoteException e) {
    if (AlreadyBeingCreatedException.class.getName().equals(e.getClassName())) {
      return null;
    }
 else {
      throw e;
    }
  }
}
