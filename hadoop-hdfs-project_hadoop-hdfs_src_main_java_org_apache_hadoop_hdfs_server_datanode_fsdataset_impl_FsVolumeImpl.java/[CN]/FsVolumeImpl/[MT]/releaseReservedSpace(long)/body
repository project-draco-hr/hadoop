{
  if (bytesToRelease != 0) {
    long oldReservation, newReservation;
    do {
      oldReservation=reservedForReplicas.get();
      newReservation=oldReservation - bytesToRelease;
      if (newReservation < 0) {
        newReservation=0;
      }
    }
 while (!reservedForReplicas.compareAndSet(oldReservation,newReservation));
  }
}
