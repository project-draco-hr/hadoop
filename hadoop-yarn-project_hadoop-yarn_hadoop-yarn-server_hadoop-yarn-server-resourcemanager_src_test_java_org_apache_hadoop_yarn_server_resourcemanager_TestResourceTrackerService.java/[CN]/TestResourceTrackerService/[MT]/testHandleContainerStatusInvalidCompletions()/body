{
  rm=new MockRM(new YarnConfiguration());
  rm.start();
  EventHandler handler=spy(rm.getRMContext().getDispatcher().getEventHandler());
  RMApp app=rm.submitApp(1024,true);
  ContainerStatus status=ContainerStatus.newInstance(ContainerId.newInstance(ApplicationAttemptId.newInstance(app.getApplicationId(),2),1),ContainerState.COMPLETE,"Dummy Completed",0);
  rm.getResourceTrackerService().handleContainerStatus(status);
  verify(handler,never()).handle((Event)any());
  RMAppAttemptImpl currentAttempt=(RMAppAttemptImpl)app.getCurrentAppAttempt();
  currentAttempt.setMasterContainer(null);
  status=ContainerStatus.newInstance(ContainerId.newInstance(currentAttempt.getAppAttemptId(),0),ContainerState.COMPLETE,"Dummy Completed",0);
  rm.getResourceTrackerService().handleContainerStatus(status);
  verify(handler,never()).handle((Event)any());
  app=rm.submitApp(1024);
  status=ContainerStatus.newInstance(ContainerId.newInstance(ApplicationAttemptId.newInstance(app.getApplicationId(),2),1),ContainerState.COMPLETE,"Dummy Completed",0);
  try {
    rm.getResourceTrackerService().handleContainerStatus(status);
  }
 catch (  Exception e) {
  }
  verify(handler,never()).handle((Event)any());
  currentAttempt=(RMAppAttemptImpl)app.getCurrentAppAttempt();
  currentAttempt.setMasterContainer(null);
  status=ContainerStatus.newInstance(ContainerId.newInstance(currentAttempt.getAppAttemptId(),0),ContainerState.COMPLETE,"Dummy Completed",0);
  try {
    rm.getResourceTrackerService().handleContainerStatus(status);
  }
 catch (  Exception e) {
  }
  verify(handler,never()).handle((Event)any());
}
