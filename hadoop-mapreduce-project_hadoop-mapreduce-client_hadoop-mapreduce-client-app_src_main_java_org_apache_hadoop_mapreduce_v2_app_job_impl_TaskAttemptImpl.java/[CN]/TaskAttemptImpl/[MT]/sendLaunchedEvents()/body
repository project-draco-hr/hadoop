{
  JobCounterUpdateEvent jce=new JobCounterUpdateEvent(attemptId.getTaskId().getJobId());
  jce.addCounterUpdate(attemptId.getTaskId().getTaskType() == TaskType.MAP ? JobCounter.TOTAL_LAUNCHED_MAPS : JobCounter.TOTAL_LAUNCHED_REDUCES,1);
  eventHandler.handle(jce);
  LOG.info("TaskAttempt: [" + attemptId + "] using containerId: ["+ containerID+ " on NM: ["+ containerMgrAddress+ "]");
  TaskAttemptStartedEvent tase=new TaskAttemptStartedEvent(TypeConverter.fromYarn(attemptId),TypeConverter.fromYarn(attemptId.getTaskId().getTaskType()),launchTime,trackerName,httpPort,shufflePort,containerID,locality.toString(),avataar.toString());
  eventHandler.handle(new JobHistoryEvent(attemptId.getTaskId().getJobId(),tase));
}
