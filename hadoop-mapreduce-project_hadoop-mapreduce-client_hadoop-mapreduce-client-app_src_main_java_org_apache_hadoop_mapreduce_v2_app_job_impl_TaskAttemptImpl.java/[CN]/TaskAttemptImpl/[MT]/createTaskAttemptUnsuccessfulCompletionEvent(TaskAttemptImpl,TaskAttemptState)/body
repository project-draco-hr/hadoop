{
  TaskAttemptUnsuccessfulCompletionEvent tauce=new TaskAttemptUnsuccessfulCompletionEvent(TypeConverter.fromYarn(taskAttempt.attemptId),TypeConverter.fromYarn(taskAttempt.attemptId.getTaskId().getTaskType()),attemptState.toString(),taskAttempt.finishTime,taskAttempt.containerNodeId == null ? "UNKNOWN" : taskAttempt.containerNodeId.getHost(),taskAttempt.containerNodeId == null ? -1 : taskAttempt.containerNodeId.getPort(),StringUtils.join(LINE_SEPARATOR,taskAttempt.getDiagnostics()),taskAttempt.getProgressSplitBlock().burst());
  return tauce;
}
