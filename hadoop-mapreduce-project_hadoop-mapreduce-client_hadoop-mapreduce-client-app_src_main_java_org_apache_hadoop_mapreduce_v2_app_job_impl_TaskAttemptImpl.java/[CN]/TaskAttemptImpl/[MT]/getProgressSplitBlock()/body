{
  readLock.lock();
  try {
    if (progressSplitBlock == null) {
      progressSplitBlock=new WrappedProgressSplitsBlock(conf.getInt(JHConfig.JOBHISTORY_TASKPROGRESS_NUMBER_SPLITS_KEY,WrappedProgressSplitsBlock.DEFAULT_NUMBER_PROGRESS_SPLITS));
    }
    return progressSplitBlock;
  }
  finally {
    readLock.unlock();
  }
}
