{
  readLock.lock();
  try {
    if (progressSplitBlock == null) {
      progressSplitBlock=new WrappedProgressSplitsBlock(conf.getInt(MRJobConfig.MR_AM_NUM_PROGRESS_SPLITS,MRJobConfig.DEFAULT_MR_AM_NUM_PROGRESS_SPLITS));
    }
    return progressSplitBlock;
  }
  finally {
    readLock.unlock();
  }
}
