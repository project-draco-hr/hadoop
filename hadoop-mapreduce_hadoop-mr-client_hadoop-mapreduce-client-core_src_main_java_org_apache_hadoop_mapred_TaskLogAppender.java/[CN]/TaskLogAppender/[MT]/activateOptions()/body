{
synchronized (this) {
    setOptionsFromSystemProperties();
    if (maxEvents > 0) {
      tail=new LinkedList<LoggingEvent>();
    }
    setFile(TaskLog.getTaskLogFile(TaskAttemptID.forName(taskId),isCleanup,TaskLog.LogName.SYSLOG).toString());
    setAppend(true);
    super.activateOptions();
  }
}
