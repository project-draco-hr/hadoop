{
  waitForSyncToFinish();
  if (editStreams == null || editStreams.isEmpty()) {
    return;
  }
  printStatistics(true);
  numTransactions=totalTimeTransactions=numTransactionsBatchedInSync=0;
  ArrayList<EditLogOutputStream> errorStreams=null;
  Iterator<EditLogOutputStream> it=getOutputStreamIterator(null);
  while (it.hasNext()) {
    EditLogOutputStream eStream=it.next();
    try {
      closeStream(eStream);
    }
 catch (    IOException e) {
      LOG.warn("FSEditLog:close - failed to close stream " + eStream.getName());
      if (errorStreams == null)       errorStreams=new ArrayList<EditLogOutputStream>(1);
      errorStreams.add(eStream);
    }
  }
  disableAndReportErrorOnStreams(errorStreams);
  editStreams.clear();
}
