{
  CloseOp op=CloseOp.getInstance().setPath(path).setReplication(newNode.getReplication()).setModificationTime(newNode.getModificationTime()).setAccessTime(newNode.getAccessTime()).setBlockSize(newNode.getPreferredBlockSize()).setBlocks(newNode.getBlocks()).setPermissionStatus(newNode.getPermissionStatus());
  logEdit(op);
}
