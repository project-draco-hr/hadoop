{
  String nameNodeId1="nn1";
  String nameNodeId2="nn2";
  String address1="hdfs://" + nnAddr1.getHostName() + ":"+ nnAddr1.getPort();
  String address2="hdfs://" + nnAddr2.getHostName() + ":"+ nnAddr2.getPort();
  conf.set(DFSUtil.addKeySuffixes(DFS_NAMENODE_RPC_ADDRESS_KEY,logicalName,nameNodeId1),address1);
  conf.set(DFSUtil.addKeySuffixes(DFS_NAMENODE_RPC_ADDRESS_KEY,logicalName,nameNodeId2),address2);
  conf.set(DFSConfigKeys.DFS_FEDERATION_NAMESERVICES,logicalName);
  conf.set(DFSUtil.addKeySuffixes(DFS_HA_NAMENODES_KEY_PREFIX,logicalName),nameNodeId1 + "," + nameNodeId2);
  conf.set(DFS_CLIENT_FAILOVER_PROXY_PROVIDER_KEY_PREFIX + "." + logicalName,ConfiguredFailoverProxyProvider.class.getName());
  conf.set("fs.defaultFS","hdfs://" + logicalName);
}
