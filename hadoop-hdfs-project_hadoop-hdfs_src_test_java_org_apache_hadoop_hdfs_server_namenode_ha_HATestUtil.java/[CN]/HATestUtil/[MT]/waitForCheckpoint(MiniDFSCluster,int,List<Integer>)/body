{
  long start=System.currentTimeMillis();
  while (true) {
    try {
      FSImageTestUtil.assertNNHasCheckpoints(cluster,nnIdx,txids);
      return;
    }
 catch (    AssertionError err) {
      if (System.currentTimeMillis() - start > 10000) {
        throw err;
      }
 else {
        Thread.sleep(300);
      }
    }
  }
}
