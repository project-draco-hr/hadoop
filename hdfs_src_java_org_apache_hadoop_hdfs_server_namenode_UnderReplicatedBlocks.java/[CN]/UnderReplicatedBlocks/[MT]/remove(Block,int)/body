{
  if (priLevel >= 0 && priLevel < LEVEL && priorityQueues.get(priLevel).remove(block)) {
    if (NameNode.stateChangeLog.isDebugEnabled()) {
      NameNode.stateChangeLog.debug("BLOCK* NameSystem.UnderReplicationBlock.remove: " + "Removing block " + block + " from priority queue "+ priLevel);
    }
    return true;
  }
 else {
    for (int i=0; i < LEVEL; i++) {
      if (priorityQueues.get(i).remove(block)) {
        if (NameNode.stateChangeLog.isDebugEnabled()) {
          NameNode.stateChangeLog.debug("BLOCK* NameSystem.UnderReplicationBlock.remove: " + "Removing block " + block + " from priority queue "+ i);
        }
        return true;
      }
    }
  }
  return false;
}
