{
  requireTask();
  set(COUNTER_GROUP,URLDecoder.decode($(COUNTER_GROUP),"UTF-8"));
  set(COUNTER_NAME,URLDecoder.decode($(COUNTER_NAME),"UTF-8"));
  if (app.getTask() != null) {
    setTitle(StringHelper.join($(COUNTER_GROUP)," ",$(COUNTER_NAME)," for ",$(TASK_ID)));
  }
  render(singleCounterPage());
}
