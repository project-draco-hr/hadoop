{
  try {
    int result=0;
    result=in.read();
    if (result != -1) {
      pos++;
      if (statistics != null) {
        statistics.incrementBytesRead(1);
      }
    }
    return result;
  }
 catch (  IOException e) {
    if (e.getCause() instanceof StorageException) {
      StorageException storageExcp=(StorageException)e.getCause();
      LOG.error("Encountered Storage Exception for read on Blob : {}" + " Exception details: {} Error Code : {}",key,e.getMessage(),storageExcp.getErrorCode());
    }
    throw e;
  }
}
