{
  assertEquals(NameNode.getAddress("foo").getPort(),DFSConfigKeys.DFS_NAMENODE_RPC_PORT_DEFAULT);
  assertEquals(NameNode.getAddress("hdfs://foo/").getPort(),DFSConfigKeys.DFS_NAMENODE_RPC_PORT_DEFAULT);
  assertEquals(NameNode.getAddress("hdfs://foo:555").getPort(),555);
  assertEquals(NameNode.getAddress("foo:555").getPort(),555);
}
