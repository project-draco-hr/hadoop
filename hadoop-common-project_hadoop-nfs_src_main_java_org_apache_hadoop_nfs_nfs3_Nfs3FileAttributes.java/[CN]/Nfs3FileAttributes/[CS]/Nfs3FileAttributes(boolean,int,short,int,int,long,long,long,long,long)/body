{
  this.type=isDir ? NfsFileType.NFSDIR.toValue() : NfsFileType.NFSREG.toValue();
  this.mode=mode;
  this.nlink=isDir ? (nlink + 2) : 1;
  this.uid=uid;
  this.gid=gid;
  this.size=size;
  if (isDir) {
    this.size=getDirSize(nlink);
  }
  this.used=this.size;
  this.rdev=new Specdata3();
  this.fsid=fsid;
  this.fileid=fileid;
  this.mtime=new NfsTime(mtime);
  this.atime=atime != 0 ? new NfsTime(atime) : this.mtime;
  this.ctime=this.mtime;
}
