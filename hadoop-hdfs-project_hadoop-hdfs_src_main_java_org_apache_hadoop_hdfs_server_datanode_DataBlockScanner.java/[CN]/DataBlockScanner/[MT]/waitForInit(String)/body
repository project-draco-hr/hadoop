{
  UpgradeManagerDatanode um=null;
  if (bpid != null && !bpid.equals(""))   um=datanode.getUpgradeManagerDatanode(bpid);
  while ((um != null && !um.isUpgradeCompleted()) || (getBlockPoolSetSize() < datanode.getAllBpOs().length) || (getBlockPoolSetSize() < 1)) {
    try {
      Thread.sleep(5000);
    }
 catch (    InterruptedException e) {
      blockScannerThread.interrupt();
      return;
    }
  }
}
