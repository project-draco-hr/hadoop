{
  ApplicationCLI cli=createAndGetAppCLI();
  ApplicationId applicationId=ApplicationId.newInstance(1234,5);
  when(client.getApplicationReport(any(ApplicationId.class))).thenThrow(new ApplicationNotFoundException("Application with id '" + applicationId + "' doesn't exist in RM."));
  try {
    cli.run(new String[]{"-status",applicationId.toString()});
    Assert.fail();
  }
 catch (  Exception ex) {
    Assert.assertTrue(ex instanceof ApplicationNotFoundException);
    Assert.assertEquals("Application with id '" + applicationId + "' doesn't exist in RM.",ex.getMessage());
  }
}
