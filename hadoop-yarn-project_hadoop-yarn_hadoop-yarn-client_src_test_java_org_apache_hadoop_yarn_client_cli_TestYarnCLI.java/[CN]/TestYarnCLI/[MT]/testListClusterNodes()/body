  pw.println("                           0");
  pw.print("         host1:0\t        RUNNING\t       host1:8888\t");
  pw.println("                           0");
  pw.print("         host0:0\t       REBOOTED\t       host1:8888\t");
  pw.println("                           0");
  pw.print("         host0:0\t           LOST\t       host1:8888\t");
  pw.println("                           0");
  pw.close();
