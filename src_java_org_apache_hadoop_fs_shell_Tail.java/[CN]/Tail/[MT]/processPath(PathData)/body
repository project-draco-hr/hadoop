{
  if (item.stat.isDirectory()) {
    throw new IOException("Source must be a file.");
  }
  long offset=dumpFromOffset(item,startingOffset);
  while (follow) {
    try {
      Thread.sleep(followDelay);
    }
 catch (    InterruptedException e) {
      break;
    }
    offset=dumpFromOffset(item,offset);
  }
}
