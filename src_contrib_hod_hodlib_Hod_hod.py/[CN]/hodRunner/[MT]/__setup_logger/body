def __setup_logger(self):
    self.__baseLogger = hodlib.Common.logger.hodLog('hod')
    self.__log = self.__baseLogger.add_logger(self.__user)
    if self.__cfg['hod']['stream']:
        self.__baseLogger.add_stream(level=self.__cfg['hod']['debug'], addToLoggerNames=(self.__user,))
    if self.__cfg['hod'].has_key('syslog-address'):
        self.__baseLogger.add_syslog(self.__cfg['hod']['syslog-address'], level=self.__cfg['hod']['debug'], addToLoggerNames=(self.__user,))
