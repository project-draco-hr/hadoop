def help(self, op=None):
    if (op is None):
        return ((('hod <operation> [ARGS] [OPTIONS]\n' + ('Available operations : %s\n' % self.ops)) + 'For help on a particular operation : hod help <operation>.\n') + 'For all options : hod help options.')
    else:
        return ((((('Usage       : ' + self.usage_strings[op]) + '\n') + 'Description : ') + self.description_strings[op]) + 'For all options : hod help options.\n')
