def checkStateFile(self, id=None, modes=(os.R_OK,)):
    self.__set_state_file(id)
    try:
        os.stat(self.__stateFile)
    except OSError as err:
        if (err.errno == errno.ENOENT):
            return True
    ret = True
    for mode in modes:
        ret = (ret and os.access(self.__stateFile, mode))
    return ret
