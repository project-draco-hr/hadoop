{
  if (conf == null) {
    return null;
  }
  Class<? extends RawErasureCoderFactory> factClass=null;
  factClass=conf.getClass(rawCoderFactoryKey,factClass,RawErasureCoderFactory.class);
  if (factClass == null) {
    return null;
  }
  RawErasureCoderFactory fact;
  try {
    fact=factClass.newInstance();
  }
 catch (  InstantiationException e) {
    throw new RuntimeException("Failed to create raw coder",e);
  }
catch (  IllegalAccessException e) {
    throw new RuntimeException("Failed to create raw coder",e);
  }
  return isEncoder ? fact.createEncoder(numDataUnits,numParityUnits) : fact.createDecoder(numDataUnits,numParityUnits);
}
