{
  int maxChunksIdeal=conf.getInt(DistCpConstants.CONF_LABEL_MAX_CHUNKS_IDEAL,DistCpConstants.MAX_CHUNKS_IDEAL_DEFAULT);
  if (maxChunksIdeal <= 0) {
    LOG.warn(DistCpConstants.CONF_LABEL_MAX_CHUNKS_IDEAL + " should be positive. Fall back to default value: " + DistCpConstants.MAX_CHUNKS_IDEAL_DEFAULT);
    maxChunksIdeal=DistCpConstants.MAX_CHUNKS_IDEAL_DEFAULT;
  }
  return maxChunksIdeal;
}
