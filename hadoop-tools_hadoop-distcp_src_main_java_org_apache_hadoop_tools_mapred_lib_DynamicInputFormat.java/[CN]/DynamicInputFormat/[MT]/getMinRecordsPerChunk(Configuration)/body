{
  int minRecordsPerChunk=conf.getInt(DistCpConstants.CONF_LABEL_MIN_RECORDS_PER_CHUNK,DistCpConstants.MIN_RECORDS_PER_CHUNK_DEFAULT);
  if (minRecordsPerChunk <= 0) {
    LOG.warn(DistCpConstants.CONF_LABEL_MIN_RECORDS_PER_CHUNK + " should be positive. Fall back to default value: " + DistCpConstants.MIN_RECORDS_PER_CHUNK_DEFAULT);
    minRecordsPerChunk=DistCpConstants.MIN_RECORDS_PER_CHUNK_DEFAULT;
  }
  return minRecordsPerChunk;
}
