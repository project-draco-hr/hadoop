{
  String raw=getProperty(queue,MAX_CAPACITY_PROPERTY);
  float result=getFloat(raw,-1);
  result=(result <= 0) ? -1 : result;
  if (result > 100.0) {
    throw new IllegalArgumentException("Illegal maximum-capacity-stretch " + "for queue " + queue + " of "+ result);
  }
  if ((result != -1) && (result < getCapacity(queue))) {
    throw new IllegalArgumentException("maximum-capacity-stretch " + "for a queue should be greater than capacity ");
  }
  return result;
}
