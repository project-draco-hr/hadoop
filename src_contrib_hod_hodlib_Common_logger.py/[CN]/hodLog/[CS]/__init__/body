def __init__(self, appName):
    'Constructs a hodLogger object.\n\n        appName      - name of logging application, log filenames will be\n                       prepended with this name'
    self.__appName = appName
    self.__loggerNames = {}
    self.__logObjs = {'file': {}, 'smtp': {}, 'syslog': {}, 'strm': {}, }
    logging.setLoggerClass(hodCustomLoggingLogger)
    self.__logger = logging.getLogger(appName)
    self.__logger.setLevel(logging.DEBUG)
    hodLogs[self.__appName] = self
