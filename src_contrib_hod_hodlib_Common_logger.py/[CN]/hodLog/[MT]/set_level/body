def set_level(self, handler, loggerName, level):
    'Sets the logging level of a particular logger and logger handler.\n\n           handler    - handler (smtp, file, or stream)\n           loggerName - logger to set level on\n           level      - level to set logger\n        '
    level = self.__get_logging_level(level, defaultFileLevel)
    self.__logObjs[handler][loggerName]['handler'].setLevel(level)
    self.__logObjs[handler][loggerName]['level'] = level
    if (handler == 'stream'):
        self.__logObjs[handler][loggerName]['handler'].setFormatter(hodStreamFormatMap[int(level)])
