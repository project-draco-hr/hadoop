def critical(self, loggerName, msg):
    'Logs a critical message and flushes log buffers.  This method really\n           should only be called upon a catastrophic failure.\n\n           loggerName - logger to use\n           msg        - message to be logged'
    loggingLoggerName = self.__get_logging_logger_name(loggerName)
    logger = logging.getLogger(loggingLoggerName)
    logger.critical(msg)
    self.flush()
