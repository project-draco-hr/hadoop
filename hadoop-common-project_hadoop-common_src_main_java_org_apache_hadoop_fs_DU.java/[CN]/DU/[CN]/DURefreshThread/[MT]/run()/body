{
  while (shouldRun) {
    try {
      Thread.sleep(refreshInterval);
      try {
        DU.this.run();
      }
 catch (      IOException e) {
synchronized (DU.this) {
          duException=e;
        }
        LOG.warn("Could not get disk usage information",e);
      }
    }
 catch (    InterruptedException e) {
    }
  }
}
