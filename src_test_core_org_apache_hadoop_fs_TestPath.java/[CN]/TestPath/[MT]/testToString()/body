{
  toStringTest("/");
  toStringTest("/foo");
  toStringTest("/foo/bar");
  toStringTest("foo");
  toStringTest("foo/bar");
  boolean emptyException=false;
  try {
    toStringTest("");
  }
 catch (  IllegalArgumentException e) {
    emptyException=true;
  }
  assertTrue(emptyException);
  if (Path.WINDOWS) {
    toStringTest("c:");
    toStringTest("c:/");
    toStringTest("c:foo");
    toStringTest("c:foo/bar");
    toStringTest("c:foo/bar");
    toStringTest("c:/foo/bar");
  }
}
