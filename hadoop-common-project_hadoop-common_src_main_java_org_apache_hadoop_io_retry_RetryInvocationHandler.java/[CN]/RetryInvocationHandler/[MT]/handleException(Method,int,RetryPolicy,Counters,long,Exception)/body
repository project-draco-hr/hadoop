{
  final RetryInfo retryInfo=RetryInfo.newRetryInfo(policy,e,counters,proxyDescriptor.idempotentOrAtMostOnce(method),expectFailoverCount);
  if (retryInfo.isFail()) {
    if (retryInfo.action.reason != null) {
      if (LOG.isDebugEnabled()) {
        LOG.debug("Exception while invoking call #" + callId + " "+ proxyDescriptor.getProxyInfo().getString(method.getName())+ ". Not retrying because "+ retryInfo.action.reason,e);
      }
    }
    throw e;
  }
  log(method,retryInfo.isFailover(),counters.failovers,retryInfo.delay,e);
  return retryInfo;
}
