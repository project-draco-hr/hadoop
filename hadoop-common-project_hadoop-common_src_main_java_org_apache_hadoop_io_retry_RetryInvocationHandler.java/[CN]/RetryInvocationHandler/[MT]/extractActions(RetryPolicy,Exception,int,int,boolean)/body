{
  List<RetryAction> actions=new LinkedList<>();
  if (ex instanceof MultiException) {
    for (    Exception th : ((MultiException)ex).getExceptions().values()) {
      actions.add(policy.shouldRetry(th,i,invocationFailoverCount,isIdempotentOrAtMostOnce));
    }
  }
 else {
    actions.add(policy.shouldRetry(ex,i,invocationFailoverCount,isIdempotentOrAtMostOnce));
  }
  return actions;
}
