{
  return createWriter(FileContext.getFileContext(fs.getUri(),conf),conf,name,keyClass,valClass,compressionType,codec,metadata,EnumSet.of(CreateFlag.CREATE,CreateFlag.OVERWRITE),CreateOpts.bufferSize(bufferSize),createParent ? CreateOpts.createParent() : CreateOpts.donotCreateParent(),CreateOpts.repFac(replication),CreateOpts.blockSize(blockSize));
}
