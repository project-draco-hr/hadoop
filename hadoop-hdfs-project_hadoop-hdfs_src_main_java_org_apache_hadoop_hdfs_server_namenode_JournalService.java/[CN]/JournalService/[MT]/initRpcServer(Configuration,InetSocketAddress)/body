{
  RPC.setProtocolEngine(conf,JournalProtocolPB.class,ProtobufRpcEngine.class);
  JournalProtocolServerSideTranslatorPB xlator=new JournalProtocolServerSideTranslatorPB(this);
  BlockingService service=JournalProtocolService.newReflectiveBlockingService(xlator);
  rpcServer=RPC.getServer(JournalProtocolPB.class,service,serverAddress.getHostName(),serverAddress.getPort(),1,false,conf,null);
}
