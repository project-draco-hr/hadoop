{
  long st=System.currentTimeMillis();
  long runFor=STRESS_RUNTIME_SECS * 1000;
  int i=0;
  while (System.currentTimeMillis() - st < runFor) {
    int from=i % 2;
    int to=(i + 1) % 2;
    LOG.info("Failing over via expiration from " + from + " to "+ to);
    cluster.expireAndVerifyFailover(from,to);
    i++;
  }
}
