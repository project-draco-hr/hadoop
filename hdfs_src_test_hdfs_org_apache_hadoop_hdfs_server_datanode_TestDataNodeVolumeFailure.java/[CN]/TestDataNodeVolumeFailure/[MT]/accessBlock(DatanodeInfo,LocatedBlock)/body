{
  InetSocketAddress targetAddr=null;
  Socket s=null;
  ExtendedBlock block=lblock.getBlock();
  targetAddr=NetUtils.createSocketAddr(datanode.getName());
  s=new Socket();
  s.connect(targetAddr,HdfsConstants.READ_TIMEOUT);
  s.setSoTimeout(HdfsConstants.READ_TIMEOUT);
  String file=BlockReader.getFileName(targetAddr,"test-blockpoolid",block.getBlockId());
  BlockReader blockReader=BlockReader.newBlockReader(s,file,block,lblock.getBlockToken(),0,-1,4096);
