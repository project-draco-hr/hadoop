{
  UtilsForGridmix.cleanup(gridmixDir,rtClient.getDaemonConf());
  org.apache.hadoop.fs.FileUtil.fullyDelete(new java.io.File(System.getProperty("java.io.tmpdir") + "/gridmix-st/"));
  cluster.tearDown();
  if (gridmixJV != null && gridmixJV.getJobUserResolver().contains("RoundRobin")) {
    List<String> proxyUsers=UtilsForGridmix.listProxyUsers(gridmixJS.getJobConf(),UserGroupInformation.getLoginUser().getShortUserName());
    for (int index=0; index < proxyUsers.size(); index++) {
      UtilsForGridmix.cleanup(new Path("hdfs:///user/" + proxyUsers.get(index)),rtClient.getDaemonConf());
    }
  }
}
