{
  String pathString=str;
  byte[][] oldPathComponents=INode.getPathComponents(pathString);
  byte[][] newPathComponents=DFSUtil.bytes2byteArray(pathString.getBytes("UTF-8"),(byte)Path.SEPARATOR_CHAR);
  if (oldPathComponents[0] == null) {
    assertTrue(oldPathComponents[0] == newPathComponents[0]);
  }
 else {
    assertTrue("Path components do not match for " + pathString,Arrays.deepEquals(oldPathComponents,newPathComponents));
  }
}
