{
  if (host == null) {
    return null;
  }
  hostmapLock.readLock().lock();
  try {
    DatanodeDescriptor[] nodes=map.get(host);
    if (nodes == null) {
      return null;
    }
    if (nodes.length == 1) {
      return nodes[0];
    }
    return nodes[DFSUtil.getRandom().nextInt(nodes.length)];
  }
  finally {
    hostmapLock.readLock().unlock();
  }
}
