{
  final Path absF=fixRelativePart(path);
  return new FileSystemLinkResolver<List<String>>(){
    @Override public List<String> doCall(    final Path p) throws IOException {
      return dfs.listXAttrs(getPathName(p));
    }
    @Override public List<String> next(    final FileSystem fs,    final Path p) throws IOException {
      return fs.listXAttrs(p);
    }
  }
.resolve(this,absF);
}
