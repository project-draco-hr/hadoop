{
  statistics.incrementReadOps(1);
  Path absF=fixRelativePart(path);
  return new FileSystemLinkResolver<BlockStoragePolicySpi>(){
    @Override public BlockStoragePolicySpi doCall(    final Path p) throws IOException {
      return getClient().getStoragePolicy(getPathName(p));
    }
    @Override public BlockStoragePolicySpi next(    final FileSystem fs,    final Path p) throws IOException {
      return fs.getStoragePolicy(p);
    }
  }
.resolve(this,absF);
}
