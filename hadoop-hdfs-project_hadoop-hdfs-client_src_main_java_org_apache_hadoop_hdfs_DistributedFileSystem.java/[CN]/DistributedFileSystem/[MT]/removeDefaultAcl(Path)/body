{
  final Path absF=fixRelativePart(path);
  new FileSystemLinkResolver<Void>(){
    @Override public Void doCall(    final Path p) throws IOException {
      dfs.removeDefaultAcl(getPathName(p));
      return null;
    }
    @Override public Void next(    final FileSystem fs,    final Path p) throws IOException, UnresolvedLinkException {
      fs.removeDefaultAcl(p);
      return null;
    }
  }
.resolve(this,absF);
}
