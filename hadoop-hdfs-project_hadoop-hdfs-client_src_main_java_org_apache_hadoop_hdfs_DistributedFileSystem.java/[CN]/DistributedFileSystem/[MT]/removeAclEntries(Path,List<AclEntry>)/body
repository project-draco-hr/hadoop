{
  statistics.incrementWriteOps(1);
  storageStatistics.incrementOpCounter(OpType.REMOVE_ACL_ENTRIES);
  Path absF=fixRelativePart(path);
  new FileSystemLinkResolver<Void>(){
    @Override public Void doCall(    final Path p) throws IOException {
      dfs.removeAclEntries(getPathName(p),aclSpec);
      return null;
    }
    @Override public Void next(    final FileSystem fs,    final Path p) throws IOException {
      fs.removeAclEntries(p,aclSpec);
      return null;
    }
  }
.resolve(this,absF);
}
