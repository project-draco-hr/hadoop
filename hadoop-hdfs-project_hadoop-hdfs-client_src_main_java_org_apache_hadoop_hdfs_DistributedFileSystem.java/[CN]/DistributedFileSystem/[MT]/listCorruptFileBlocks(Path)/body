{
  Path absF=fixRelativePart(path);
  return new FileSystemLinkResolver<RemoteIterator<Path>>(){
    @Override public RemoteIterator<Path> doCall(    final Path path) throws IOException, UnresolvedLinkException {
      return new CorruptFileBlockIterator(dfs,path);
    }
    @Override public RemoteIterator<Path> next(    final FileSystem fs,    final Path path) throws IOException {
      return fs.listCorruptFileBlocks(path);
    }
  }
.resolve(this,absF);
}
