{
  namesystem.writeLock();
  try {
    final DatanodeDescriptor descriptor=getDatanode(node);
    if (descriptor != null) {
      removeDatanode(descriptor);
    }
 else {
      NameNode.stateChangeLog.warn("BLOCK* removeDatanode: " + node.getName() + " does not exist");
    }
  }
  finally {
    namesystem.writeUnlock();
  }
}
