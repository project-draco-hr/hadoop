{
  super.localizeConfiguration(conf);
  if (supportIsolationRunner(conf) && isMapOrReduce()) {
    Path localSplitMeta=new LocalDirAllocator(MRConfig.LOCAL_DIR).getLocalPathForWrite(TaskTracker.getLocalSplitMetaFile(conf.getUser(),getJobID().toString(),getTaskID().toString()),conf);
    LOG.debug("Writing local split to " + localSplitMeta);
    DataOutputStream out=FileSystem.getLocal(conf).create(localSplitMeta);
    splitMetaInfo.write(out);
    out.close();
  }
}
