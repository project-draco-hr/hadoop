{
  long currentMax=get();
  if (currentMax < maxTxId) {
    if (LOG.isTraceEnabled()) {
      LOG.trace("Setting maxTxId to " + maxTxId);
    }
    String txidStr=Long.toString(maxTxId);
    try {
      if (currentStat != null) {
        currentStat=zkc.setData(path,txidStr.getBytes("UTF-8"),currentStat.getVersion());
      }
 else {
        zkc.create(path,txidStr.getBytes("UTF-8"),Ids.OPEN_ACL_UNSAFE,CreateMode.PERSISTENT);
      }
    }
 catch (    KeeperException e) {
      throw new IOException("Error writing max tx id",e);
    }
catch (    InterruptedException e) {
      throw new IOException("Interrupted while writing max tx id",e);
    }
  }
}
