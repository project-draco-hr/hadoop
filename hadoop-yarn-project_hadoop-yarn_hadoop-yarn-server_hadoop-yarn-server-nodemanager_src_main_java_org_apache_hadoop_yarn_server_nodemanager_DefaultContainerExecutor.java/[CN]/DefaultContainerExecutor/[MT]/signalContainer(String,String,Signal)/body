{
  final String sigpid=ContainerExecutor.isSetsidAvailable ? "-" + pid : pid;
  LOG.debug("Sending signal " + signal.getValue() + " to pid "+ sigpid+ " as user "+ user);
  if (!containerIsAlive(sigpid)) {
    return false;
  }
  try {
    killContainer(sigpid,signal);
  }
 catch (  IOException e) {
    if (!containerIsAlive(sigpid)) {
      return false;
    }
    throw e;
  }
  return true;
}
