{
  ClassLoader cl=Thread.currentThread().getContextClassLoader();
  if (cl == null) {
    cl=MiniKdc.class.getClassLoader();
  }
  InputStream is=cl.getResourceAsStream(resourceName);
  if (is == null) {
    throw new IOException("Can not read resource file '" + resourceName + "'");
  }
  return is;
}
