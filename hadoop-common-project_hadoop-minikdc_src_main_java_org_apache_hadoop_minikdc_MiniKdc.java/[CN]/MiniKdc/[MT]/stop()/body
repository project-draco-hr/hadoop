{
  if (simpleKdc != null) {
    try {
      simpleKdc.stop();
    }
 catch (    KrbException e) {
      e.printStackTrace();
    }
 finally {
      if (conf.getProperty(DEBUG) != null) {
        System.setProperty(SUN_SECURITY_KRB5_DEBUG,Boolean.toString(krb5Debug));
      }
    }
  }
  delete(workDir);
  try {
    Thread.sleep(1000);
  }
 catch (  InterruptedException e) {
    e.printStackTrace();
  }
  LOG.info("MiniKdc stopped.");
}
