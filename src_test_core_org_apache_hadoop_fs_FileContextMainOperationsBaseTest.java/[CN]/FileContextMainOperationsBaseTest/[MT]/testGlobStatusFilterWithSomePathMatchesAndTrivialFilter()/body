{
  Path[] testDirs={getTestRootPath(TEST_DIR_AAA),getTestRootPath(TEST_DIR_AXA),getTestRootPath(TEST_DIR_AXX),getTestRootPath(TEST_DIR_AXX)};
  if (fc.exists(testDirs[0]) == false) {
    for (    Path path : testDirs) {
      fc.mkdir(path,FsPermission.getDefault(),true);
    }
  }
  FileStatus[] filteredPaths=fc.util().globStatus(getTestRootPath("test/hadoop/*"),DEFAULT_FILTER);
  Assert.assertEquals(3,filteredPaths.length);
  Assert.assertEquals(getTestRootPath(TEST_DIR_AAA),filteredPaths[0].getPath());
  Assert.assertEquals(getTestRootPath(TEST_DIR_AXA),filteredPaths[1].getPath());
  Assert.assertEquals(getTestRootPath(TEST_DIR_AXX),filteredPaths[2].getPath());
}
