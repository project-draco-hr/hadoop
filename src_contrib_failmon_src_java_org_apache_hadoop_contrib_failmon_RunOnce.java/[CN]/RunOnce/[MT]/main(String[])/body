{
  String configFilePath="./conf/failmon.properties";
  String[] onlyList=null;
  for (int i=0; i < args.length - 1; i++) {
    if (args[i].equalsIgnoreCase("--config"))     configFilePath=args[i + 1];
 else     if (args[i].equalsIgnoreCase("--only"))     onlyList=args[i + 1].split(",");
  }
  RunOnce ro=new RunOnce(configFilePath);
  if (onlyList != null)   ro.filter(onlyList);
  ro.run();
}
