{
  final String providerUriStr=conf.getTrimmed(CommonConfigurationKeysPublic.HADOOP_SECURITY_KEY_PROVIDER_PATH,"");
  if (providerUriStr.isEmpty()) {
    LOG.error("Could not find uri with key [" + CommonConfigurationKeysPublic.HADOOP_SECURITY_KEY_PROVIDER_PATH + "] to create a keyProvider !!");
    return null;
  }
  final URI providerUri;
  try {
    providerUri=new URI(providerUriStr);
  }
 catch (  URISyntaxException e) {
    LOG.error("KeyProvider URI string is invalid [" + providerUriStr + "]!!",e.getCause());
    return null;
  }
  return providerUri;
}
