{
  Map<String,String> params=new HashMap<String,String>();
  params.put(OP_PARAM,Operation.GETCONTENTSUMMARY.toString());
  HttpURLConnection conn=getConnection(Operation.GETCONTENTSUMMARY.getMethod(),params,f,true);
  HttpExceptionUtils.validateResponse(conn,HttpURLConnection.HTTP_OK);
  JSONObject json=(JSONObject)((JSONObject)HttpFSUtils.jsonParse(conn)).get(CONTENT_SUMMARY_JSON);
  return new ContentSummary((Long)json.get(CONTENT_SUMMARY_LENGTH_JSON),(Long)json.get(CONTENT_SUMMARY_FILE_COUNT_JSON),(Long)json.get(CONTENT_SUMMARY_DIRECTORY_COUNT_JSON),(Long)json.get(CONTENT_SUMMARY_QUOTA_JSON),(Long)json.get(CONTENT_SUMMARY_SPACE_CONSUMED_JSON),(Long)json.get(CONTENT_SUMMARY_SPACE_QUOTA_JSON));
}
