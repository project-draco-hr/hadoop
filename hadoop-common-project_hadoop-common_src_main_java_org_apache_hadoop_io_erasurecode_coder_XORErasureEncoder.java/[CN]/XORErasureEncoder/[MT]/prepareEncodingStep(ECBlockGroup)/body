{
  ErasureCoderOptions coderOptions=new ErasureCoderOptions(getNumDataUnits(),getNumParityUnits());
  RawErasureEncoder rawEncoder=CodecUtil.createRawEncoder(getConf(),ErasureCodeConstants.XOR_CODEC_NAME,coderOptions);
  ECBlock[] inputBlocks=getInputBlocks(blockGroup);
  return new ErasureEncodingStep(inputBlocks,getOutputBlocks(blockGroup),rawEncoder);
}
