{
  final String scheme;
  if (name.getScheme() == null || name.getScheme().isEmpty()) {
    scheme=getDefaultUri(conf).getScheme();
  }
 else {
    scheme=name.getScheme();
  }
  statistics=getStatistics(scheme,getClass());
  resolveSymlinks=conf.getBoolean(CommonConfigurationKeys.FS_CLIENT_RESOLVE_REMOTE_SYMLINKS_KEY,CommonConfigurationKeys.FS_CLIENT_RESOLVE_REMOTE_SYMLINKS_DEFAULT);
}
