{
  Configuration conf=context.getConfiguration();
  numBytesToWrite=1024 * 1024 * conf.getLong(MBS_PER_MAP,2 * conf.getInt(MRJobConfig.IO_SORT_MB,512));
  minKeySize=conf.getInt(MIN_KEY,10);
  keySizeRange=conf.getInt(MAX_KEY,1000) - minKeySize;
  minValueSize=conf.getInt(MIN_VALUE,0);
  valueSizeRange=conf.getInt(MAX_VALUE,20000) - minValueSize;
}
