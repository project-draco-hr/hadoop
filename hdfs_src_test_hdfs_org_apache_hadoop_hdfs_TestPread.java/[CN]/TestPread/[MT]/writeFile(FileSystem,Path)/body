{
  DataOutputStream stm=fileSys.create(name,true,4096,(short)1,(long)blockSize);
  stm.close();
  FSDataInputStream in=fileSys.open(name);
  byte[] buffer=new byte[12 * blockSize];
  in.readFully(0,buffer,0,0);
  IOException res=null;
  try {
    in.readFully(0,buffer,0,1);
  }
 catch (  IOException e) {
    res=e;
  }
  assertTrue("Error reading beyond file boundary.",res != null);
  in.close();
  if (!fileSys.delete(name,true))   assertTrue("Cannot delete file",false);
  stm=fileSys.create(name,true,4096,(short)1,(long)blockSize);
  Random rand=new Random(seed);
  rand.nextBytes(buffer);
  stm.write(buffer);
  stm.close();
}
