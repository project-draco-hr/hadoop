{
  InetAddress addr=null;
  if (host.endsWith(".")) {
    addr=getByExactName(host);
  }
 else {
    for (    String domain : searchDomains) {
      String dot=!domain.startsWith(".") ? "." : "";
      addr=getByExactName(host + dot + domain);
      if (addr != null)       break;
    }
  }
  return addr;
}
