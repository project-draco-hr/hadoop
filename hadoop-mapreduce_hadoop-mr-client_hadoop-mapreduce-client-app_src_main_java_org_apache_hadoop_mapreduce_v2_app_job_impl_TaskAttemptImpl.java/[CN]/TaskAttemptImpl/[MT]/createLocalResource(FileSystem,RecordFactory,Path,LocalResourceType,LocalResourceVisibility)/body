{
  FileStatus fstat=fc.getFileStatus(file);
  LocalResource resource=recordFactory.newRecordInstance(LocalResource.class);
  resource.setResource(ConverterUtils.getYarnUrlFromPath(fc.resolvePath(fstat.getPath())));
  resource.setType(type);
  resource.setVisibility(visibility);
  resource.setSize(fstat.getLen());
  resource.setTimestamp(fstat.getModificationTime());
  return resource;
}
