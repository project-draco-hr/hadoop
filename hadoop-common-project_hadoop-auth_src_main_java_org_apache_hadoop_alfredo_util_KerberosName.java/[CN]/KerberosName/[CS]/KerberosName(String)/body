{
  Matcher match=nameParser.matcher(name);
  if (!match.matches()) {
    if (name.contains("@")) {
      throw new IllegalArgumentException("Malformed Kerberos name: " + name);
    }
 else {
      serviceName=name;
      hostName=null;
      realm=null;
    }
  }
 else {
    serviceName=match.group(1);
    hostName=match.group(3);
    realm=match.group(4);
  }
}
