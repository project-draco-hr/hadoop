{
  ReservationRequest aggregateReservationRequest=Records.newRecord(ReservationRequest.class);
  Resource capacity=Resource.newInstance(0,0);
  for (  ReservationRequest ReservationRequest : ReservationRequests) {
    Resources.addTo(capacity,Resources.multiply(ReservationRequest.getCapability(),ReservationRequest.getNumContainers()));
  }
  aggregateReservationRequest.setNumContainers((int)Math.ceil(Resources.divide(resourceCalculator,clusterResource,capacity,minAlloc)));
  aggregateReservationRequest.setCapability(minAlloc);
  return addInterval(reservationInterval,aggregateReservationRequest);
}
