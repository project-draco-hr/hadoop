{
  Thread sleeper=new Thread(){
    public void run(){
      try {
        bookie.suspendProcessing();
        l.await(60,TimeUnit.SECONDS);
        bookie.resumeProcessing();
      }
 catch (      Exception e) {
        LOG.error("Error suspending bookie",e);
      }
    }
  }
;
  sleeper.setName("BookieServerSleeper-" + bookie.getBookie().getId());
  sleeper.start();
}
