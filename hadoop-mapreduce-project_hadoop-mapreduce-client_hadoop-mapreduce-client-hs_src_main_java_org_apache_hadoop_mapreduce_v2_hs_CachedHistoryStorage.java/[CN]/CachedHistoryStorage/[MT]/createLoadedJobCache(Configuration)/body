{
  loadedJobCacheSize=conf.getInt(JHAdminConfig.MR_HISTORY_LOADED_JOB_CACHE_SIZE,JHAdminConfig.DEFAULT_MR_HISTORY_LOADED_JOB_CACHE_SIZE);
  loadedJobCache=Collections.synchronizedMap(new LinkedHashMap<JobId,Job>(loadedJobCacheSize + 1,0.75f,true){
    @Override public boolean removeEldestEntry(    final Map.Entry<JobId,Job> eldest){
      return super.size() > loadedJobCacheSize;
    }
  }
);
}
