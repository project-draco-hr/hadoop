{
  LOG.info("Relaunching Container [" + container.getContainerId() + "] for upgrade !!");
  container.wasLaunched=false;
  container.metrics.endRunningContainer();
  container.launchContext=container.reInitContext.newLaunchContext;
  container.containerRetryContext=configureRetryContext(container.context.getConf(),container.launchContext,container.containerId);
  container.remainingRetryAttempts=container.containerRetryContext.getMaxRetries();
  container.resourceSet=container.reInitContext.mergedResourceSet();
  container.sendLaunchEvent();
}
