{
  ApplicationId applicationId=application.getApplicationId();
  if (recordingAppActivitiesUntilSpecifiedTime.containsKey(applicationId) && recordingAppActivitiesUntilSpecifiedTime.get(applicationId) > currTS) {
    appsAllocation.put(applicationId,new AppAllocation(application.getPriority(),nodeID,application.getQueueName()));
  }
  if (recordingAppActivitiesUntilSpecifiedTime.containsKey(applicationId) && recordingAppActivitiesUntilSpecifiedTime.get(applicationId) <= currTS) {
    turnOffActivityMonitoringForApp(applicationId);
  }
}
