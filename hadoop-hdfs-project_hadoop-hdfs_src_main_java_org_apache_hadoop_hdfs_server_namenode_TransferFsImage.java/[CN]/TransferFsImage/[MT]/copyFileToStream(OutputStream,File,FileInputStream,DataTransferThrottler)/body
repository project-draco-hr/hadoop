{
  byte buf[]=new byte[HdfsConstants.IO_FILE_BUFFER_SIZE];
  try {
    CheckpointFaultInjector.getInstance().aboutToSendFile(localfile);
    if (CheckpointFaultInjector.getInstance().shouldSendShortFile(localfile)) {
      long len=localfile.length();
      buf=new byte[(int)Math.min(len / 2,HdfsConstants.IO_FILE_BUFFER_SIZE)];
      infile.read(buf);
    }
    int num=1;
    while (num > 0) {
      num=infile.read(buf);
      if (num <= 0) {
        break;
      }
      if (CheckpointFaultInjector.getInstance().shouldCorruptAByte(localfile)) {
        LOG.warn("SIMULATING A CORRUPT BYTE IN IMAGE TRANSFER!");
        buf[0]++;
      }
      out.write(buf,0,num);
      if (throttler != null) {
        throttler.throttle(num);
      }
    }
  }
  finally {
    if (out != null) {
      out.close();
    }
  }
}
