{
  if (blockIndex < 0 || blockIndex > getNumberOfBlocks())   return -1;
  int finalizedSize=getNumberOfFinalizedReplicas();
  if (blockIndex < finalizedSize)   return HEADER_SIZE + blockIndex * LONGS_PER_FINALIZED_BLOCK;
  return HEADER_SIZE + (finalizedSize + 1) * LONGS_PER_FINALIZED_BLOCK + (blockIndex - finalizedSize) * LONGS_PER_UC_BLOCK;
}
