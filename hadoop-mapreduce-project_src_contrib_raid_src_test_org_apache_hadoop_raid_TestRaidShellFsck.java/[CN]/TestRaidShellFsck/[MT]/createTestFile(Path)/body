{
  Random rand=new Random();
  FSDataOutputStream stm=dfs.create(filePath,true,conf.getInt("io.file.buffer.size",4096),REPL,BLOCK_SIZE);
  final byte[] b=new byte[(int)BLOCK_SIZE];
  for (int i=0; i < FILE_BLOCKS; i++) {
    rand.nextBytes(b);
    stm.write(b);
  }
  stm.close();
  LOG.info("test file created");
}
