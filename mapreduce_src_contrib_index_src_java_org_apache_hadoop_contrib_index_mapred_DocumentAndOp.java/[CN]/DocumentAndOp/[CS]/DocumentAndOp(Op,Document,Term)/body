{
  if (op == Op.INSERT) {
    assert(doc != null);
    assert(term == null);
  }
 else   if (op == Op.DELETE) {
    assert(doc == null);
    assert(term != null);
  }
 else {
    assert(op == Op.UPDATE);
    assert(doc != null);
    assert(term != null);
  }
  this.op=op;
  this.doc=doc;
  this.term=term;
}
