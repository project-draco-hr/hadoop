{
  Configuration conf=getConfig();
  YarnRPC rpc=YarnRPC.create(conf);
  InetSocketAddress address=conf.getSocketAddr(YarnConfiguration.AHS_ADDRESS,YarnConfiguration.DEFAULT_AHS_ADDRESS,YarnConfiguration.DEFAULT_AHS_PORT);
  server=rpc.getServer(ApplicationHistoryProtocol.class,protocolHandler,address,conf,null,conf.getInt(YarnConfiguration.AHS_CLIENT_THREAD_COUNT,YarnConfiguration.DEFAULT_AHS_CLIENT_THREAD_COUNT));
  server.start();
  this.bindAddress=conf.updateConnectAddr(YarnConfiguration.AHS_ADDRESS,server.getListenerAddress());
  LOG.info("Instantiated ApplicationHistoryClientService at " + this.bindAddress);
  super.serviceStart();
}
