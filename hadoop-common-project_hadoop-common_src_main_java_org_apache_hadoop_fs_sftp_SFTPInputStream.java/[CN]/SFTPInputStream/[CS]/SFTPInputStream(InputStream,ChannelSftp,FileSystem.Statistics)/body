{
  if (stream == null) {
    throw new IllegalArgumentException(E_NULL_INPUTSTREAM);
  }
  if (channel == null || !channel.isConnected()) {
    throw new IllegalArgumentException(E_CLIENT_NULL);
  }
  this.wrappedStream=stream;
  this.channel=channel;
  this.stats=stats;
  this.pos=0;
  this.closed=false;
}
