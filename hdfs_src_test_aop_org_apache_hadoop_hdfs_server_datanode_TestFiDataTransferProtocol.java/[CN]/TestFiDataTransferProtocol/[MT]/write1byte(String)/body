{
  final MiniDFSCluster cluster=new MiniDFSCluster.Builder(conf).numDataNodes(REPLICATION + 1).build();
  final FileSystem dfs=cluster.getFileSystem();
  try {
    final Path p=new Path("/" + methodName + "/foo");
    final FSDataOutputStream out=createFile(dfs,p);
    out.write(1);
    out.close();
    final FSDataInputStream in=dfs.open(p);
    final int b=in.read();
    in.close();
    Assert.assertEquals(1,b);
  }
  finally {
    dfs.close();
    cluster.shutdown();
  }
}
