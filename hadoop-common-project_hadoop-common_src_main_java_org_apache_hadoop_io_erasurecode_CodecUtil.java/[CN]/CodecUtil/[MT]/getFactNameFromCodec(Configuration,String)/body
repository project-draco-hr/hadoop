{
switch (codec) {
case ErasureCodeConstants.RS_DEFAULT_CODEC_NAME:
    return conf.get(CommonConfigurationKeys.IO_ERASURECODE_CODEC_RS_DEFAULT_RAWCODER_KEY,CommonConfigurationKeys.IO_ERASURECODE_CODEC_RS_DEFAULT_RAWCODER_DEFAULT);
case ErasureCodeConstants.RS_LEGACY_CODEC_NAME:
  return conf.get(CommonConfigurationKeys.IO_ERASURECODE_CODEC_RS_LEGACY_RAWCODER_KEY,CommonConfigurationKeys.IO_ERASURECODE_CODEC_RS_LEGACY_RAWCODER_DEFAULT);
case ErasureCodeConstants.XOR_CODEC_NAME:
return conf.get(CommonConfigurationKeys.IO_ERASURECODE_CODEC_XOR_RAWCODER_KEY,CommonConfigurationKeys.IO_ERASURECODE_CODEC_XOR_RAWCODER_DEFAULT);
default :
String rawCoderKey="io.erasurecode.codec." + codec + ".rawcoder";
String factName=conf.get(rawCoderKey);
if (factName == null) {
throw new IllegalArgumentException("Raw coder factory not configured " + "for custom codec " + codec);
}
return factName;
}
}
