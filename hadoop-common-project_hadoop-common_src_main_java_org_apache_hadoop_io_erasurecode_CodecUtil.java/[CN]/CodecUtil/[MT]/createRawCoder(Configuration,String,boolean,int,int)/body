{
  RawErasureCoderFactory fact;
  try {
    Class<? extends RawErasureCoderFactory> factClass=conf.getClassByName(rawCoderFactory).asSubclass(RawErasureCoderFactory.class);
    fact=factClass.newInstance();
  }
 catch (  ClassNotFoundException|InstantiationException|IllegalAccessException e) {
    throw new RuntimeException("Failed to create raw coder",e);
  }
  return isEncoder ? fact.createEncoder(numDataUnits,numParityUnits) : fact.createDecoder(numDataUnits,numParityUnits);
}
