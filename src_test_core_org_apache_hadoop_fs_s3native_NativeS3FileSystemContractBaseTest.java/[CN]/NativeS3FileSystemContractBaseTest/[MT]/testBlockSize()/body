{
  Path file=path("/test/hadoop/file");
  createFile(file);
  assertEquals("Default block size",fs.getDefaultBlockSize(),fs.getFileStatus(file).getBlockSize());
  long newBlockSize=fs.getDefaultBlockSize() * 2;
  fs.getConf().setLong("fs.s3n.block.size",newBlockSize);
  assertEquals("Double default block size",newBlockSize,fs.getFileStatus(file).getBlockSize());
}
