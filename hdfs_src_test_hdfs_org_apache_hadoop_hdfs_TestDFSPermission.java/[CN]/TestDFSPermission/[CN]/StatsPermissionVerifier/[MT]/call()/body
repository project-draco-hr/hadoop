{
switch (opType) {
case GET_FILEINFO:
    fs.getFileStatus(path);
  break;
case IS_DIR:
fs.isDirectory(path);
break;
case EXISTS:
fs.exists(path);
break;
case GET_CONTENT_LENGTH:
fs.getContentSummary(path).getLength();
break;
default :
throw new IllegalArgumentException("Unexpected operation type: " + opType);
}
}
