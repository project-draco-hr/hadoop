{
  for (  String pair : cookieHeader.split(";")) {
    String p=pair.trim();
    int idx=p.indexOf('=');
    final String k, v;
    if (idx == -1) {
      k=p;
      v=null;
    }
 else     if (idx == p.length()) {
      k=p.substring(0,idx - 1);
      v=null;
    }
 else {
      k=p.substring(0,idx);
      v=p.substring(idx + 1);
    }
    cookieMap.put(k,v);
  }
}
