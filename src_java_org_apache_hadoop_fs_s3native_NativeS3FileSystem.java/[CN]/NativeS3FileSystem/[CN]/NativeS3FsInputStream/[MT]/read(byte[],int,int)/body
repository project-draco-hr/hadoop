{
  int result=-1;
  try {
    result=in.read(b,off,len);
  }
 catch (  IOException e) {
    LOG.info("Received IOException while reading '" + key + "', attempting to reopen.");
    seek(pos);
    result=in.read(b,off,len);
  }
  if (result > 0) {
    pos+=result;
  }
  if (statistics != null && result > 0) {
    statistics.incrementBytesRead(result);
  }
  return result;
}
