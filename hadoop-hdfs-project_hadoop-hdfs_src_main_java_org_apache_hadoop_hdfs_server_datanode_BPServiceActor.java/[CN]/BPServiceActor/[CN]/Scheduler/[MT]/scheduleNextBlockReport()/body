{
  if (resetBlockReportTime) {
    nextBlockReportTime=monotonicNow() + ThreadLocalRandom.current().nextInt((int)(blockReportIntervalMs));
    resetBlockReportTime=false;
  }
 else {
    nextBlockReportTime+=(((monotonicNow() - nextBlockReportTime + blockReportIntervalMs) / blockReportIntervalMs)) * blockReportIntervalMs;
  }
}
