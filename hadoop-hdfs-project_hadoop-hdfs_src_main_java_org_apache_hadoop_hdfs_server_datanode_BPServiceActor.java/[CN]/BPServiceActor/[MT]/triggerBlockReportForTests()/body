{
synchronized (receivedAndDeletedBlockList) {
    lastBlockReport=0;
    lastHeartbeat=0;
    receivedAndDeletedBlockList.notifyAll();
    while (lastBlockReport == 0) {
      try {
        receivedAndDeletedBlockList.wait(100);
      }
 catch (      InterruptedException e) {
        return;
      }
    }
  }
}
