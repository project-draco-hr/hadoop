{
synchronized (ibrManager) {
    final long nextHeartbeatTime=scheduler.scheduleHeartbeat();
    ibrManager.notifyAll();
    while (nextHeartbeatTime - scheduler.nextHeartbeatTime >= 0) {
      try {
        ibrManager.wait(100);
      }
 catch (      InterruptedException e) {
        return;
      }
    }
  }
}
