{
  statistics.incrementWriteOps(1);
  storageStatistics.incrementOpCounter(OpType.CREATE_NON_RECURSIVE);
  final HttpOpParam.Op op=PutOpParam.Op.CREATE;
  return new FsPathOutputStreamRunner(op,f,bufferSize,new PermissionParam(applyUMask(permission)),new CreateFlagParam(flag),new CreateParentParam(false),new BufferSizeParam(bufferSize),new ReplicationParam(replication),new BlockSizeParam(blockSize)).run();
}
