{
  final HttpURLConnection connection=openConnection("/contentSummary" + ServletUtil.encodePath(path),"ugi=" + getEncodedUgiParameter());
  InputStream in=null;
  try {
    in=connection.getInputStream();
    final XMLReader xr=XMLReaderFactory.createXMLReader();
    xr.setContentHandler(this);
    xr.parse(new InputSource(in));
  }
 catch (  FileNotFoundException fnfe) {
    return null;
  }
catch (  SAXException saxe) {
    final Exception embedded=saxe.getException();
    if (embedded != null && embedded instanceof IOException) {
      throw (IOException)embedded;
    }
    throw new IOException("Invalid xml format",saxe);
  }
 finally {
    if (in != null) {
      in.close();
    }
    connection.disconnect();
  }
  return contentsummary;
}
