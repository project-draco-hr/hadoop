{
  try {
    while (sleepInCopyBlocks) {
      if (!this.shouldRun()) {
        return;
      }
      Thread.sleep(10);
    }
    if (delay > 0) {
      Thread.sleep(delay);
    }
synchronized (runCount) {
      if (shouldRun()) {
        runCount++;
      }
    }
  }
 catch (  InterruptedException ex) {
    LOG.error(ex.toString());
  }
}
