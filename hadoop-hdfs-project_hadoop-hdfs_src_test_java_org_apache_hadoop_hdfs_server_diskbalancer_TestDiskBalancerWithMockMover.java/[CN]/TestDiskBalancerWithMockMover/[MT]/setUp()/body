{
  Configuration conf=new HdfsConfiguration();
  final int numStoragesPerDn=2;
  cluster=new MiniDFSCluster.Builder(conf).numDataNodes(3).storagesPerDatanode(numStoragesPerDn).build();
  cluster.waitActive();
  dataNode=cluster.getDataNodes().get(0);
  FsDatasetSpi.FsVolumeReferences references=dataNode.getFSDataset().getFsVolumeReferences();
  nodeID=dataNode.getDatanodeUuid();
  sourceName=references.get(0).getBasePath();
  destName=references.get(1).getBasePath();
  sourceUUID=references.get(0).getStorageID();
  destUUID=references.get(1).getStorageID();
  references.close();
}
