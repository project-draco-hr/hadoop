{
  refreshHostsReader(conf);
  for (  Entry<NodeId,RMNode> entry : rmContext.getRMNodes().entrySet()) {
    NodeId nodeId=entry.getKey();
    if (!isValidNode(nodeId.getHost())) {
      RMNodeEventType nodeEventType=isUntrackedNode(nodeId.getHost()) ? RMNodeEventType.SHUTDOWN : RMNodeEventType.GRACEFUL_DECOMMISSION;
      this.rmContext.getDispatcher().getEventHandler().handle(new RMNodeEvent(nodeId,nodeEventType));
    }
 else {
      if (entry.getValue().getState() == NodeState.DECOMMISSIONING) {
        this.rmContext.getDispatcher().getEventHandler().handle(new RMNodeEvent(nodeId,RMNodeEventType.RECOMMISSION));
      }
    }
  }
  updateInactiveNodes();
}
