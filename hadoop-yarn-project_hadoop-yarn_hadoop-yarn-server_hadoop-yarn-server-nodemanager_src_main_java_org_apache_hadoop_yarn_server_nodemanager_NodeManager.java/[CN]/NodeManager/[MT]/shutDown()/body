{
  new Thread(){
    @Override public void run(){
      try {
        NodeManager.this.stop();
      }
 catch (      Throwable t) {
        LOG.error("Error while shutting down NodeManager",t);
      }
 finally {
        if (shouldExitOnShutdownEvent && !ShutdownHookManager.get().isShutdownInProgress()) {
          ExitUtil.terminate(-1);
        }
      }
    }
  }
.start();
}
