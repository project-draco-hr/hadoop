{
  checkStream();
  if (b == null) {
    throw new NullPointerException();
  }
 else   if (off < 0 || len < 0 || off > b.length || len > b.length - off) {
    throw new IndexOutOfBoundsException();
  }
  while (len > 0) {
    int remaining=inBuffer.remaining();
    if (len < remaining) {
      inBuffer.put(b,off,len);
      len=0;
    }
 else {
      inBuffer.put(b,off,remaining);
      off+=remaining;
      len-=remaining;
      encrypt();
    }
  }
}
