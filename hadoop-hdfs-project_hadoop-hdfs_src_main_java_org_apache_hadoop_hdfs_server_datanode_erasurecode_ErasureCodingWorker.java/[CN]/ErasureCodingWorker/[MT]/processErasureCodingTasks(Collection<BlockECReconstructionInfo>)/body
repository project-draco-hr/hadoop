{
  for (  BlockECReconstructionInfo reconstructionInfo : ecTasks) {
    try {
      final StripedReconstructor task=new StripedReconstructor(this,reconstructionInfo);
      if (task.hasValidTargets()) {
        stripedReconstructionPool.submit(task);
      }
 else {
        LOG.warn("No missing internal block. Skip reconstruction for task:{}",reconstructionInfo);
      }
    }
 catch (    Throwable e) {
      LOG.warn("Failed to reconstruct striped block {}",reconstructionInfo.getExtendedBlock().getLocalBlock(),e);
    }
  }
}
