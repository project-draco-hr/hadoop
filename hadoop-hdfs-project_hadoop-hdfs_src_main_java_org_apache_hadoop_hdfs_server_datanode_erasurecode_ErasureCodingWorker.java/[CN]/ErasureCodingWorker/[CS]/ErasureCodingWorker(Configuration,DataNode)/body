{
  this.datanode=datanode;
  this.conf=conf;
  STRIPED_READ_THRESHOLD_MILLIS=conf.getInt(DFSConfigKeys.DFS_DATANODE_STRIPED_READ_THRESHOLD_MILLIS_KEY,DFSConfigKeys.DFS_DATANODE_STRIPED_READ_THRESHOLD_MILLIS_DEFAULT);
  initializeStripedReadThreadPool(conf.getInt(DFSConfigKeys.DFS_DATANODE_STRIPED_READ_THREADS_KEY,DFSConfigKeys.DFS_DATANODE_STRIPED_READ_THREADS_DEFAULT));
  STRIPED_READ_BUFFER_SIZE=conf.getInt(DFSConfigKeys.DFS_DATANODE_STRIPED_READ_BUFFER_SIZE_KEY,DFSConfigKeys.DFS_DATANODE_STRIPED_READ_BUFFER_SIZE_DEFAULT);
}
