{
  FTPClient client=null;
  try {
    client=connect();
    Path homeDir=new Path(client.printWorkingDirectory());
    return homeDir;
  }
 catch (  IOException ioe) {
    throw new FTPException("Failed to get home directory",ioe);
  }
 finally {
    try {
      disconnect(client);
    }
 catch (    IOException ioe) {
      throw new FTPException("Failed to disconnect",ioe);
    }
  }
}
