{
  if (!ProcfsBasedProcessTree.isAvailable()) {
    LOG.info("ProcessTree implementation is missing on this system. " + this.getClass().getName() + " is disabled.");
    return false;
  }
  if (!(isPhysicalMemoryCheckEnabled() || isVirtualMemoryCheckEnabled())) {
    LOG.info("Neither virutal-memory nor physical-memory monitoring is " + "needed. Not running the monitor-thread");
    return false;
  }
  return true;
}
