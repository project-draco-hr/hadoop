{
  HdfsConfiguration conf=new HdfsConfiguration();
  conf.set(DFSConfigKeys.DFS_FEDERATION_NAMESERVICES,NSID);
  conf.set(DFSConfigKeys.DFS_FEDERATION_NAMESERVICE_ID,NSID);
  conf.set(DFSUtil.addKeySuffixes(DFSConfigKeys.DFS_HA_NAMENODES_KEY,NSID),"nn1,nn2");
  conf.set(DFSConfigKeys.DFS_HA_NAMENODE_ID_KEY,"nn1");
  conf.set(DFSUtil.addKeySuffixes(DFSConfigKeys.DFS_NAMENODE_RPC_ADDRESS_KEY,NSID,"nn1"),HOST_A + ":12345");
  conf.set(DFSUtil.addKeySuffixes(DFSConfigKeys.DFS_NAMENODE_RPC_ADDRESS_KEY,NSID,"nn2"),HOST_B + ":12345");
  return conf;
}
