{
  if (isProcessGroup || ProcessTree.isAlive(pid)) {
    try {
      Thread.sleep(sleepTimeBeforeSigKill);
    }
 catch (    InterruptedException i) {
      LOG.warn("Thread sleep is interrupted.");
    }
    ShellCommandExecutor shexec=null;
    try {
      String pid_pgrpid;
      if (isProcessGroup) {
        pid_pgrpid="-" + pid;
      }
 else {
        pid_pgrpid=pid;
      }
      String[] args={"kill","-9",pid_pgrpid};
      shexec=new ShellCommandExecutor(args);
      shexec.execute();
    }
 catch (    IOException ioe) {
      LOG.warn("Error executing shell command " + ioe);
    }
 finally {
      if (isProcessGroup) {
        LOG.info("Killing process group" + pid + " with SIGKILL. Exit code "+ shexec.getExitCode());
      }
 else {
        LOG.info("Killing process " + pid + " with SIGKILL. Exit code "+ shexec.getExitCode());
      }
    }
  }
}
