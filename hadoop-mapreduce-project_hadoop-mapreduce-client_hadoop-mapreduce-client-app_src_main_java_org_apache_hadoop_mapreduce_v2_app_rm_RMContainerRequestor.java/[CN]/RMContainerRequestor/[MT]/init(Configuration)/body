{
  super.init(conf);
  nodeBlacklistingEnabled=conf.getBoolean(MRJobConfig.MR_AM_JOB_NODE_BLACKLISTING_ENABLE,true);
  LOG.info("nodeBlacklistingEnabled:" + nodeBlacklistingEnabled);
  maxTaskFailuresPerNode=conf.getInt(MRJobConfig.MAX_TASK_FAILURES_PER_TRACKER,3);
  LOG.info("maxTaskFailuresPerNode is " + maxTaskFailuresPerNode);
}
