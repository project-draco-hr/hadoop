{
  seed=r.nextLong();
  r.setSeed(seed);
  Text t=new Text();
  StringBuffer sb=new StringBuffer();
  indices=new int[j];
  offsets=new int[j];
  check=new String[j];
  DataOutputBuffer dob=new DataOutputBuffer();
  for (int i=0; i < j; ++i) {
    indices[i]=i;
    offsets[i]=dob.getLength();
    genRandom(t,r.nextInt(15) + 1,sb);
    t.write(dob);
    check[i]=t.toString();
  }
  eob=dob.getLength();
  bytes=dob.getData();
  comparator=WritableComparator.get(Text.class);
}
