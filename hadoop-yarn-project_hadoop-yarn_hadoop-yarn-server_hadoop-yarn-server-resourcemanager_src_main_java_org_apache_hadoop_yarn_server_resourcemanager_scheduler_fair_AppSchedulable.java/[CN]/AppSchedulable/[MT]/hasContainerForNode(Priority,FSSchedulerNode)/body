{
  ResourceRequest anyRequest=app.getResourceRequest(prio,ResourceRequest.ANY);
  ResourceRequest rackRequest=app.getResourceRequest(prio,node.getRackName());
  ResourceRequest nodeRequest=app.getResourceRequest(prio,node.getHostName());
  return anyRequest != null && anyRequest.getNumContainers() > 0 && (anyRequest.getRelaxLocality() || (rackRequest != null && rackRequest.getNumContainers() > 0)) && (rackRequest == null || rackRequest.getRelaxLocality() || (nodeRequest != null && nodeRequest.getNumContainers() > 0)) && Resources.lessThanOrEqual(RESOURCE_CALCULATOR,null,anyRequest.getCapability(),node.getRMNode().getTotalCapability());
}
