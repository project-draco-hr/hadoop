{
  validateContainerResourceChangeRequest(container.getId(),container.getResource(),capability);
  if (change.get(container.getId()) == null) {
    change.put(container.getId(),new SimpleEntry<>(container,capability));
  }
 else {
    change.get(container.getId()).setValue(capability);
  }
  if (pendingChange.get(container.getId()) == null) {
    pendingChange.put(container.getId(),new SimpleEntry<>(container,capability));
  }
 else {
    pendingChange.get(container.getId()).setValue(capability);
  }
}
