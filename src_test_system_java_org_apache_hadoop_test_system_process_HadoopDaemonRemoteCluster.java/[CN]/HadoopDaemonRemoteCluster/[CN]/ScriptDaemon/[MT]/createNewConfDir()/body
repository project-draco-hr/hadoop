{
  ArrayList<String> cmdArgs=new ArrayList<String>();
  cmdArgs.add("ssh");
  cmdArgs.add(hostName);
  cmdArgs.add("if [ -d " + hadoopNewConfDir + " ];\n then echo Will remove existing directory;  rm -rf "+ hadoopNewConfDir+ ";\nmkdir "+ hadoopNewConfDir+ "; else \n"+ "echo "+ hadoopNewConfDir+ " doesnt exist hence creating"+ ";  mkdir "+ hadoopNewConfDir+ ";\n  fi");
  String[] cmd=(String[])cmdArgs.toArray(new String[cmdArgs.size()]);
  ShellCommandExecutor executor=new ShellCommandExecutor(cmd);
  LOG.info(executor.toString());
  return executor;
}
