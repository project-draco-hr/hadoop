{
  if (terminalHeight != -1) {
    return;
  }
  String[] command={"tput","lines"};
  String op=getCommandOutput(command).trim();
  try {
    terminalHeight=Integer.parseInt(op);
  }
 catch (  NumberFormatException ne) {
    LOG.warn("Couldn't determine terminal height, setting to 24",ne);
    terminalHeight=24;
  }
}
