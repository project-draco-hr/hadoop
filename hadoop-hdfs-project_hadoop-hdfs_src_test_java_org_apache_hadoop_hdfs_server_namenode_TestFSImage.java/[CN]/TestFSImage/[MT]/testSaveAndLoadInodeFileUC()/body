{
  Configuration conf=new Configuration();
  MiniDFSCluster cluster=null;
  try {
    cluster=new MiniDFSCluster.Builder(conf).build();
    cluster.waitActive();
    testSaveAndLoadINodeFile(cluster.getNamesystem(),conf,true);
  }
  finally {
    if (cluster != null) {
      cluster.shutdown();
    }
  }
}
