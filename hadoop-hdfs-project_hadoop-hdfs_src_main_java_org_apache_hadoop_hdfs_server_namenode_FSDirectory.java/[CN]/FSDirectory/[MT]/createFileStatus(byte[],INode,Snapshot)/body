{
  long size=0;
  short replication=0;
  long blocksize=0;
  if (node.isFile()) {
    final INodeFile fileNode=node.asFile();
    size=fileNode.computeFileSize(snapshot);
    replication=fileNode.getFileReplication(snapshot);
    blocksize=fileNode.getPreferredBlockSize();
  }
  return new HdfsFileStatus(size,node.isDirectory(),replication,blocksize,node.getModificationTime(snapshot),node.getAccessTime(snapshot),node.getFsPermission(snapshot),node.getUserName(snapshot),node.getGroupName(snapshot),node.isSymlink() ? node.asSymlink().getSymlink() : null,path,node.getId());
}
