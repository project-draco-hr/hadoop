{
  final INodeDirectory r=new INodeDirectory(INodeId.ROOT_INODE_ID,INodeDirectory.ROOT_NAME,namesystem.createFsOwnerPermissions(new FsPermission((short)0755)),0L);
  r.addDirectoryWithQuotaFeature(new DirectoryWithQuotaFeature.Builder().nameSpaceQuota(DirectoryWithQuotaFeature.DEFAULT_NAMESPACE_QUOTA).spaceQuota(DirectoryWithQuotaFeature.DEFAULT_SPACE_QUOTA).build());
  r.addSnapshottableFeature();
  r.setSnapshotQuota(0);
  return r;
}
