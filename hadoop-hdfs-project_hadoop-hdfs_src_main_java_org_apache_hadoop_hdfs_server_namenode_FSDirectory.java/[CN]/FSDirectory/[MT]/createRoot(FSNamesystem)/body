{
  final INodeDirectory r=new INodeDirectory(INodeId.ROOT_INODE_ID,INodeDirectory.ROOT_NAME,namesystem.createFsOwnerPermissions(new FsPermission((short)0755)),0L);
  r.addDirectoryWithQuotaFeature(DirectoryWithQuotaFeature.DEFAULT_NAMESPACE_QUOTA,DirectoryWithQuotaFeature.DEFAULT_DISKSPACE_QUOTA);
  final INodeDirectorySnapshottable s=new INodeDirectorySnapshottable(r);
  s.setSnapshotQuota(0);
  return s;
}
