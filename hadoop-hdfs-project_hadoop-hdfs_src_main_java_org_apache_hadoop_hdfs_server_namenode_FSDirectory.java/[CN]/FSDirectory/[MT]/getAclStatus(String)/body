{
  readLock();
  try {
    final INodeWithAdditionalFields node=resolveINodeWithAdditionalField(src);
    AclFeature f=node.getAclFeature();
    AclStatus.Builder builder=new AclStatus.Builder().owner(node.getUserName()).group(node.getGroupName()).stickyBit(node.getFsPermission().getStickyBit());
    if (f != null) {
      builder.addEntries(f.getEntries());
    }
    return builder.build();
  }
  finally {
    readUnlock();
  }
}
