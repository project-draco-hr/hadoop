{
  long size=0;
  short replication=0;
  long blocksize=0;
  if (node.isFile()) {
    final INodeFile fileNode=node.asFile();
    size=fileNode.computeFileSize(snapshot);
    replication=fileNode.getFileReplication(snapshot);
    blocksize=fileNode.getPreferredBlockSize();
  }
  int childrenNum=node.isDirectory() ? node.asDirectory().getChildrenNum(snapshot) : 0;
  FileEncryptionInfo feInfo=getFileEncryptionInfo(node,snapshot);
  return new HdfsFileStatus(size,node.isDirectory(),replication,blocksize,node.getModificationTime(snapshot),node.getAccessTime(snapshot),getPermissionForFileStatus(node,snapshot),node.getUserName(snapshot),node.getGroupName(snapshot),node.isSymlink() ? node.asSymlink().getSymlink() : null,path,node.getId(),childrenNum,feInfo);
}
