{
  final String dotSnapshot=Path.SEPARATOR + HdfsConstants.DOT_SNAPSHOT_DIR;
  Preconditions.checkArgument(src.endsWith(dotSnapshot),src + " does not end with " + dotSnapshot);
  final String dirPath=normalizePath(src.substring(0,src.length() - HdfsConstants.DOT_SNAPSHOT_DIR.length()));
  final INode node=this.getINode(dirPath);
  if (node instanceof INodeDirectorySnapshottable) {
    return new HdfsFileStatus(0,true,0,0,0,0,null,null,null,null,HdfsFileStatus.EMPTY_NAME,-1L);
  }
  return null;
}
