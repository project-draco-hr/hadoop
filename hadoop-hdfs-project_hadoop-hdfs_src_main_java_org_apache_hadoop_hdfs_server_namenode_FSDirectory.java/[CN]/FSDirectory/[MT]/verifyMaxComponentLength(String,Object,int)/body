{
  if (maxComponentLength == 0) {
    return;
  }
  final int length=childName.length();
  if (length > maxComponentLength) {
    final String p=parentPath instanceof INode[] ? getFullPathName((INode[])parentPath,pos - 1) : (String)parentPath;
    final PathComponentTooLongException e=new PathComponentTooLongException(maxComponentLength,length,p,childName);
    if (ready) {
      throw e;
    }
 else {
      NameNode.LOG.error("FSDirectory.verifyMaxComponentLength: " + e.getLocalizedMessage());
    }
  }
}
