{
  final int i=str.indexOf(':');
  if (i < 0) {
    throw new IllegalArgumentException("Failed to parse \"" + str + "\" as "+ getDomain()+ ": the ':' character not found.");
  }
 else   if (i == 0) {
    throw new IllegalArgumentException("Failed to parse \"" + str + "\" as "+ getDomain()+ ": HOST is empty.");
  }
 else   if (i == str.length() - 1) {
    throw new IllegalArgumentException("Failed to parse \"" + str + "\" as "+ getDomain()+ ": PORT is empty.");
  }
  final String host=str.substring(0,i);
  final int port;
  try {
    port=Integer.parseInt(str.substring(i + 1));
  }
 catch (  NumberFormatException e) {
    throw new IllegalArgumentException("Failed to parse \"" + str + "\" as "+ getDomain()+ ": the ':' position is "+ i+ " but failed to parse PORT.",e);
  }
  try {
    return new InetSocketAddress(host,port);
  }
 catch (  Exception e) {
    throw new IllegalArgumentException("Failed to parse \"" + str + "\": cannot create InetSocketAddress(host="+ host+ ", port="+ port+ ")",e);
  }
}
