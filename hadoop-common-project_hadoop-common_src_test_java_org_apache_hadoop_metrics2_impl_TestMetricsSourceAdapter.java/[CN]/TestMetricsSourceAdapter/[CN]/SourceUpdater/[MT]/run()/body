{
  MetricsCollectorImpl builder=new MetricsCollectorImpl();
  try {
    sa.getMetrics(builder,true);
    LOG.info("reset lastRecs");
  }
 catch (  Exception e) {
    hasError.set(true);
    LOG.error(e.getStackTrace());
  }
 finally {
    if (hasError.get()) {
      LOG.error("Hit error, stopping now");
      future.cancel(false);
    }
  }
}
