{
  if (ipAddr == null) {
    return null;
  }
  hostmapLock.readLock().lock();
  try {
    DatanodeDescriptor[] nodes=map.get(ipAddr);
    if (nodes == null) {
      return null;
    }
    if (nodes.length == 1) {
      return nodes[0];
    }
    return nodes[DFSUtil.getRandom().nextInt(nodes.length)];
  }
  finally {
    hostmapLock.readLock().unlock();
  }
}
