{
  if (kv.length % 2 != 0) {
    throw new IllegalArgumentException("Arguments must be key value pairs");
  }
  StringBuilder sb=new StringBuilder();
  int i=0;
  while (i < kv.length) {
    if (i > 0) {
      sb.append("&");
    }
    sb.append(URLEncoder.encode(kv[i++],"UTF-8"));
    sb.append("=");
    sb.append(URLEncoder.encode(kv[i++],"UTF-8"));
  }
  return sb.toString();
}
