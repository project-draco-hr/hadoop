{
  long position=fc.position();
  long size=fc.size();
  int bufSize=doubleBuf.getReadyBuf().getLength();
  long need=bufSize - (size - position);
  if (need <= 0) {
    return;
  }
  long oldSize=size;
  long total=0;
  long fillCapacity=fill.capacity();
  while (need > 0) {
    fill.position(0);
    IOUtils.writeFully(fc,fill,size);
    need-=fillCapacity;
    size+=fillCapacity;
    total+=fillCapacity;
  }
  if (FSNamesystem.LOG.isDebugEnabled()) {
    FSNamesystem.LOG.debug("Preallocated " + total + " bytes at the end of "+ "the edit log (offset "+ oldSize+ ")");
  }
}
