{
  try {
    bpNamenode.errorReport(bpRegistration,errorCode,errorMessage);
  }
 catch (  RemoteException re) {
    DataNode.LOG.info("trySendErrorReport encountered RemoteException  " + "errorMessage: " + errorMessage + "  errorCode: "+ errorCode,re);
  }
catch (  IOException e) {
    throw new BPServiceActorActionException("Error reporting " + "an error to namenode.",e);
  }
}
