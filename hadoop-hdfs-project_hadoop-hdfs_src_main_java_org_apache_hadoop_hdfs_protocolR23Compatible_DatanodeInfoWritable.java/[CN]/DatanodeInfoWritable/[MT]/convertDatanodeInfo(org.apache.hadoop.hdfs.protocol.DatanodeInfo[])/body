{
  if (di == null)   return null;
  DatanodeInfoWritable[] result=new DatanodeInfoWritable[di.length];
  for (int i=0; i < di.length; i++) {
    result[i]=new DatanodeInfoWritable(new DatanodeIDWritable(di[i].getName(),di[i].getStorageID(),di[i].getInfoPort(),di[i].getIpcPort()),di[i].getNetworkLocation(),di[i].getHostName(),di[i].getCapacity(),di[i].getDfsUsed(),di[i].getRemaining(),di[i].getBlockPoolUsed(),di[i].getLastUpdate(),di[i].getXceiverCount(),AdminStates.fromValue(di[i].getAdminState().toString()));
  }
  return result;
}
