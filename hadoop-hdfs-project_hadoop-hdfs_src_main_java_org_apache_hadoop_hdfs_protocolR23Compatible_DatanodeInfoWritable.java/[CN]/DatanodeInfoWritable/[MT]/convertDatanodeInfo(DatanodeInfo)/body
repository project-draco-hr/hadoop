{
  if (di == null)   return null;
  return new DatanodeInfoWritable(new DatanodeIDWritable(di.getName(),di.getStorageID(),di.getInfoPort(),di.getIpcPort()),di.getNetworkLocation(),di.getHostName(),di.getCapacity(),di.getDfsUsed(),di.getRemaining(),di.getBlockPoolUsed(),di.getLastUpdate(),di.getXceiverCount(),AdminStates.fromValue(di.getAdminState().toString()));
}
