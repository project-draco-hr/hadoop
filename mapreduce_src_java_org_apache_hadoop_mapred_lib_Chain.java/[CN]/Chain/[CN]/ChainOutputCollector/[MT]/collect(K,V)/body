{
  if (nextMapperIndex < mappers.size()) {
    if (keySerialization != null) {
      key=makeCopyForPassByValue(keySerialization,key);
      value=makeCopyForPassByValue(valueSerialization,value);
    }
    Serialization nextKeySerialization=mappersKeySerialization.get(nextMapperIndex);
    Serialization nextValueSerialization=mappersValueSerialization.get(nextMapperIndex);
    Mapper nextMapper=mappers.get(nextMapperIndex);
    nextMapper.map(key,value,new ChainOutputCollector(nextMapperIndex,nextKeySerialization,nextValueSerialization,output,reporter),reporter);
  }
 else {
    output.collect(key,value);
  }
}
