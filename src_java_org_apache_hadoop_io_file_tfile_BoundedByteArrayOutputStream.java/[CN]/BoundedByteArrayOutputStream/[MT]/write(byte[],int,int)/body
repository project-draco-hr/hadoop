{
  if ((off < 0) || (off > b.length) || (len < 0)|| ((off + len) > b.length)|| ((off + len) < 0)) {
    throw new IndexOutOfBoundsException();
  }
 else   if (len == 0) {
    return;
  }
  if (count + len > limit) {
    throw new EOFException("Reach the limit of the buffer");
  }
  System.arraycopy(b,off,buffer,count,len);
  count+=len;
}
