{
  return new Answer<Object>(){
    int i=0;
    public Boolean answer(    InvocationOnMock invocation){
      Object[] args=invocation.getArguments();
      DataInputBuffer key=(DataInputBuffer)args[0];
      if (i++ == 2) {
        return false;
      }
      key.reset(("Segment Key " + segmentName + i).getBytes(),20);
      return true;
    }
  }
;
}
