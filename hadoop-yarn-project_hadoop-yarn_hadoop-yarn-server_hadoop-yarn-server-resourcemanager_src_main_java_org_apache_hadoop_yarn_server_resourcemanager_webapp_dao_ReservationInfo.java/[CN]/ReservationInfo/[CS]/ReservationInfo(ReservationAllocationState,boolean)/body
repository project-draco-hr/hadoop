{
  acceptanceTime=allocation.getAcceptanceTime();
  user=allocation.getUser();
  if (includeResourceAllocations) {
    List<ResourceAllocationRequest> requests=allocation.getResourceAllocationRequests();
    for (    ResourceAllocationRequest request : requests) {
      resourceAllocations.add(new ResourceAllocationInfo(new ReservationInterval(request.getStartTime(),request.getEndTime()),request.getCapability()));
    }
  }
  reservationId=new ReservationIdInfo(allocation.getReservationId());
  reservationDefinition=new ReservationDefinitionInfo(allocation.getReservationDefinition());
}
