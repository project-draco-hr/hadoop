{
  long value=getDeprecatedMemoryValue();
  if (value == DISABLED_MEMORY_LIMIT) {
    value=normalizeMemoryConfigValue(getLong(JobConf.MAPREDUCE_JOB_REDUCE_MEMORY_MB_PROPERTY,DISABLED_MEMORY_LIMIT));
  }
  if (value == DISABLED_MEMORY_LIMIT) {
    value=normalizeMemoryConfigValue(getLong(JobConf.MAPRED_JOB_REDUCE_MEMORY_MB_PROPERTY,DISABLED_MEMORY_LIMIT));
  }
  return value;
}
