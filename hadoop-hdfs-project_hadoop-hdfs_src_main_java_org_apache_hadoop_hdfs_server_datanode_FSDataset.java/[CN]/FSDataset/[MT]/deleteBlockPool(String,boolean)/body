{
  if (!force) {
    for (    FSVolumeInterface volume : volumes.volumes) {
      if (!((FSVolume)volume).isBPDirEmpty(bpid)) {
        DataNode.LOG.warn(bpid + " has some block files, cannot delete unless forced");
        throw new IOException("Cannot delete block pool, " + "it contains some block files");
      }
    }
  }
  for (  FSVolumeInterface volume : volumes.volumes) {
    ((FSVolume)volume).deleteBPDirectories(bpid,force);
  }
}
