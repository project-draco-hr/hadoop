{
  String staticMapping=conf.get(CommonConfigurationKeys.HADOOP_USER_GROUP_STATIC_OVERRIDES,CommonConfigurationKeys.HADOOP_USER_GROUP_STATIC_OVERRIDES_DEFAULT);
  Collection<String> mappings=StringUtils.getStringCollection(staticMapping,";");
  for (  String users : mappings) {
    Collection<String> userToGroups=StringUtils.getStringCollection(users,"=");
    if (userToGroups.size() < 1 || userToGroups.size() > 2) {
      throw new HadoopIllegalArgumentException("Configuration " + CommonConfigurationKeys.HADOOP_USER_GROUP_STATIC_OVERRIDES + " is invalid");
    }
    String[] userToGroupsArray=userToGroups.toArray(new String[userToGroups.size()]);
    String user=userToGroupsArray[0];
    List<String> groups=Collections.emptyList();
    if (userToGroupsArray.length == 2) {
      groups=(List<String>)StringUtils.getStringCollection(userToGroupsArray[1]);
    }
    staticUserToGroupsMap.put(user,groups);
  }
}
