{
  if (webServer != null) {
    webServer.stop();
    webServer=null;
  }
  webServer=new Server(0);
  Context context=new Context(webServer,contextPath);
  context.addServlet(new ServletHolder(new NotificationServlet()),servletPath);
  webServer.start();
  port=webServer.getConnectors()[0].getLocalPort();
}
