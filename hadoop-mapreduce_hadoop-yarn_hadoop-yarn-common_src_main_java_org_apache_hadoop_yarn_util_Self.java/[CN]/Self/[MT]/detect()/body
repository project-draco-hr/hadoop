{
  if (!firstTime) {
    return;
  }
  firstTime=false;
  for (  StackTraceElement e : new Throwable().getStackTrace()) {
    String className=e.getClassName();
    if (className.startsWith("org.junit")) {
      isUnitTest=isJUnitTest=true;
      return;
    }
    if (className.startsWith("org.apache.maven.surefire")) {
      isUnitTest=true;
      return;
    }
  }
}
