def __init__(self, roles, number, image_id, size_id, key_name, public_key, user_data_file_template=None, placement=None, user_packages=None, auto_shutdown=None, env_strings=[], security_groups=[]):
    self.roles = roles
    self.number = number
    self.image_id = image_id
    self.size_id = size_id
    self.key_name = key_name
    self.public_key = public_key
    self.user_data_file_template = user_data_file_template
    self.placement = placement
    self.user_packages = user_packages
    self.auto_shutdown = auto_shutdown
    self.env_strings = env_strings
    self.security_groups = security_groups
