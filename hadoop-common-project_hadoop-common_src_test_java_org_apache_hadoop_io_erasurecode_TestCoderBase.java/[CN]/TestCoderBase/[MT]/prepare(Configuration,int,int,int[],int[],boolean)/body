{
  this.conf=conf != null ? conf : new Configuration();
  this.numDataUnits=numDataUnits;
  this.numParityUnits=numParityUnits;
  this.erasedDataIndexes=erasedDataIndexes != null ? erasedDataIndexes : new int[]{0};
  this.erasedParityIndexes=erasedParityIndexes != null ? erasedParityIndexes : new int[]{0};
  this.usingFixedData=usingFixedData;
  if (usingFixedData) {
    prepareFixedData();
  }
}
