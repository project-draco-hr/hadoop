{
  long tempScanPeriodMs=getUnitTestLong(conf,INTERNAL_DFS_DATANODE_SCAN_PERIOD_MS,TimeUnit.MILLISECONDS.convert(conf.getLong(DFS_DATANODE_SCAN_PERIOD_HOURS_KEY,DFS_DATANODE_SCAN_PERIOD_HOURS_DEFAULT),TimeUnit.HOURS));
  if (tempScanPeriodMs == 0) {
    tempScanPeriodMs=TimeUnit.MILLISECONDS.convert(DFS_DATANODE_SCAN_PERIOD_HOURS_DEFAULT,TimeUnit.HOURS);
  }
  return tempScanPeriodMs;
}
