{
  if (!isEnabled()) {
    LOG.info("Not scanning suspicious block {} on {}, because the block " + "scanner is disabled.",block,storageId);
    return;
  }
  VolumeScanner scanner=scanners.get(storageId);
  if (scanner == null) {
    LOG.info("Not scanning suspicious block {} on {}, because there is no " + "volume scanner for that storageId.",block,storageId);
    return;
  }
  scanner.markSuspectBlock(block);
}
