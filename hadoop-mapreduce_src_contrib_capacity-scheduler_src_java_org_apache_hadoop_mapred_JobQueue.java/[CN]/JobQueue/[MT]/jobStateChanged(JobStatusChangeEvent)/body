{
  JobInProgress job=event.getJobInProgress();
  JobSchedulingInfo oldJobStateInfo=new JobSchedulingInfo(event.getOldStatus());
  if (event.getEventType() == JobStatusChangeEvent.EventType.PRIORITY_CHANGED || event.getEventType() == JobStatusChangeEvent.EventType.START_TIME_CHANGED) {
    reorderJobs(job,oldJobStateInfo);
  }
 else   if (event.getEventType() == JobStatusChangeEvent.EventType.RUN_STATE_CHANGED) {
    int runState=job.getStatus().getRunState();
    if (runState == JobStatus.SUCCEEDED || runState == JobStatus.FAILED || runState == JobStatus.KILLED) {
      jobCompleted(job,oldJobStateInfo);
    }
 else     if (runState == JobStatus.RUNNING) {
      addRunningJob(job);
    }
  }
}
