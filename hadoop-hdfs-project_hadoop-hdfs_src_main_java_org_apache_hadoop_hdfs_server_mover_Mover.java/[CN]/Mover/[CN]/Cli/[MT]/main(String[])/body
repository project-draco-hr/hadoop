{
  if (DFSUtil.parseHelpArgument(args,USAGE,System.out,true)) {
    System.exit(0);
  }
  try {
    System.exit(ToolRunner.run(new HdfsConfiguration(),new Cli(),args));
  }
 catch (  Throwable e) {
    LOG.error("Exiting " + Mover.class.getSimpleName() + " due to an exception",e);
    System.exit(-1);
  }
}
