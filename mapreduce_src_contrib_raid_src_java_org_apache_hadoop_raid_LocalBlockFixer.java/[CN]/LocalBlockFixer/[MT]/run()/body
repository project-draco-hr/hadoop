{
  while (running) {
    try {
      LOG.info("LocalBlockFixer continuing to run...");
      doFix();
    }
 catch (    Exception e) {
      LOG.error(StringUtils.stringifyException(e));
    }
catch (    Error err) {
      LOG.error("Exiting after encountering " + StringUtils.stringifyException(err));
      throw err;
    }
  }
}
