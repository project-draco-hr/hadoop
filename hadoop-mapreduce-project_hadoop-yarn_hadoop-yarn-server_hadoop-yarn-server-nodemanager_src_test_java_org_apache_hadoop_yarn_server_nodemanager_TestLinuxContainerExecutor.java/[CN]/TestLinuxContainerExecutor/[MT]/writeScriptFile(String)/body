{
  File f=File.createTempFile("TestLinuxContainerExecutor",".sh");
  f.deleteOnExit();
  PrintWriter p=new PrintWriter(new FileOutputStream(f));
  p.println("#!/bin/sh");
  p.print("exec");
  for (  String part : cmd) {
    p.print(" '");
    p.print(part.replace("\\","\\\\").replace("'","\\'"));
    p.print("'");
  }
  p.println();
  p.close();
  return f.getAbsolutePath();
}
