{
  MRAppTestCleanup app=new MRAppTestCleanup(1,1,true,this.getClass().getName(),true);
  JobImpl job=(JobImpl)app.submit(new Configuration());
  app.waitForState(job,JobState.SUCCEEDED);
  app.verifyCompleted();
  int waitTime=20 * 1000;
  while (waitTime > 0 && !app.cleanedBeforeStopped) {
    Thread.sleep(100);
    waitTime-=100;
  }
  Assert.assertTrue("Staging directory not cleaned before notifying RM",app.cleanedBeforeStopped);
}
