{
  int i=1;
  while (i < 40) {
    try {
      cli.ping();
      Thread.sleep(1000);
      i++;
    }
 catch (    Exception e) {
      break;
    }
  }
  for (  AbstractDaemonClient tcli : cluster.getTTClients()) {
    i=1;
    while (i < 40) {
      try {
        tcli.ping();
        Thread.sleep(1000);
        i++;
      }
 catch (      Exception e) {
        break;
      }
    }
    if (i >= 40) {
      Assert.fail("TT on " + tcli.getHostName() + " Should have been down.");
    }
  }
}
