{
  Thread streamReaderThread=new Thread(){
    @Override public void run(){
      try {
        BufferedReader lines=new BufferedReader(new InputStreamReader(stream,Charset.forName("UTF-8")));
        char[] buf=new char[512];
        int nRead;
        while ((nRead=lines.read(buf,0,buf.length)) > 0) {
          output.append(buf,0,nRead);
        }
      }
 catch (      Throwable t) {
        LOG.error("Error occured reading the process stdout",t);
      }
    }
  }
;
  streamReaderThread.start();
  return streamReaderThread;
}
