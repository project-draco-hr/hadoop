{
  List<String> parameters=new ArrayList<String>();
  for (; pos < args.length; pos++) {
    if (args[pos].charAt(0) == '-' && args[pos].length() > 1) {
      String opt=args[pos].substring(1);
      if (options.containsKey(opt))       options.put(opt,Boolean.TRUE);
 else       throw new IllegalArgumentException("Illegal option " + args[pos]);
    }
 else     parameters.add(args[pos]);
  }
  int psize=parameters.size();
  if (psize < minPar || psize > maxPar)   throw new IllegalArgumentException("Illegal number of arguments");
  return parameters;
}
