{
  for (int i=0; i < job.numMapTasks; ++i) {
    TaskImpl task=new MapTaskImpl(job.jobId,i,job.eventHandler,job.remoteJobConfFile,job.conf,splits[i],job.taskAttemptListener,job.committer,job.jobToken,job.fsTokens.getAllTokens(),job.clock,job.completedTasksFromPreviousRun,job.applicationAttemptId.getAttemptId(),job.metrics,job.appContext);
    job.addTask(task);
  }
  LOG.info("Input size for job " + job.jobId + " = "+ inputLength+ ". Number of splits = "+ splits.length);
}
