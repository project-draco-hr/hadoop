{
  Configuration configuration=context.getConfiguration();
  int numSplits=DistCpUtils.getInt(configuration,JobContext.NUM_MAPS);
  if (numSplits == 0)   return new ArrayList<InputSplit>();
  return getSplits(configuration,numSplits,DistCpUtils.getLong(configuration,DistCpConstants.CONF_LABEL_TOTAL_BYTES_TO_BE_COPIED));
}
