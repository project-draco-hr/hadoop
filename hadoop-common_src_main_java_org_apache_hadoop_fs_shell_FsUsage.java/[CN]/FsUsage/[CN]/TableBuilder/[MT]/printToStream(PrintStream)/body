{
  if (isEmpty())   return;
  StringBuilder fmt=new StringBuilder();
  for (int i=0; i < widths.length; i++) {
    if (fmt.length() != 0)     fmt.append("  ");
    if (rightAlign[i]) {
      fmt.append("%" + widths[i] + "s");
    }
 else     if (i != widths.length - 1) {
      fmt.append("%-" + widths[i] + "s");
    }
 else {
      fmt.append("%s");
    }
  }
  for (  Object[] row : rows) {
    out.println(String.format(fmt.toString(),row));
  }
}
