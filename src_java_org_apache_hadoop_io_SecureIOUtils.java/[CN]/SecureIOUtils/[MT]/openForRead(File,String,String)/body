{
  if (skipSecurity) {
    FileStatus status=rawFilesystem.getFileStatus(new Path(f.getAbsolutePath()));
    checkStat(f,status.getOwner(),status.getGroup(),expectedOwner,expectedGroup);
    return new FileInputStream(f);
  }
  FileInputStream fis=new FileInputStream(f);
  boolean success=false;
  try {
    Stat stat=NativeIO.fstat(fis.getFD());
    checkStat(f,stat.getOwner(),stat.getGroup(),expectedOwner,expectedGroup);
    success=true;
    return fis;
  }
  finally {
    if (!success) {
      fis.close();
    }
  }
}
