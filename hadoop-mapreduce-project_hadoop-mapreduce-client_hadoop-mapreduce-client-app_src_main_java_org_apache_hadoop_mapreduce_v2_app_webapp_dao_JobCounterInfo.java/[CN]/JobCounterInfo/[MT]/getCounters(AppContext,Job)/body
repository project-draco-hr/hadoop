{
  total=new Counters();
  if (job == null) {
    return;
  }
  map=new Counters();
  reduce=new Counters();
  Map<TaskId,Task> tasks=job.getTasks();
  for (  Task t : tasks.values()) {
    Counters counters=t.getCounters();
    total.incrAllCounters(counters);
switch (t.getType()) {
case MAP:
      map.incrAllCounters(counters);
    break;
case REDUCE:
  reduce.incrAllCounters(counters);
break;
}
}
}
