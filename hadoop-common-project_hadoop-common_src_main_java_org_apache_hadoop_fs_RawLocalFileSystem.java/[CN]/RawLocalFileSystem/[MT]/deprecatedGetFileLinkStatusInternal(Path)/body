{
  String target=FileUtil.readLink(new File(f.toString()));
  try {
    FileStatus fs=getFileStatus(f);
    if (target.isEmpty()) {
      return fs;
    }
    return new FileStatus(fs.getLen(),false,fs.getReplication(),fs.getBlockSize(),fs.isLazyPersist(),fs.getModificationTime(),fs.getAccessTime(),fs.getPermission(),fs.getOwner(),fs.getGroup(),new Path(target),f);
  }
 catch (  FileNotFoundException e) {
    if (!target.isEmpty()) {
      return new FileStatus(0,false,0,0,false,0,0,FsPermission.getDefault(),"","",new Path(target),f);
    }
    throw e;
  }
}
