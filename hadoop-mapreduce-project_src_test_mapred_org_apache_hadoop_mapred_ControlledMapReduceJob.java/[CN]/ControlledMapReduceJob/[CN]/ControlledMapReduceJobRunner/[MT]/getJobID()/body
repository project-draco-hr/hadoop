{
  ControlledMapReduceJob job=getJob();
  JobID id=job.getJobId();
  while (id == null) {
    id=job.getJobId();
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException ie) {
      LOG.info(ControlledMapReduceJobRunner.class.getName() + " is interrupted.");
      break;
    }
  }
  return id;
}
