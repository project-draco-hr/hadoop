{
  Collection<Block> invalidateSet=recentInvalidateSets.get(dn.getStorageID());
  if (invalidateSet == null) {
    invalidateSet=new HashSet<Block>();
    recentInvalidateSets.put(dn.getStorageID(),invalidateSet);
  }
  if (invalidateSet.add(b)) {
    pendingDeletionBlocksCount++;
    if (log) {
      NameNode.stateChangeLog.info("BLOCK* NameSystem.addToInvalidates: " + b + " to "+ dn.getName());
    }
  }
}
