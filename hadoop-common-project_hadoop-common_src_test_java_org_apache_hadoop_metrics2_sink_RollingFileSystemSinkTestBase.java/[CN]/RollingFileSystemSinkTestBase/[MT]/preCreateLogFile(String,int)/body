{
  Calendar now=getNowNotTopOfHour();
  FileSystem fs=FileSystem.get(new URI(path),new Configuration());
  Path dir=new Path(path,DATE_FORMAT.format(now.getTime()));
  fs.mkdirs(dir);
  Path file=new Path(dir,"testsrc-" + InetAddress.getLocalHost().getHostName() + ".log");
  try (FSDataOutputStream out=fs.create(file)){
    out.write("Extra stuff\n".getBytes());
    out.flush();
  }
   if (numFiles > 1) {
    int count=1;
    while (count < numFiles) {
      file=new Path(dir,"testsrc-" + InetAddress.getLocalHost().getHostName() + ".log."+ count);
      try (FSDataOutputStream out=fs.create(file)){
        out.write("Extra stuff\n".getBytes());
        out.flush();
      }
       count+=1;
    }
  }
}
