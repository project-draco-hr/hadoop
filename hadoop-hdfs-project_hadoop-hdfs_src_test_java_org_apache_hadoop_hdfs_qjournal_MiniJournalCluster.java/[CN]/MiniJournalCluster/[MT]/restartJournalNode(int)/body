{
  Configuration conf=new Configuration(nodes[i].getConf());
  if (nodes[i].isStarted()) {
    nodes[i].stopAndJoin(0);
  }
  conf.set(DFSConfigKeys.DFS_JOURNALNODE_RPC_ADDRESS_KEY,"127.0.0.1:" + ipcAddrs[i].getPort());
  conf.set(DFSConfigKeys.DFS_JOURNALNODE_HTTP_ADDRESS_KEY,"127.0.0.1:" + httpAddrs[i].getPort());
  nodes[i]=new JournalNode();
  nodes[i].setConf(conf);
  nodes[i].start();
}
