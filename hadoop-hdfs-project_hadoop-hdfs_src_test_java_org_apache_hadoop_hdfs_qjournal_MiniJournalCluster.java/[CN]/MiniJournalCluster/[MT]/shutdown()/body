{
  boolean failed=false;
  for (  JournalNode jn : nodes) {
    try {
      jn.stopAndJoin(0);
    }
 catch (    Exception e) {
      failed=true;
      LOG.warn("Unable to stop journal node " + jn,e);
    }
  }
  if (failed) {
    throw new IOException("Unable to shut down. Check log for details");
  }
}
