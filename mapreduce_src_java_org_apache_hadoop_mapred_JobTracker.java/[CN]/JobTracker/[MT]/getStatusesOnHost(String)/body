{
  List<TaskTrackerStatus> statuses=new ArrayList<TaskTrackerStatus>();
synchronized (taskTrackers) {
    for (    TaskTracker tt : taskTrackers.values()) {
      TaskTrackerStatus status=tt.getStatus();
      if (hostName.equals(status.getHost())) {
        statuses.add(status);
      }
    }
  }
  return statuses;
}
