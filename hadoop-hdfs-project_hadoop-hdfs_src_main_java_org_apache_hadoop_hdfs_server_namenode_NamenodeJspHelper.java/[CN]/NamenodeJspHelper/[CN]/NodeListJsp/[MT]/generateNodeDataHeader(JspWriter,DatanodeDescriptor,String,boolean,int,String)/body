{
  String url=HttpConfig.getSchemePrefix() + d.getHostName() + ":"+ d.getInfoPort()+ "/browseDirectory.jsp?namenodeInfoPort="+ nnHttpPort+ "&dir="+ URLEncoder.encode("/","UTF-8")+ JspHelper.getUrlParam(JspHelper.NAMENODE_ADDRESS,nnaddr);
  String name=d.getXferAddrWithHostname();
  if (!name.matches("\\d+\\.\\d+.\\d+\\.\\d+.*"))   name=name.replaceAll("\\.[^.:]*","");
  int idx=(suffix != null && name.endsWith(suffix)) ? name.indexOf(suffix) : -1;
  out.print(rowTxt() + "<td class=\"name\"> <a title=\"" + url+ "\" href=\""+ url+ "\">"+ ((idx > 0) ? name.substring(0,idx) : name)+ "</a>"+ ((alive) ? "" : "\n")+ "<td class=\"address\">"+ d.getXferAddr());
}
