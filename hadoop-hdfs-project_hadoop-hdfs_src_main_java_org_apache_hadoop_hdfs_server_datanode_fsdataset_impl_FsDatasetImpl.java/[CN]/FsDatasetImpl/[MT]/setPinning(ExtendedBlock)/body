{
  if (!blockPinningEnabled) {
    return;
  }
  File f=getBlockFile(block);
  Path p=new Path(f.getAbsolutePath());
  FsPermission oldPermission=localFS.getFileStatus(new Path(f.getAbsolutePath())).getPermission();
  FsPermission permission=new FsPermission(oldPermission.getUserAction(),oldPermission.getGroupAction(),oldPermission.getOtherAction(),true);
  localFS.setPermission(p,permission);
}
