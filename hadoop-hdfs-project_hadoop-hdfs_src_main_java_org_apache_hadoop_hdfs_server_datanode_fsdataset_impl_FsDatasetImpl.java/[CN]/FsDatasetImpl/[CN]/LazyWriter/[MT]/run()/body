{
  while (fsRunning && shouldRun) {
    try {
      if (!saveNextReplica()) {
        Thread.sleep(checkpointerInterval * 1000);
      }
    }
 catch (    InterruptedException e) {
      LOG.info("LazyWriter was interrupted, exiting");
      break;
    }
catch (    Exception e) {
      LOG.error("Ignoring exception in LazyWriter:",e);
    }
  }
}
