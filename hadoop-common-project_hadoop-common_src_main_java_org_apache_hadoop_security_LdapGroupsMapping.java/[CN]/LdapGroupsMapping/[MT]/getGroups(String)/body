{
  for (int retry=0; retry < RECONNECT_RETRY_COUNT; retry++) {
    try {
      return doGetGroups(user);
    }
 catch (    NamingException e) {
      LOG.warn("Failed to get groups for user " + user + " (retry="+ retry+ ") by "+ e);
      LOG.trace("TRACE",e);
    }
    this.ctx=null;
  }
  return Collections.emptyList();
}
