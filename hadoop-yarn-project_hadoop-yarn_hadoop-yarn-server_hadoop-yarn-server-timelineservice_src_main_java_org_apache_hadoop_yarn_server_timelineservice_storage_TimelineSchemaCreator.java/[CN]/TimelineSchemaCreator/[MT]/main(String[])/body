{
  Configuration hbaseConf=HBaseConfiguration.create();
  String[] otherArgs=new GenericOptionsParser(hbaseConf,args).getRemainingArgs();
  CommandLine commandLine=parseArgs(otherArgs);
  String entityTableName=commandLine.getOptionValue("e");
  if (StringUtils.isNotBlank(entityTableName)) {
    hbaseConf.set(TimelineEntitySchemaConstants.ENTITY_TABLE_NAME,entityTableName);
  }
  String entityTable_TTL_Metrics=commandLine.getOptionValue("m");
  if (StringUtils.isNotBlank(entityTable_TTL_Metrics)) {
    hbaseConf.set(TimelineEntitySchemaConstants.ENTITY_TABLE_METRICS_TTL,entityTable_TTL_Metrics);
  }
  createAllTables(hbaseConf);
}
