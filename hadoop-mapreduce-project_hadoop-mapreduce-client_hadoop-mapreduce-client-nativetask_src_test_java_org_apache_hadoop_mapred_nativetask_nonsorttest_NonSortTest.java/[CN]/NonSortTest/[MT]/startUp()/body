{
  final ScenarioConfiguration configuration=new ScenarioConfiguration();
  configuration.addNonSortTestConf();
  final FileSystem fs=FileSystem.get(configuration);
  final Path path=new Path(configuration.get(TestConstants.NONSORT_TEST_INPUTDIR));
  if (!fs.exists(path)) {
    new TestInputFile(configuration.getInt("nativetask.nonsorttest.filesize",10000000),Text.class.getName(),Text.class.getName(),configuration).createSequenceTestFile(path.toString());
  }
  fs.close();
}
