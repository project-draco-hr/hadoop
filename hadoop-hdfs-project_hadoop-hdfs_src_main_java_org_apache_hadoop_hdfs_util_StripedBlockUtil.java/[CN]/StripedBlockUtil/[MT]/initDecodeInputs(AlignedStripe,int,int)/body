{
  byte[][] decodeInputs=new byte[dataBlkNum + parityBlkNum][(int)alignedStripe.getSpanInBlock()];
  for (int i=0; i < dataBlkNum; i++) {
    if (alignedStripe.chunks[i] == null) {
      final int decodeIndex=convertIndex4Decode(i,dataBlkNum,parityBlkNum);
      alignedStripe.chunks[i]=new StripingChunk(decodeInputs[decodeIndex]);
      alignedStripe.chunks[i].addByteArraySlice(0,(int)alignedStripe.getSpanInBlock());
    }
  }
  return decodeInputs;
}
