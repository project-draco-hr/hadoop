{
  final ExtendedBlock blk=constructInternalBlock(bg.getBlock(),cellSize,dataBlkNum,idxInBlockGroup);
  return new LocatedBlock(blk,new DatanodeInfo[]{bg.getLocations()[idxInReturnedLocs]},new String[]{bg.getStorageIDs()[idxInReturnedLocs]},new StorageType[]{bg.getStorageTypes()[idxInReturnedLocs]},bg.getStartOffset() + idxInBlockGroup,bg.isCorrupt(),null);
}
