{
  if (loginUser == null) {
    try {
      Subject subject=new Subject();
      loginUser=new UserGroupInformation(subject);
      LoginContext login;
      if (isSecurityEnabled()) {
        login=new LoginContext(HadoopConfiguration.USER_KERBEROS_CONFIG_NAME,subject);
      }
 else {
        login=new LoginContext(HadoopConfiguration.SIMPLE_CONFIG_NAME,subject);
      }
      login.login();
      loginUser.setLogin(login);
      loginUser=new UserGroupInformation(login.getSubject());
      String tokenFile=System.getenv(HADOOP_TOKEN_FILE_LOCATION);
      if (tokenFile != null && isSecurityEnabled()) {
        Credentials.readTokensAndLoadInUGI(tokenFile,new Configuration(),loginUser);
      }
    }
 catch (    LoginException le) {
      throw new IOException("failure to login",le);
    }
  }
  return loginUser;
}
