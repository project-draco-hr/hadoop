{
  final Path absF=fixRelativePart(path);
  return new FileSystemLinkResolver<AclStatus>(){
    @Override public AclStatus doCall(    final Path p) throws IOException {
      return dfs.getAclStatus(getPathName(p));
    }
    @Override public AclStatus next(    final FileSystem fs,    final Path p) throws IOException, UnresolvedLinkException {
      return fs.getAclStatus(p);
    }
  }
.resolve(this,absF);
}
