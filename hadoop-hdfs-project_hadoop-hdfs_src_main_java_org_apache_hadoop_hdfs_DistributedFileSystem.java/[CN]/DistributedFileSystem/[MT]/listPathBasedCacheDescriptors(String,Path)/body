{
  String pathName=path != null ? getPathName(fixRelativePart(path)) : null;
  final RemoteIterator<PathBasedCacheDescriptor> iter=dfs.listPathBasedCacheDescriptors(pool,pathName);
  return new RemoteIterator<PathBasedCacheDescriptor>(){
    @Override public boolean hasNext() throws IOException {
      return iter.hasNext();
    }
    @Override public PathBasedCacheDescriptor next() throws IOException {
      PathBasedCacheDescriptor desc=iter.next();
      Path qualPath=desc.getPath().makeQualified(getUri(),path);
      return new PathBasedCacheDescriptor(desc.getEntryId(),qualPath,desc.getPool());
    }
  }
;
}
