{
  statistics.incrementReadOps(1);
  Path absF=fixRelativePart(f);
  return new FileSystemLinkResolver<FSDataInputStream>(){
    @Override public FSDataInputStream doCall(    final Path p) throws IOException, UnresolvedLinkException {
      return new HdfsDataInputStream(dfs.open(getPathName(p),bufferSize,verifyChecksum));
    }
    @Override public FSDataInputStream next(    final FileSystem fs,    final Path p) throws IOException {
      return fs.open(p,bufferSize);
    }
  }
.resolve(this,absF);
}
