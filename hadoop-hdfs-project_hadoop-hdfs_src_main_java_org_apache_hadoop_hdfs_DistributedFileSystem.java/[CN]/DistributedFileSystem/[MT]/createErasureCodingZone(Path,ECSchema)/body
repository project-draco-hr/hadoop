{
  Path absF=fixRelativePart(path);
  new FileSystemLinkResolver<Void>(){
    @Override public Void doCall(    final Path p) throws IOException, UnresolvedLinkException {
      dfs.createErasureCodingZone(getPathName(p),null);
      return null;
    }
    @Override public Void next(    final FileSystem fs,    final Path p) throws IOException {
      if (fs instanceof DistributedFileSystem) {
        DistributedFileSystem myDfs=(DistributedFileSystem)fs;
        myDfs.createErasureCodingZone(p,schema);
        return null;
      }
      throw new UnsupportedOperationException("Cannot createErasureCodingZone through a symlink to a " + "non-DistributedFileSystem: " + path + " -> "+ p);
    }
  }
.resolve(this,absF);
}
