{
  statistics.incrementWriteOps(1);
  final Path absF=fixRelativePart(link);
  new FileSystemLinkResolver<Void>(){
    @Override public Void doCall(    final Path p) throws IOException, UnresolvedLinkException {
      dfs.createSymlink(target.toString(),getPathName(p),createParent);
      return null;
    }
    @Override public Void next(    final FileSystem fs,    final Path p) throws IOException, UnresolvedLinkException {
      fs.createSymlink(target,p,createParent);
      return null;
    }
  }
.resolve(this,absF);
}
