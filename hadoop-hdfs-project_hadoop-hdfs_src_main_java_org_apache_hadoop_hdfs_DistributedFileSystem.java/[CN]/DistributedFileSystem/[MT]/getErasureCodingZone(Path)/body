{
  Path absF=fixRelativePart(path);
  return new FileSystemLinkResolver<ErasureCodingZone>(){
    @Override public ErasureCodingZone doCall(    final Path p) throws IOException, UnresolvedLinkException {
      return dfs.getErasureCodingZone(getPathName(p));
    }
    @Override public ErasureCodingZone next(    final FileSystem fs,    final Path p) throws IOException {
      if (fs instanceof DistributedFileSystem) {
        DistributedFileSystem myDfs=(DistributedFileSystem)fs;
        return myDfs.getErasureCodingZone(p);
      }
      throw new UnsupportedOperationException("Cannot getErasureCodingZone through a symlink to a " + "non-DistributedFileSystem: " + path + " -> "+ p);
    }
  }
.resolve(this,absF);
}
