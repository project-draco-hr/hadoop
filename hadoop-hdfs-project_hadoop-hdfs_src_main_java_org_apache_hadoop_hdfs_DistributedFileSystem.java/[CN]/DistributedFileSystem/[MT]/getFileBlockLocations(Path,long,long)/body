{
  statistics.incrementReadOps(1);
  final Path absF=fixRelativePart(p);
  return new FileSystemLinkResolver<BlockLocation[]>(){
    @Override public BlockLocation[] doCall(    final Path p) throws IOException, UnresolvedLinkException {
      return dfs.getBlockLocations(getPathName(p),start,len);
    }
    @Override public BlockLocation[] next(    final FileSystem fs,    final Path p) throws IOException {
      return fs.getFileBlockLocations(p,start,len);
    }
  }
.resolve(this,absF);
}
