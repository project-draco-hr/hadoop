{
  JobId jobId=MRApps.toJobID(jid);
  if (jobId == null) {
    throw new NotFoundException("job, " + jid + ", is not found");
  }
  Job job=appCtx.getJob(jobId);
  if (job == null) {
    throw new NotFoundException("job, " + jid + ", is not found");
  }
  return new JobCounterInfo(this.appCtx,job);
}
