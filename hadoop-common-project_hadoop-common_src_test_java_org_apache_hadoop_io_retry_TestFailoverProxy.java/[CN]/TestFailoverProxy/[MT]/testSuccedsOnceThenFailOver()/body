{
  UnreliableInterface unreliable=(UnreliableInterface)RetryProxy.create(UnreliableInterface.class,new FlipFlopProxyProvider(UnreliableInterface.class,new UnreliableImplementation("impl1"),new UnreliableImplementation("impl2")),new FailOverOnceOnAnyExceptionPolicy());
  assertEquals("impl1",unreliable.succeedsOnceThenFailsReturningString());
  assertEquals("impl2",unreliable.succeedsOnceThenFailsReturningString());
  try {
    unreliable.succeedsOnceThenFailsReturningString();
    fail("should not have succeeded more than twice");
  }
 catch (  UnreliableException e) {
  }
}
