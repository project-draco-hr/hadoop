{
  UnreliableInterface unreliable=(UnreliableInterface)RetryProxy.create(UnreliableInterface.class,new FlipFlopProxyProvider(UnreliableInterface.class,new UnreliableImplementation("impl1"),new UnreliableImplementation("impl2")),RetryPolicies.TRY_ONCE_THEN_FAIL);
  unreliable.succeedsOnceThenFailsReturningString();
  try {
    unreliable.succeedsOnceThenFailsReturningString();
    fail("should not have succeeded twice");
  }
 catch (  UnreliableException e) {
    assertEquals("impl1",e.getMessage());
  }
}
