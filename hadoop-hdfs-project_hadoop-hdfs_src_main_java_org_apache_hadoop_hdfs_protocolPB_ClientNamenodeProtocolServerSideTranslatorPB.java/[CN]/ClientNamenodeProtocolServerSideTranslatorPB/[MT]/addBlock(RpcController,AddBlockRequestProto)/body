{
  try {
    List<DatanodeInfoProto> excl=req.getExcludeNodesList();
    List<String> favor=req.getFavoredNodesList();
    LocatedBlock result=server.addBlock(req.getSrc(),req.getClientName(),req.hasPrevious() ? PBHelperClient.convert(req.getPrevious()) : null,(excl == null || excl.size() == 0) ? null : PBHelperClient.convert(excl.toArray(new DatanodeInfoProto[excl.size()])),req.getFileId(),(favor == null || favor.size() == 0) ? null : favor.toArray(new String[favor.size()]));
    return AddBlockResponseProto.newBuilder().setBlock(PBHelperClient.convert(result)).build();
  }
 catch (  IOException e) {
    throw new ServiceException(e);
  }
}
