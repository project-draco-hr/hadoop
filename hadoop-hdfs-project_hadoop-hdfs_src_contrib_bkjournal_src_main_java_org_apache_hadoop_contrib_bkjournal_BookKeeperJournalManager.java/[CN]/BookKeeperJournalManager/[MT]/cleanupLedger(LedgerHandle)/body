{
  try {
    long id=currentLedger.getId();
    currentLedger.close();
    bkc.deleteLedger(id);
  }
 catch (  BKException bke) {
    LOG.error("Error closing ledger",bke);
  }
catch (  InterruptedException ie) {
    Thread.currentThread().interrupt();
    LOG.warn("Interrupted while closing ledger",ie);
  }
}
