{
  int i=0;
  if (numDataNodes > 0) {
    while (!isClusterUp()) {
      try {
        LOG.warn("Waiting for the Mini HDFS Cluster to start...");
        Thread.sleep(1000);
      }
 catch (      InterruptedException e) {
      }
      if (++i > 10) {
        throw new IOException("Timed out waiting for Mini HDFS Cluster to start");
      }
    }
  }
}
