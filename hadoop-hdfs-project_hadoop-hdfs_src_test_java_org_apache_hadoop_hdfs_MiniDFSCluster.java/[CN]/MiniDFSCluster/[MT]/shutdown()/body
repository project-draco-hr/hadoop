{
  LOG.info("Shutting down the Mini HDFS Cluster");
  shutdownDataNodes();
  for (  NameNodeInfo nnInfo : nameNodes) {
    if (nnInfo == null)     continue;
    NameNode nameNode=nnInfo.nameNode;
    if (nameNode != null) {
      nameNode.stop();
      nameNode.join();
      nameNode=null;
    }
  }
}
