{
  int i;
  for (i=0; i < dataNodes.size(); i++) {
    DataNode dn=dataNodes.get(i).datanode;
    DatanodeRegistration dnR=DataNodeTestUtils.getDNRegistrationByMachineName(dn,name);
    LOG.info("for name=" + name + " found bp="+ dnR+ "; with dnMn="+ dn.getMachineName());
    if (dnR != null) {
      break;
    }
  }
  return stopDataNode(i);
}
