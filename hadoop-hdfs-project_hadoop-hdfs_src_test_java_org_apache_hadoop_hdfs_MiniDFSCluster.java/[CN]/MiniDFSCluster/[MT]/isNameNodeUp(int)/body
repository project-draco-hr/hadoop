{
  NameNode nameNode=nameNodes[nnIndex].nameNode;
  if (nameNode == null) {
    return false;
  }
  long[] sizes;
  sizes=NameNodeAdapter.getStats(nameNode.getNamesystem());
  boolean isUp=false;
synchronized (this) {
    isUp=((!nameNode.isInSafeMode() || !waitSafeMode) && sizes[ClientProtocol.GET_STATS_CAPACITY_IDX] != 0);
  }
  return isUp;
}
