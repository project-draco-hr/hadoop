{
  String webapps=System.getProperty(TEST_BUILD_WEBAPPS,BUILD_WEBAPPS_DIR);
  File testWebappDir=new File(webapps + File.pathSeparator + TEST);
  if (!testWebappDir.exists()) {
    assertTrue("Unable to create the test dir " + testWebappDir,testWebappDir.mkdirs());
  }
 else {
    assertTrue("Not a directory " + testWebappDir,testWebappDir.isDirectory());
  }
}
