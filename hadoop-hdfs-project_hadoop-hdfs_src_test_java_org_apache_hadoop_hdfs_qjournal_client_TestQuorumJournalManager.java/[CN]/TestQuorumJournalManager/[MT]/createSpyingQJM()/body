{
  return new QuorumJournalManager(conf,cluster.getQuorumJournalURI(JID),FAKE_NSINFO){
    @Override protected List<AsyncLogger> createLoggers() throws IOException {
      LOG.info("===> make spies");
      List<AsyncLogger> realLoggers=super.createLoggers();
      List<AsyncLogger> spies=Lists.newArrayList();
      for (      AsyncLogger logger : realLoggers) {
        spies.add(Mockito.spy(logger));
      }
      return spies;
    }
  }
;
}
