{
  String ret="N/A";
  if (pid == null) {
    return ret;
  }
  BufferedReader in=null;
  FileReader fReader=null;
  try {
    fReader=new FileReader(new File(new File(procfsDir,pid.toString()),PROCFS_CMDLINE_FILE));
  }
 catch (  FileNotFoundException f) {
    return ret;
  }
  in=new BufferedReader(fReader);
  try {
    ret=in.readLine();
    if (ret == null) {
      ret="N/A";
    }
 else {
      ret=ret.replace('\0',' ');
      if (ret.equals("")) {
        ret="N/A";
      }
    }
  }
 catch (  IOException io) {
    LOG.warn("Error reading the stream " + io);
    ret="N/A";
  }
 finally {
    try {
      fReader.close();
      try {
        in.close();
      }
 catch (      IOException i) {
        LOG.warn("Error closing the stream " + in);
      }
    }
 catch (    IOException i) {
      LOG.warn("Error closing the stream " + fReader);
    }
  }
  return ret;
}
