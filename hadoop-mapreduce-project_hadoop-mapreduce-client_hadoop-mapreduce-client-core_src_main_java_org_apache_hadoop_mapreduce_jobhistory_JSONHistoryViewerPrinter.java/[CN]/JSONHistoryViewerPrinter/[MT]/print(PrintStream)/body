{
  json=new JSONObject();
  Writer writer=null;
  try {
    printJobDetails();
    printTaskSummary();
    printTasks();
    writer=new OutputStreamWriter(ps,"UTF-8");
    json.write(writer);
    writer.flush();
  }
 catch (  JSONException je) {
    throw new IOException("Failure parsing JSON document: " + je.getMessage(),je);
  }
 finally {
    if (writer != null) {
      writer.close();
    }
  }
}
