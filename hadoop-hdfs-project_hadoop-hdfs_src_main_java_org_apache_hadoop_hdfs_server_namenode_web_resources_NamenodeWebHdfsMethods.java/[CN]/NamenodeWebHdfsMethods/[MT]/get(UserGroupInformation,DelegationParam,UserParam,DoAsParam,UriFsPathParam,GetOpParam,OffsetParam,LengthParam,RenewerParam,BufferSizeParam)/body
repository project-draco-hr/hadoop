{
  init(ugi,delegation,username,doAsUser,path,op,offset,length,renewer,bufferSize);
  return ugi.doAs(new PrivilegedExceptionAction<Response>(){
    @Override public Response run() throws IOException, URISyntaxException {
      REMOTE_ADDRESS.set(request.getRemoteAddr());
      try {
        return get(ugi,delegation,username,doAsUser,path.getAbsolutePath(),op,offset,length,renewer,bufferSize);
      }
  finally {
        REMOTE_ADDRESS.set(null);
      }
    }
  }
);
}
