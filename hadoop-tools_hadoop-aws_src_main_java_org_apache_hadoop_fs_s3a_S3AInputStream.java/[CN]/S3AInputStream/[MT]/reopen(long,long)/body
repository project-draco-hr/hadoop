{
  requestedStreamLen=(length < 0) ? this.contentLength : Math.max(this.contentLength,(CLOSE_THRESHOLD + (targetPos + length)));
  if (wrappedStream != null) {
    if (LOG.isDebugEnabled()) {
      LOG.debug("Closing the previous stream");
    }
    closeStream(requestedStreamLen);
  }
  if (LOG.isDebugEnabled()) {
    LOG.debug("Requesting for " + "targetPos=" + targetPos + ", length="+ length+ ", requestedStreamLen="+ requestedStreamLen+ ", streamPosition="+ pos+ ", nextReadPosition="+ nextReadPos);
  }
  GetObjectRequest request=new GetObjectRequest(bucket,key).withRange(targetPos,requestedStreamLen);
  wrappedStream=client.getObject(request).getObjectContent();
  if (wrappedStream == null) {
    throw new IOException("Null IO stream");
  }
  this.pos=targetPos;
}
