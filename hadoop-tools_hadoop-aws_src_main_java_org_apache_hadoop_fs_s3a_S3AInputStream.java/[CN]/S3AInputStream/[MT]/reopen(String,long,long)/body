{
  requestedStreamLen=this.contentLength;
  if (wrappedStream != null) {
    closeStream("reopen(" + reason + ")",requestedStreamLen);
  }
  LOG.debug("reopen({}) for {} at targetPos={}, length={}," + " requestedStreamLen={}, streamPosition={}, nextReadPosition={}",uri,reason,targetPos,length,requestedStreamLen,pos,nextReadPos);
  streamStatistics.streamOpened();
  try {
    GetObjectRequest request=new GetObjectRequest(bucket,key).withRange(targetPos,requestedStreamLen);
    wrappedStream=client.getObject(request).getObjectContent();
    if (wrappedStream == null) {
      throw new IOException("Null IO stream from reopen of (" + reason + ") "+ uri);
    }
  }
 catch (  AmazonClientException e) {
    throw translateException("Reopen at position " + targetPos,uri,e);
  }
  this.pos=targetPos;
}
