{
  long rangeLimit;
switch (inputPolicy) {
case Random:
    rangeLimit=(length < 0) ? contentLength : targetPos + Math.max(readahead,length);
  break;
case Sequential:
rangeLimit=contentLength;
break;
case Normal:
default :
rangeLimit=contentLength;
}
rangeLimit=Math.min(contentLength,rangeLimit);
return rangeLimit;
}
