{
  try {
    connection.commit();
    connection.close();
    connection=null;
  }
 catch (  Throwable ex) {
    LOG.warn("Exception occurred while closing connection :" + StringUtils.stringifyException(ex));
  }
 finally {
    try {
      if (server != null) {
        server.shutdown();
      }
    }
 catch (    Throwable ex) {
      LOG.warn("Exception occurred while shutting down HSQLDB :" + StringUtils.stringifyException(ex));
    }
    server=null;
  }
}
