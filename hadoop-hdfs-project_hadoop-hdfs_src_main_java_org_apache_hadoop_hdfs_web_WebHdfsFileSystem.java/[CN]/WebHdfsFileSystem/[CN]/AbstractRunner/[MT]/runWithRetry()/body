{
  for (int retry=0; ; retry++) {
    try {
      init();
      if (op.getDoOutput()) {
        twoStepWrite();
      }
 else {
        getResponse(op != GetOpParam.Op.OPEN);
      }
      return this;
    }
 catch (    IOException ioe) {
      Throwable cause=ioe.getCause();
      if (cause != null && cause instanceof AuthenticationException) {
        throw ioe;
      }
      shouldRetry(ioe,retry);
    }
  }
}
