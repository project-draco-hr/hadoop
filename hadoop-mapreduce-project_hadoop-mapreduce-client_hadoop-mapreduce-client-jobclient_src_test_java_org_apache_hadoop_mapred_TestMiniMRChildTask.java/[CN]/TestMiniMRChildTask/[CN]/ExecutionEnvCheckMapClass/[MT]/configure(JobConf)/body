{
  String executionEnvPathVariable=System.getenv(Shell.WINDOWS ? "PATH" : "LD_LIBRARY_PATH");
  String hadoopHome=System.getenv("HADOOP_COMMON_HOME");
  if (hadoopHome == null) {
    hadoopHome="";
  }
  String hadoopLibLocation=hadoopHome + (Shell.WINDOWS ? "\\bin" : "/lib/native");
  assertTrue(executionEnvPathVariable.contains(hadoopLibLocation));
}
