{
  String[] periodsStr=conf.getTrimmedStrings(DFSConfigKeys.NNTOP_WINDOWS_MINUTES_KEY,DFSConfigKeys.NNTOP_WINDOWS_MINUTES_DEFAULT);
  nntopReportingPeriodsMs=new long[periodsStr.length];
  for (int i=0; i < periodsStr.length; i++) {
    nntopReportingPeriodsMs[i]=Integer.parseInt(periodsStr[i]) * 60L * 1000L;
  }
  for (  long aPeriodMs : nntopReportingPeriodsMs) {
    Preconditions.checkArgument(aPeriodMs >= 60L * 1000L,"minimum reporting period is 1 min!");
  }
}
