{
  UserGroupInformation.setLoginUser(ugi);
  return ugi.doAs(new PrivilegedAction<Boolean>(){
    @Override public Boolean run(){
      try {
        op.execute();
        return true;
      }
 catch (      IOException ex) {
        LOG.error("IOException thrown during doAs() operation",ex);
        return false;
      }
    }
  }
);
}
