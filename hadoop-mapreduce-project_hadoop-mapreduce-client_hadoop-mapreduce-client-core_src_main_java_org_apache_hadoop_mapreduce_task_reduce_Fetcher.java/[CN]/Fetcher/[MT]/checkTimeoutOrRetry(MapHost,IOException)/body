{
  long currentTime=Time.monotonicNow();
  if (retryStartTime == 0) {
    retryStartTime=currentTime;
  }
  if (currentTime - retryStartTime < this.fetchRetryTimeout) {
    LOG.warn("Shuffle output from " + host.getHostName() + " failed, retry it.");
    throw ioe;
  }
 else {
    LOG.warn("Timeout for copying MapOutput with retry on host " + host + "after "+ fetchRetryTimeout+ "milliseconds.");
  }
}
