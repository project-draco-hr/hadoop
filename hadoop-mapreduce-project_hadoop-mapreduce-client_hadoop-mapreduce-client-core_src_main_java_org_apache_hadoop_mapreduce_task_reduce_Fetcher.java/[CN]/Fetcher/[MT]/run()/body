{
  try {
    while (!stopped && !Thread.currentThread().isInterrupted()) {
      MapHost host=null;
      try {
        merger.waitForInMemoryMerge();
        host=scheduler.getHost();
        metrics.threadBusy();
        copyFromHost(host);
      }
  finally {
        if (host != null) {
          scheduler.freeHost(host);
          metrics.threadFree();
        }
      }
    }
  }
 catch (  InterruptedException ie) {
    return;
  }
catch (  Throwable t) {
    exceptionReporter.reportException(t);
  }
}
