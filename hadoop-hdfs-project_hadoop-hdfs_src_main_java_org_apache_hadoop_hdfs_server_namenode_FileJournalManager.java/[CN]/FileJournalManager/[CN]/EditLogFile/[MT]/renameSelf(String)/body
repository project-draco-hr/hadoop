{
  File src=file;
  File dst=new File(src.getParent(),src.getName() + newSuffix);
  try {
    if (dst.exists()) {
      if (!dst.delete()) {
        throw new IOException("Couldn't delete " + dst);
      }
    }
    NativeIO.renameTo(src,dst);
  }
 catch (  IOException e) {
    throw new IOException("Couldn't rename log " + src + " to "+ dst,e);
  }
  file=dst;
}
