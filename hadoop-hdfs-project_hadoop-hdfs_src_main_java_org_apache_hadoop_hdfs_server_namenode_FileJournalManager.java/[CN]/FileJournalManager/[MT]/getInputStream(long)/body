{
  for (  EditLogFile elf : getLogFiles(fromTxId)) {
    if (elf.getFirstTxId() == fromTxId) {
      if (elf.isInProgress()) {
        elf.validateLog();
      }
      if (LOG.isTraceEnabled()) {
        LOG.trace("Returning edit stream reading from " + elf);
      }
      return new EditLogFileInputStream(elf.getFile(),elf.getFirstTxId(),elf.getLastTxId());
    }
  }
  throw new IOException("Cannot find editlog file with " + fromTxId + " as first first txid");
}
