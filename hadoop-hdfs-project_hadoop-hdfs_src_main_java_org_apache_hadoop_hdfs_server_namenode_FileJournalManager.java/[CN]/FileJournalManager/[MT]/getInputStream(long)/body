{
  for (  EditLogFile elf : getLogFiles(fromTxId)) {
    if (elf.containsTxId(fromTxId)) {
      if (elf.isInProgress()) {
        elf.validateLog();
      }
      if (LOG.isTraceEnabled()) {
        LOG.trace("Returning edit stream reading from " + elf);
      }
      EditLogFileInputStream elfis=new EditLogFileInputStream(elf.getFile(),elf.getFirstTxId(),elf.getLastTxId(),elf.isInProgress());
      long transactionsToSkip=fromTxId - elf.getFirstTxId();
      if (transactionsToSkip > 0) {
        LOG.info(String.format("Log begins at txid %d, but requested start " + "txid is %d. Skipping %d edits.",elf.getFirstTxId(),fromTxId,transactionsToSkip));
        elfis.skipTransactions(transactionsToSkip);
      }
      return elfis;
    }
  }
  throw new IOException("Cannot find editlog file containing " + fromTxId);
}
