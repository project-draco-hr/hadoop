{
  List<EditLogFile> files=matchEditLogs(dir);
  List<EditLogFile> ret=Lists.newLinkedList();
  for (  EditLogFile elf : files) {
    if (elf.getFirstTxId() == startTxId) {
      ret.add(elf);
    }
  }
  if (ret.isEmpty()) {
    return null;
  }
 else   if (ret.size() == 1) {
    return ret.get(0);
  }
 else {
    throw new IllegalStateException("More than one log segment in " + dir + " starting at txid "+ startTxId+ ": "+ Joiner.on(", ").join(ret));
  }
}
