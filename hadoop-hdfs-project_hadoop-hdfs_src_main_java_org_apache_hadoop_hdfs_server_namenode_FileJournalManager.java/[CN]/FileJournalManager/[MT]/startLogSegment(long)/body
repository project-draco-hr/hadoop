{
  try {
    currentInProgress=NNStorage.getInProgressEditsFile(sd,txid);
    EditLogOutputStream stm=new EditLogFileOutputStream(currentInProgress,outputBufferCapacity);
    stm.create();
    return stm;
  }
 catch (  IOException e) {
    LOG.warn("Unable to start log segment " + txid + " at "+ currentInProgress+ ": "+ e.getLocalizedMessage());
    errorReporter.reportErrorOnFile(currentInProgress);
    throw e;
  }
}
