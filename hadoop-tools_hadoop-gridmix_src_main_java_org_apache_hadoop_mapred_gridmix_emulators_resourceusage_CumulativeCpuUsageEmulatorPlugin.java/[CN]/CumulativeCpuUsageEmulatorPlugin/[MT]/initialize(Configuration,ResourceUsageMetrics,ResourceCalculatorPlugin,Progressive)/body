{
  this.monitor=monitor;
  this.progress=progress;
  targetCpuUsage=metrics.getCumulativeCpuUsage();
  if (targetCpuUsage <= 0) {
    enabled=false;
    return;
  }
 else {
    enabled=true;
  }
  emulationInterval=conf.getFloat(CPU_EMULATION_PROGRESS_INTERVAL,DEFAULT_EMULATION_FREQUENCY);
  emulatorCore.calibrate(monitor,targetCpuUsage);
  lastSeenProgress=0;
  lastSeenCpuUsage=0;
}
