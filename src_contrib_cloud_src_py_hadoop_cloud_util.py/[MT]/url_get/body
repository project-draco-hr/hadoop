def url_get(url, timeout=10, retries=0):
    '\n  Retrieve content from the given URL.\n  '
    socket.setdefaulttimeout(timeout)
    attempts = 0
    while True:
        try:
            return urllib2.urlopen(url).read()
        except urllib2.URLError:
            attempts = (attempts + 1)
            if (attempts > retries):
                raise
