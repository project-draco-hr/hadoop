def build_env_string(env_strings=[], pairs={}):
    'Build a bash environment variable assignment'
    env = ''
    if env_strings:
        for env_string in env_strings:
            env += ('%s ' % bash_quote_env(env_string))
    if pairs:
        for (key, val) in pairs.items():
            env += ('%s=%s ' % (key, bash_quote(val)))
    return env[:(-1)]
