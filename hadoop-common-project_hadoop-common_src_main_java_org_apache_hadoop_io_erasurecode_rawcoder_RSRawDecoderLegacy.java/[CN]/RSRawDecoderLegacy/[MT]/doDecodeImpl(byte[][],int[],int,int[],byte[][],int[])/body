{
  for (int i=0; i < erasedIndexes.length; i++) {
    errSignature[i]=primitivePower[erasedIndexes[i]];
    RSUtil.GF.substitute(inputs,inputOffsets,dataLen,outputs[i],outputOffsets[i],primitivePower[i]);
  }
  RSUtil.GF.solveVandermondeSystem(errSignature,outputs,outputOffsets,erasedIndexes.length,dataLen);
}
