{
  Configuration conf=new Configuration(false);
  conf.set("hadoop.security.key.provider.path","jceks://file@" + new Path(keyStoreDir.getAbsolutePath(),"kms.keystore").toUri());
  conf.set("hadoop.kms.authentication.type","simple");
  conf.setBoolean(KMSConfiguration.KEY_AUTHORIZATION_ENABLE,false);
  conf.set(KMSACLs.Type.GET_KEYS.getAclConfigKey(),"foo");
  return conf;
}
