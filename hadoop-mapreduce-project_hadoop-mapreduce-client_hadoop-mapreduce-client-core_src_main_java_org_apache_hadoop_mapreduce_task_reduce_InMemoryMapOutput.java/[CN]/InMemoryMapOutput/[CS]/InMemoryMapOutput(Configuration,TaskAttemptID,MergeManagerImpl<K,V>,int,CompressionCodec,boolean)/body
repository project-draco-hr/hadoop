{
  super(mapId,(long)size,primaryMapOutput);
  this.conf=conf;
  this.merger=merger;
  this.codec=codec;
  byteStream=new BoundedByteArrayOutputStream(size);
  memory=byteStream.getBuffer();
  if (codec != null) {
    decompressor=CodecPool.getDecompressor(codec);
  }
 else {
    decompressor=null;
  }
}
