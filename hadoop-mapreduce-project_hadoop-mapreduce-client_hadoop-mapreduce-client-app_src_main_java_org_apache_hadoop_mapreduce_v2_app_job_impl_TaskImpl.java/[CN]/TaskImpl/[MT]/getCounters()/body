{
  Counters counters=null;
  readLock.lock();
  try {
    TaskAttempt bestAttempt=selectBestAttempt();
    if (bestAttempt != null) {
      counters=bestAttempt.getCounters();
    }
 else {
      counters=TaskAttemptImpl.EMPTY_COUNTERS;
    }
    return counters;
  }
  finally {
    readLock.unlock();
  }
}
