{
  if (dir == null) {
    return;
  }
  try {
    localFs.getFileStatus(dir);
  }
 catch (  FileNotFoundException e) {
    createDir(localFs,dir.getParent(),perm);
    localFs.mkdir(dir,perm,false);
    if (!perm.equals(perm.applyUMask(localFs.getUMask()))) {
      localFs.setPermission(dir,perm);
    }
  }
}
