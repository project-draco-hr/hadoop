{
  if (skip)   return;
  writeRecords(3 * records1stBlock);
  Reader reader=new Reader(fs.open(path),fs.getFileStatus(path).getLen(),conf);
  Scanner scanner=reader.createScanner();
  Location loc2=locate(scanner,composeSortedKey(KEY,3 * records1stBlock,2).getBytes());
  Location locLastIn1stBlock=locate(scanner,composeSortedKey(KEY,3 * records1stBlock,records1stBlock - 1).getBytes());
  Location locFirstIn2ndBlock=locate(scanner,composeSortedKey(KEY,3 * records1stBlock,records1stBlock).getBytes());
  Location locX=locate(scanner,"keyX".getBytes());
  Assert.assertEquals(scanner.endLocation,locX);
  scanner.close();
  reader.close();
}
