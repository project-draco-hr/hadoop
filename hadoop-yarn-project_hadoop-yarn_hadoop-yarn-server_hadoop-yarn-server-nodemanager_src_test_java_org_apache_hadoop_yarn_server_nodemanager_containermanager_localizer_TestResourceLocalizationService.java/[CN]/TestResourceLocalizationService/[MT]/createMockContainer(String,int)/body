{
  ContainerImpl container=mock(ContainerImpl.class);
  org.apache.hadoop.yarn.api.records.Container c=mock(org.apache.hadoop.yarn.api.records.Container.class);
  when(container.getContainer()).thenReturn(c);
  when(container.getContainer().getId()).thenReturn(BuilderUtils.newContainerId(1,1,1,containerId));
  when(container.getUser()).thenReturn(user);
  Credentials mockCredentials=mock(Credentials.class);
  when(container.getCredentials()).thenReturn(mockCredentials);
  return container;
}
