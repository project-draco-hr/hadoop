{
  for (int i=0; i < SOURCES; ++i) {
    source[i]=new int[ITEMS];
    for (int j=0; j < ITEMS; ++j) {
      source[i][j]=(i + 2) * (j + 1);
    }
  }
  Path[] src=new Path[SOURCES];
  SequenceFile.Writer out[]=createWriters(base,conf,SOURCES,src);
  IntWritable k=new IntWritable();
  for (int i=0; i < SOURCES; ++i) {
    Writable v;
    if (i != SOURCES - 1) {
      v=new IntWritable();
      ((IntWritable)v).set(i);
    }
 else {
      v=new LongWritable();
      ((LongWritable)v).set(i);
    }
    for (int j=0; j < ITEMS; ++j) {
      k.set(source[i][j]);
      out[i].append(k,v);
    }
    out[i].close();
  }
  return src;
}
