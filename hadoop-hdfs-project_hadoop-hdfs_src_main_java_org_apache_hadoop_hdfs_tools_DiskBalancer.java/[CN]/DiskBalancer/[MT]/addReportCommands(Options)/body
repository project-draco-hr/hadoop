{
  Option report=new Option(REPORT,false,"Report volume information of DataNode(s)" + " benefiting from running DiskBalancer. " + "-report [top -X] | [-node {DataNodeID | IP | Hostname}].");
  opt.addOption(report);
  Option top=new Option(TOP,true,"specify the top number of nodes to be processed.");
  opt.addOption(top);
  Option node=new Option(NODE,true,"Name of the datanode in the format of DataNodeID, IP or hostname.");
  opt.addOption(node);
}
