{
  Option cancel=OptionBuilder.withLongOpt(CANCEL).hasArg().withDescription("Cancels a running plan using a plan file.").create();
  getCancelOptions().addOption(cancel);
  opt.addOption(cancel);
  Option node=OptionBuilder.withLongOpt(NODE).hasArg().withDescription("Cancels a running plan using a plan ID and hostName").create();
  getCancelOptions().addOption(node);
  opt.addOption(node);
}
