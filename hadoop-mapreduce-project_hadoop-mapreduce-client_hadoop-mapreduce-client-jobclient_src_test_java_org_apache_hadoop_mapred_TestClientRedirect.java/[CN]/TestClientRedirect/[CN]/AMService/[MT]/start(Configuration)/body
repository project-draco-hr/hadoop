{
  YarnRPC rpc=YarnRPC.create(conf);
  InetSocketAddress address=NetUtils.createSocketAddr(hostAddress);
  InetAddress hostNameResolved=null;
  try {
    address.getAddress();
    hostNameResolved=InetAddress.getLocalHost();
  }
 catch (  UnknownHostException e) {
    throw new YarnException(e);
  }
  server=rpc.getServer(MRClientProtocol.class,this,address,conf,null,1);
  server.start();
  this.bindAddress=NetUtils.createSocketAddr(hostNameResolved.getHostAddress() + ":" + server.getPort());
  super.start();
  amRunning=true;
}
