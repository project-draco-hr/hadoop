def __init__(self, configFile, configDef=None, originalDir=None, options=None, checkPerms=False):
    'Constructs config object.\n\n           configFile - configuration file to read\n           configDef  - definition object\n           options    - options object\n           checkPerms - check file permission on config file, 0660\n\n           sample configuration file:\n\n            [snis]\n            modules_dir  = modules/       ; location of infoModules\n            md5_defs_dir = etc/md5_defs   ; location of infoTree md5 defs\n            info_store   = var/info       ; location of nodeInfo store\n            cam_daemon   = localhost:8200 ; cam daemon address'
    SafeConfigParser.__init__(self)
    baseConfig.__init__(self, configDef, originalDir)
    if os.path.exists(configFile):
        self.configFile = configFile
    else:
        raise IOError
    self._options = options
    if checkPerms:
        self.__check_perms()
    self.read(configFile)
    self._configDef = configDef
    if (not self._configDef):
        self._mySections = self.sections()
    self.__initialize_config_dict()
