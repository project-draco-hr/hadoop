def var_error(self, section, option, *addData):
    errorStrings = []
    if (not self._dict[section].has_key(option)):
        self._dict[section][option] = None
    errorStrings.append(("%s: invalid '%s' specified in section %s (--%s.%s): %s" % (errorPrefix, option, section, section, option, self._dict[section][option])))
    if addData:
        errorStrings.append(('%s: additional info: %s\n' % (errorPrefix, addData[0])))
    return errorStrings
