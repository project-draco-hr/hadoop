def get_args(self, exclude=None, section=None):
    'Retrieve a tuple of config arguments.'
    args = []
    if section:
        args = self.__get_args(section)
    else:
        for section in self._dict:
            if exclude:
                if (not (section in exclude)):
                    args.extend(self.__get_args(section))
            else:
                args.extend(self.__get_args(section))
    return tuple(args)
