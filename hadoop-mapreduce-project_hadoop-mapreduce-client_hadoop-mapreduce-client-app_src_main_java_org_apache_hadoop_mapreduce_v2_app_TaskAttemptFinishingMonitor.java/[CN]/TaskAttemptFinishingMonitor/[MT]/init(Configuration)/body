{
  super.init(conf);
  int expireIntvl=conf.getInt(MRJobConfig.TASK_EXIT_TIMEOUT,MRJobConfig.TASK_EXIT_TIMEOUT_DEFAULT);
  int checkIntvl=conf.getInt(MRJobConfig.TASK_EXIT_TIMEOUT_CHECK_INTERVAL_MS,MRJobConfig.TASK_EXIT_TIMEOUT_CHECK_INTERVAL_MS_DEFAULT);
  setExpireInterval(expireIntvl);
  setMonitorInterval(checkIntvl);
}
