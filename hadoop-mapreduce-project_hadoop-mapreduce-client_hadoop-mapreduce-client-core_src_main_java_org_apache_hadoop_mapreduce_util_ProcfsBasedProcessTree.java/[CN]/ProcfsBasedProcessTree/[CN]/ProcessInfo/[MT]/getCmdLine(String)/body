{
  String ret="N/A";
  if (pid == null) {
    return ret;
  }
  BufferedReader in=null;
  InputStreamReader fReader=null;
  try {
    fReader=new InputStreamReader(new FileInputStream(new File(new File(procfsDir,pid),PROCFS_CMDLINE_FILE)),Charsets.UTF_8);
  }
 catch (  FileNotFoundException f) {
    return ret;
  }
  in=new BufferedReader(fReader);
  try {
    ret=in.readLine();
    if (ret == null) {
      ret="N/A";
    }
 else {
      ret=ret.replace('\0',' ');
      if (ret.equals("")) {
        ret="N/A";
      }
    }
  }
 catch (  IOException io) {
    LOG.warn("Error reading the stream " + io);
    ret="N/A";
  }
 finally {
    try {
      fReader.close();
      try {
        in.close();
      }
 catch (      IOException i) {
        LOG.warn("Error closing the stream " + in);
      }
    }
 catch (    IOException i) {
      LOG.warn("Error closing the stream " + fReader);
    }
  }
  return ret;
}
