{
  if (skipWriter == null) {
    Path skipDir=SkipBadRecords.getSkipOutputPath(conf);
    Path skipFile=new Path(skipDir,getTaskID().toString());
    skipWriter=SequenceFile.createWriter(skipFile.getFileSystem(conf),conf,skipFile,keyClass,valClass,CompressionType.BLOCK,reporter);
  }
  skipWriter.append(key,value);
}
