{
  return new DeletionService(exec){
    @Override public void delete(    String user,    Path subDir,    Path... baseDirs){
      if (shouldDeleteWait) {
        try {
          Thread.sleep(10000);
          LOG.info("\n\nSleeping Pseudo delete : user - " + user + ", "+ "subDir - "+ subDir+ ", "+ "baseDirs - "+ Arrays.asList(baseDirs));
        }
 catch (        InterruptedException e) {
          e.printStackTrace();
        }
      }
 else {
        LOG.info("\n\nPseudo delete : user - " + user + ", "+ "subDir - "+ subDir+ ", "+ "baseDirs - "+ Arrays.asList(baseDirs));
      }
    }
  }
;
}
