{
  if (block == null || delHint == null) {
    throw new IllegalArgumentException(block == null ? "Block is null" : "delHint is null");
  }
  if (!block.getBlockPoolId().equals(getBlockPoolId())) {
    LOG.warn("BlockPool mismatch " + block.getBlockPoolId() + " vs. "+ getBlockPoolId());
    return;
  }
synchronized (receivedAndDeletedBlockList) {
    receivedAndDeletedBlockList.add(new ReceivedDeletedBlockInfo(block.getLocalBlock(),delHint));
    pendingReceivedRequests++;
    receivedAndDeletedBlockList.notifyAll();
  }
}
