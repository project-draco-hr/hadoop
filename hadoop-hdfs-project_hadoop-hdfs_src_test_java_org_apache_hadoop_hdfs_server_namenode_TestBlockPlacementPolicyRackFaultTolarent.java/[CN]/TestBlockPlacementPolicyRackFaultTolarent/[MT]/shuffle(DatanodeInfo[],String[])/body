{
  int length=locs.length;
  Object[][] pairs=new Object[length][];
  for (int i=0; i < length; i++) {
    pairs[i]=new Object[]{locs[i],storageIDs[i]};
  }
  DFSUtil.shuffle(pairs);
  for (int i=0; i < length; i++) {
    locs[i]=(DatanodeInfo)pairs[i][0];
    storageIDs[i]=(String)pairs[i][1];
  }
}
