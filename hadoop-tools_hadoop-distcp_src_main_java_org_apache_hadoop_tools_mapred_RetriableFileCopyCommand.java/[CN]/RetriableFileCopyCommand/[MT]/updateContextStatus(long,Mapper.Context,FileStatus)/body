{
  StringBuilder message=new StringBuilder(DistCpUtils.getFormatter().format(totalBytesRead * 100.0f / sourceFileStatus.getLen()));
  message.append("% ").append(description).append(" [").append(DistCpUtils.getStringDescriptionFor(totalBytesRead)).append('/').append(DistCpUtils.getStringDescriptionFor(sourceFileStatus.getLen())).append(']');
  context.setStatus(message.toString());
}
