{
  try {
    FileSystem fs=path.getFileSystem(conf);
    long bandwidthMB=conf.getInt(DistCpConstants.CONF_LABEL_BANDWIDTH_MB,DistCpConstants.DEFAULT_BANDWIDTH_MB);
    return new ThrottledInputStream(new BufferedInputStream(fs.open(path)),bandwidthMB * 1024 * 1024);
  }
 catch (  IOException e) {
    throw new CopyReadException(e);
  }
}
