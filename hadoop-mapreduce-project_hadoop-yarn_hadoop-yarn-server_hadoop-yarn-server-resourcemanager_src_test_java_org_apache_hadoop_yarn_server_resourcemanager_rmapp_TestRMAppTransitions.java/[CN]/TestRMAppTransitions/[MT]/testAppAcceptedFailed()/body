{
  LOG.info("--- START: testAppAcceptedFailed ---");
  RMApp application=testCreateAppAccepted();
  for (int i=1; i < maxRetries; i++) {
    RMAppEvent event=new RMAppFailedAttemptEvent(application.getApplicationId(),RMAppEventType.ATTEMPT_FAILED,"");
    application.handle(event);
    assertAppState(RMAppState.SUBMITTED,application);
    event=new RMAppEvent(application.getApplicationId(),RMAppEventType.APP_ACCEPTED);
    application.handle(event);
    assertAppState(RMAppState.ACCEPTED,application);
  }
  String message="Test fail";
  RMAppEvent event=new RMAppFailedAttemptEvent(application.getApplicationId(),RMAppEventType.ATTEMPT_FAILED,message);
  application.handle(event);
  assertFailed(application,".*" + message + ".*Failing the application.*");
}
