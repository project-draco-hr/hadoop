{
  String homeDir=HOME_DIR_TL.get();
  if (homeDir == null) {
    String sysProp=name + HOME_DIR;
    homeDir=System.getProperty(sysProp);
    if (homeDir == null) {
      throw new IllegalArgumentException(MessageFormat.format("System property [{0}] not defined",sysProp));
    }
  }
  return homeDir;
}
