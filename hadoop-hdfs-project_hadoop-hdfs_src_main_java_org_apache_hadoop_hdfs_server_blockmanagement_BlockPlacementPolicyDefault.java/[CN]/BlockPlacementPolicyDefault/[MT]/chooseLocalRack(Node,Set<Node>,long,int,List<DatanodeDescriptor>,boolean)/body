{
  if (localMachine == null) {
    return chooseRandom(NodeBase.ROOT,excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes);
  }
  try {
    return chooseRandom(localMachine.getNetworkLocation(),excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes);
  }
 catch (  NotEnoughReplicasException e1) {
    DatanodeDescriptor newLocal=null;
    for (    DatanodeDescriptor nextNode : results) {
      if (nextNode != localMachine) {
        newLocal=nextNode;
        break;
      }
    }
    if (newLocal != null) {
      try {
        return chooseRandom(newLocal.getNetworkLocation(),excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes);
      }
 catch (      NotEnoughReplicasException e2) {
        return chooseRandom(NodeBase.ROOT,excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes);
      }
    }
 else {
      return chooseRandom(NodeBase.ROOT,excludedNodes,blocksize,maxNodesPerRack,results,avoidStaleNodes);
    }
  }
}
