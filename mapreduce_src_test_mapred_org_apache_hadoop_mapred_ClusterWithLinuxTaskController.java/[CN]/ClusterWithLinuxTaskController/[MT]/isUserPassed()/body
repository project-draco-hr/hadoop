{
  String ugi=System.getProperty(TASKCONTROLLER_UGI);
  if (ugi != null && !(ugi.equals("${" + TASKCONTROLLER_UGI + "}")) && !ugi.isEmpty()) {
    if (ugi.indexOf(",") > 1) {
      return true;
    }
    LOG.info("Invalid taskcontroller-ugi : " + ugi);
    return false;
  }
  LOG.info("Invalid taskcontroller-ugi : " + ugi);
  return false;
}
