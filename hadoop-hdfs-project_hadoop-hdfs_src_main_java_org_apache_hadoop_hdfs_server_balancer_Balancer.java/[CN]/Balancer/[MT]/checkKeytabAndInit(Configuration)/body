{
  if (conf.getBoolean(DFSConfigKeys.DFS_BALANCER_KEYTAB_ENABLED_KEY,DFSConfigKeys.DFS_BALANCER_KEYTAB_ENABLED_DEFAULT)) {
    LOG.info("Keytab is configured, will login using keytab.");
    UserGroupInformation.setConfiguration(conf);
    String addr=conf.get(DFSConfigKeys.DFS_BALANCER_ADDRESS_KEY,DFSConfigKeys.DFS_BALANCER_ADDRESS_DEFAULT);
    InetSocketAddress socAddr=NetUtils.createSocketAddr(addr,0,DFSConfigKeys.DFS_BALANCER_ADDRESS_KEY);
    SecurityUtil.login(conf,DFSConfigKeys.DFS_BALANCER_KEYTAB_FILE_KEY,DFSConfigKeys.DFS_BALANCER_KERBEROS_PRINCIPAL_KEY,socAddr.getHostName());
  }
}
