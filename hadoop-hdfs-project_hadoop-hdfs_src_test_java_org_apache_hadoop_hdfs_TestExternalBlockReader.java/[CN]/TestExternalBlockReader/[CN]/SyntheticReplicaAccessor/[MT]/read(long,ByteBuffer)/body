{
  if (pos > Integer.MAX_VALUE) {
    return 0;
  }
 else   if (pos < 0) {
    addError("Attempted to read from a location that was less " + "than 0 at " + pos);
    return 0;
  }
  int i=0, nread=0;
  for (int ipos=(int)pos; ipos < contents.length; ipos++) {
    try {
      buf.put(contents[ipos]);
    }
 catch (    BufferOverflowException bos) {
      break;
    }
    nread++;
    totalRead++;
  }
  return nread;
}
