{
  Job job=Job.getInstance();
  Map<String,String> environment=new HashMap<String,String>();
  MRApps.setClasspath(environment,job.getConfiguration());
  assertEquals("$HADOOP_CONF_DIR:" + "$HADOOP_COMMON_HOME/share/hadoop/common/*:" + "$HADOOP_COMMON_HOME/share/hadoop/common/lib/*:"+ "$HADOOP_HDFS_HOME/share/hadoop/hdfs/*:"+ "$HADOOP_HDFS_HOME/share/hadoop/hdfs/lib/*:"+ "$YARN_HOME/share/hadoop/mapreduce/*:"+ "$YARN_HOME/share/hadoop/mapreduce/lib/*:"+ "job.jar:$PWD/*",environment.get("CLASSPATH"));
}
