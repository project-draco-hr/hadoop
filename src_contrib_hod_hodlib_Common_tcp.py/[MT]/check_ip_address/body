def check_ip_address(address):
    valid = True
    pieces = string.split(address, '.')
    if (len(pieces) != 4):
        valid = False
    else:
        if ((int(pieces[0]) < 1) or (int(pieces[0]) > 254)):
            valid = False
        for i in range(1, 4):
            if ((int(pieces[i]) < 0) or (int(pieces[i]) > 255)):
                valid = False
    return valid
