def verify(self):
    'Verifies that a given IP address/host and port are valid. This\n           method will not attempt to open a socket to the specified address.\n        '
    isValidAddress = False
    if reMayBeIp.match(self.host):
        if check_ip_address(self.host):
            if reValidPort.match(str(self.port)):
                isValidAddress = True
    elif reValidPort.match(str(self.port)):
        isValidAddress = True
    return isValidAddress
