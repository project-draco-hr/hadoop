def local_fqdn():
    "Return a system's true FQDN rather than any aliases, which are\n       occasionally returned by socket.gethostname."
    fqdn = None
    me = os.uname()[1]
    nameInfo = socket.gethostbyname_ex(me)
    nameInfo[1].append(nameInfo[0])
    for name in nameInfo[1]:
        if (name.count('.') and name.startswith(me)):
            fqdn = name
    if (fqdn == None):
        fqdn = me
    return fqdn
