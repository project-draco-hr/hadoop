{
  for (; ; ) {
synchronized (queue) {
      final T polled=queue.poll(i);
      if (polled != null) {
        return polled;
      }
      if (isReady2Populate()) {
        populate();
        return queue.poll(i);
      }
    }
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException ie) {
      throw DFSUtil.toInterruptedIOException("Sleep interrupted during poll",ie);
    }
  }
}
