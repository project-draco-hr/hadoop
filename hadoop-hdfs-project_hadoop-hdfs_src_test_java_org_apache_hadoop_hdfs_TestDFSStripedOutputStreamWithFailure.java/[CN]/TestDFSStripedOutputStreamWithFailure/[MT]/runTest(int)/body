{
  final HdfsConfiguration conf=newHdfsConfiguration();
  for (int dn=0; dn < 9; dn++) {
    try {
      setup(conf);
      runTest(length,dn,false,conf);
    }
 catch (    Exception e) {
      final String err="failed, dn=" + dn + ", length="+ length+ StringUtils.stringifyException(e);
      LOG.error(err);
      Assert.fail(err);
    }
 finally {
      tearDown();
    }
  }
}
