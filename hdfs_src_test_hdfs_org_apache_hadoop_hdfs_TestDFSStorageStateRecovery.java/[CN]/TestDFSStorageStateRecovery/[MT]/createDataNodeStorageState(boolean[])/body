{
  String[] baseDirs=conf.getStrings(DFSConfigKeys.DFS_DATANODE_DATA_DIR_KEY);
  UpgradeUtilities.createEmptyDirs(baseDirs);
  if (state[0])   UpgradeUtilities.createDataNodeStorageDirs(baseDirs,"current");
  if (state[1])   UpgradeUtilities.createDataNodeStorageDirs(baseDirs,"previous");
  if (state[2])   UpgradeUtilities.createDataNodeStorageDirs(baseDirs,"previous.tmp");
  if (state[3])   UpgradeUtilities.createDataNodeStorageDirs(baseDirs,"removed.tmp");
  if (state[4])   UpgradeUtilities.createDataNodeStorageDirs(baseDirs,"lastcheckpoint.tmp");
  return baseDirs;
}
