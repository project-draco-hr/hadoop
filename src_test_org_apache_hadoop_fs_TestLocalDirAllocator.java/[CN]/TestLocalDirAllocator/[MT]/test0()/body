{
  if (isWindows)   return;
  try {
    conf.set(CONTEXT,BUFFER_DIR[0] + "," + BUFFER_DIR[1]);
    assertTrue(localFs.mkdirs(BUFFER_PATH[1]));
    BUFFER_ROOT.setReadOnly();
    validateTempDirCreation(1);
    validateTempDirCreation(1);
  }
  finally {
    Shell.execCommand(new String[]{"chmod","u+w",BUFFER_DIR_ROOT});
    rmBufferDirs();
  }
}
