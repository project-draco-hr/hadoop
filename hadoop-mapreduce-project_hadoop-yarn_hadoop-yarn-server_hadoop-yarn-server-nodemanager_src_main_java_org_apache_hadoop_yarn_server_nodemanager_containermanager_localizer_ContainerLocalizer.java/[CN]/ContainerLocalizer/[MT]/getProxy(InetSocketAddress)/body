{
  Configuration localizerConf=new Configuration();
  YarnRPC rpc=YarnRPC.create(localizerConf);
  if (UserGroupInformation.isSecurityEnabled()) {
    localizerConf.setClass(YarnConfiguration.YARN_SECURITY_INFO,LocalizerSecurityInfo.class,SecurityInfo.class);
  }
  return (LocalizationProtocol)rpc.getProxy(LocalizationProtocol.class,nmAddr,localizerConf);
}
