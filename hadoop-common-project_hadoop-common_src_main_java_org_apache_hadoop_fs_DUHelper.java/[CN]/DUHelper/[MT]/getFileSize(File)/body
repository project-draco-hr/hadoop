{
  folderCount++;
  long foldersize=0;
  if (folder.isFile())   return folder.length();
  File[] filelist=folder.listFiles();
  if (filelist == null) {
    return 0;
  }
  for (int i=0; i < filelist.length; i++) {
    if (filelist[i].isDirectory()) {
      foldersize+=getFileSize(filelist[i]);
    }
 else {
      fileCount++;
      foldersize+=filelist[i].length();
    }
  }
  return foldersize;
}
