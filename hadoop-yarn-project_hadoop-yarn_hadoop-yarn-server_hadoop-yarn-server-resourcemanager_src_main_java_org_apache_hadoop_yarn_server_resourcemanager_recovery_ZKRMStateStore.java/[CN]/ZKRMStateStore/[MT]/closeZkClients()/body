{
  if (zkClient != null) {
    try {
      zkClient.close();
    }
 catch (    InterruptedException e) {
      throw new IOException("Interrupted while closing ZK",e);
    }
    zkClient=null;
  }
  if (oldZkClient != null) {
    try {
      oldZkClient.close();
    }
 catch (    InterruptedException e) {
      throw new IOException("Interrupted while closing old ZK",e);
    }
    oldZkClient=null;
  }
}
