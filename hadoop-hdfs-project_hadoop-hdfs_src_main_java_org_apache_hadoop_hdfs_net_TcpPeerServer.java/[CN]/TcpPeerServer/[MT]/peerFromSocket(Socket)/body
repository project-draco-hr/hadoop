{
  Peer peer=null;
  boolean success=false;
  try {
    socket.setTcpNoDelay(true);
    SocketChannel channel=socket.getChannel();
    if (channel == null) {
      peer=new BasicInetPeer(socket);
    }
 else {
      peer=new NioInetPeer(socket);
    }
    success=true;
    return peer;
  }
  finally {
    if (!success) {
      if (peer != null)       peer.close();
      socket.close();
    }
  }
}
