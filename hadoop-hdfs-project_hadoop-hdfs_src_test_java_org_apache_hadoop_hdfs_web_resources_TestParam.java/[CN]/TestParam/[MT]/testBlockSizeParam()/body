{
  final BlockSizeParam p=new BlockSizeParam(BlockSizeParam.DEFAULT);
  Assert.assertEquals(null,p.getValue());
  Assert.assertEquals(conf.getLong(DFSConfigKeys.DFS_BLOCK_SIZE_KEY,DFSConfigKeys.DFS_BLOCK_SIZE_DEFAULT),p.getValue(conf));
  new BlockSizeParam(1L);
  try {
    new BlockSizeParam(0L);
    Assert.fail();
  }
 catch (  IllegalArgumentException e) {
    LOG.info("EXPECTED: " + e);
  }
}
