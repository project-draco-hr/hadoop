{
  if (fs != null) {
    while (!fs.exists(signal)) {
      try {
        reporter.progress();
synchronized (this) {
          this.wait(1000);
        }
      }
 catch (      InterruptedException ie) {
        System.out.println("Interrupted while the map was waiting for the" + " signal.");
        break;
      }
    }
  }
 else {
    throw new IOException("Could not get the DFS!!");
  }
}
