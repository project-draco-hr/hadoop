{
  try {
    writeLock.lock();
    if (increase) {
      appSchedulingInfo.increaseContainer(changeRequest);
    }
 else {
      appSchedulingInfo.decreaseContainer(changeRequest);
    }
    RMContainer changedRMContainer=changeRequest.getRMContainer();
    changedRMContainer.handle(new RMContainerChangeResourceEvent(changeRequest.getContainerId(),changeRequest.getTargetCapacity(),increase));
    if (increase) {
      newlyDecreasedContainers.remove(changeRequest.getContainerId());
      newlyIncreasedContainers.put(changeRequest.getContainerId(),changedRMContainer);
    }
 else {
      newlyIncreasedContainers.remove(changeRequest.getContainerId());
      newlyDecreasedContainers.put(changeRequest.getContainerId(),changedRMContainer);
    }
  }
  finally {
    writeLock.unlock();
  }
}
