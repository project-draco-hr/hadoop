{
  Assume.assumeTrue(NativeCodeLoader.isNativeCodeLoaded());
  Assume.assumeTrue(NativeRuntime.isNativeLibraryLoaded());
  final ScenarioConfiguration conf=new ScenarioConfiguration();
  final FileSystem fs=FileSystem.get(conf);
  final Path path=new Path(CompressMapper.inputFile);
  fs.delete(path);
  if (!fs.exists(path)) {
    new TestInputFile(ScenarioConfiguration.getNormalConfiguration().getInt(TestConstants.NATIVETASK_COMPRESS_FILESIZE,100000),Text.class.getName(),Text.class.getName(),conf).createSequenceTestFile(CompressMapper.inputFile);
  }
  fs.close();
}
