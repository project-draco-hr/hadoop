{
  super.initTasks();
  final int numSlotsPerTask=2;
  maps=new TaskInProgress[1];
  reduces=new TaskInProgress[1];
  maps[0]=new FakeTaskInProgress(getJobID(),"test",JobSplit.EMPTY_TASK_SPLIT,jobtracker,getJobConf(),this,0,numSlotsPerTask);
  TaskAttemptID attemptId=new TaskAttemptID(maps[0].getTIPId(),0);
  mapCleanupTasks.add(attemptId);
  TaskStatus stat=new MapTaskStatus(attemptId,0.01f,2,TaskStatus.State.FAILED_UNCLEAN,"","",trackers[0],TaskStatus.Phase.MAP,new Counters());
  maps[0].updateStatus(stat);
  reduces[0]=new FakeTaskInProgress(getJobID(),"test",1,0,jobtracker,getJobConf(),this,numSlotsPerTask);
  attemptId=new TaskAttemptID(reduces[0].getTIPId(),0);
  reduceCleanupTasks.add(attemptId);
  stat=new ReduceTaskStatus(attemptId,0.01f,2,TaskStatus.State.FAILED_UNCLEAN,"","",trackers[0],TaskStatus.Phase.REDUCE,new Counters());
  reduces[0].updateStatus(stat);
}
