{
  setStorageInfo(nsInfo);
  LOG.info("Formatting journal storage directory " + sd + " with nsid: "+ getNamespaceID());
  unlockAll();
  sd.clearDirectory();
  writeProperties(sd);
  if (!getPaxosDir().mkdirs()) {
    throw new IOException("Could not create paxos dir: " + getPaxosDir());
  }
  analyzeStorage();
}
