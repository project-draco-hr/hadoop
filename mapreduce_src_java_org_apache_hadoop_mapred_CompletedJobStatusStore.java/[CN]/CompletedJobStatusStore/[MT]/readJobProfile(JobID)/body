{
  JobProfile jobProfile=null;
  if (active) {
    try {
      FSDataInputStream dataIn=getJobInfoFile(jobId);
      if (dataIn != null) {
        readJobStatus(dataIn);
        jobProfile=readJobProfile(dataIn);
        dataIn.close();
      }
    }
 catch (    IOException ex) {
      LOG.warn("Could not read [" + jobId + "] job profile : "+ ex,ex);
    }
  }
  return jobProfile;
}
