{
  if (!mkdirsWithExistsCheck(dir))   throw new DiskErrorException("Can not create directory: " + dir.toString());
  if (!dir.isDirectory())   throw new DiskErrorException("Not a directory: " + dir.toString());
  if (!dir.canRead())   throw new DiskErrorException("Directory is not readable: " + dir.toString());
  if (!dir.canWrite())   throw new DiskErrorException("Directory is not writable: " + dir.toString());
  if (!dir.canExecute())   throw new DiskErrorException("Directory is not executable: " + dir.toString());
}
