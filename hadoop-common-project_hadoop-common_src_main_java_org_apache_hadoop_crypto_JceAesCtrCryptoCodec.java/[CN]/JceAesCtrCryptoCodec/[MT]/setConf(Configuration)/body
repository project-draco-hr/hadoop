{
  this.conf=conf;
  provider=conf.get(HADOOP_SECURITY_CRYPTO_JCE_PROVIDER_KEY);
  final String secureRandomAlg=conf.get(HADOOP_SECURITY_JAVA_SECURE_RANDOM_ALGORITHM_KEY,HADOOP_SECURITY_JAVA_SECURE_RANDOM_ALGORITHM_DEFAULT);
  try {
    random=(provider != null) ? SecureRandom.getInstance(secureRandomAlg,provider) : SecureRandom.getInstance(secureRandomAlg);
  }
 catch (  GeneralSecurityException e) {
    LOG.warn(e.getMessage());
    random=new SecureRandom();
  }
}
