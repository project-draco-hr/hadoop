{
  setWaitForRatio(2);
  long start=Time.now();
  long waited=waitFor(200,new Predicate(){
    public boolean evaluate() throws Exception {
      return false;
    }
  }
);
  long end=Time.now();
  Assert.assertEquals(waited,-1);
  Assert.assertEquals(end - start,200 * getWaitForRatio(),50 * getWaitForRatio());
}
