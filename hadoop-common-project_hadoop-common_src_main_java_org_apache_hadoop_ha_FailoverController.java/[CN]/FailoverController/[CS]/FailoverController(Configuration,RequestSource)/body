{
  this.conf=conf;
  this.gracefulFenceConf=new Configuration(conf);
  this.requestSource=source;
  this.gracefulFenceTimeout=getGracefulFenceTimeout(conf);
  this.rpcTimeoutToNewActive=getRpcTimeoutToNewActive(conf);
  int gracefulFenceConnectRetries=conf.getInt(CommonConfigurationKeys.HA_FC_GRACEFUL_FENCE_CONNECTION_RETRIES,CommonConfigurationKeys.HA_FC_GRACEFUL_FENCE_CONNECTION_RETRIES_DEFAULT);
  gracefulFenceConf.setInt(CommonConfigurationKeys.IPC_CLIENT_CONNECT_MAX_RETRIES_KEY,gracefulFenceConnectRetries);
  gracefulFenceConf.setInt(CommonConfigurationKeys.IPC_CLIENT_CONNECT_MAX_RETRIES_ON_SOCKET_TIMEOUTS_KEY,gracefulFenceConnectRetries);
}
