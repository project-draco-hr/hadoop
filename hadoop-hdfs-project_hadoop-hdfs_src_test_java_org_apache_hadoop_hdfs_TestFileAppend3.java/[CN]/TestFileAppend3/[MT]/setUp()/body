{
  AppendTestUtil.LOG.info("setUp()");
  conf=new HdfsConfiguration();
  conf.setInt(DFSConfigKeys.DFS_BYTES_PER_CHECKSUM_KEY,512);
  buffersize=conf.getInt(CommonConfigurationKeys.IO_FILE_BUFFER_SIZE_KEY,4096);
