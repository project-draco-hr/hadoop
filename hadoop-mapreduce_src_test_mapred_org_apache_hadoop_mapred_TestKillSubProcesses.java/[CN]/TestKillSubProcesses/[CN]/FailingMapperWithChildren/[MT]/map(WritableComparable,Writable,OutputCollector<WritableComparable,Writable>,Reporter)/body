{
  while (!fs.exists(signalFile)) {
    try {
      reporter.progress();
synchronized (this) {
        this.wait(1000);
      }
    }
 catch (    InterruptedException ie) {
      System.out.println("Interrupted while the map was waiting for " + " the signal.");
      break;
    }
  }
  throw new RuntimeException("failing map");
}
