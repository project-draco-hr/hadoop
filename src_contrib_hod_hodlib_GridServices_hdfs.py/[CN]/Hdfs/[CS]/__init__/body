def __init__(self, serviceDesc, nodePool, required_node, version, format=True, upgrade=False, workers_per_ring=1):
    MasterSlave.__init__(self, serviceDesc, nodePool, required_node)
    self.masterNode = None
    self.masterAddr = None
    self.runAdminCommands = True
    self.infoAddr = None
    self._isLost = False
    self.format = format
    self.upgrade = upgrade
    self.workers = []
    self.version = version
    self.workers_per_ring = workers_per_ring
