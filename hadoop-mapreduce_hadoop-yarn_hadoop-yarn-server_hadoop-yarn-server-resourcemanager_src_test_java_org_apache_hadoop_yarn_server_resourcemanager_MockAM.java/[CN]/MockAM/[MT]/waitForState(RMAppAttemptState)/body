{
  RMApp app=context.getRMApps().get(attemptId.getApplicationId());
  RMAppAttempt attempt=app.getRMAppAttempt(attemptId);
  int timeoutSecs=0;
  while (!finalState.equals(attempt.getAppAttemptState()) && timeoutSecs++ < 20) {
    System.out.println("AppAttempt State is : " + attempt.getAppAttemptState() + " Waiting for state : "+ finalState);
    Thread.sleep(500);
  }
  System.out.println("AppAttempt State is : " + attempt.getAppAttemptState());
  Assert.assertEquals("AppAttempt state is not correct (timedout)",finalState,attempt.getAppAttemptState());
}
