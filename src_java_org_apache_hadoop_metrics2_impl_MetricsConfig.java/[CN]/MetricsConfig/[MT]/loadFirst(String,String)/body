{
  for (  String fname : fileNames) {
    try {
      Configuration cf=new PropertiesConfiguration(fname).interpolatedConfiguration();
      LOG.info("loaded properties from " + fname);
      LOG.debug(toString(cf));
      MetricsConfig mc=new MetricsConfig(cf,prefix);
      LOG.debug(mc);
      return mc;
    }
 catch (    ConfigurationException e) {
      if (e.getMessage().startsWith("Cannot locate configuration")) {
        continue;
      }
      throw new MetricsConfigException(e);
    }
  }
  throw new MetricsConfigException("Cannot locate configuration: tried " + Joiner.on(",").join(fileNames));
}
