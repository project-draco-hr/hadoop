def __init__(self, uri, transport=None, encoding=None, verbose=0, allow_none=0, installSignalHandlers=1, retryRequests=True, timeOut=15):
    xmlrpclib.ServerProxy.__init__(self, uri, transport, encoding, verbose, allow_none)
    self.__retryRequests = retryRequests
    self.__timeOut = timeOut
    if (installSignalHandlers != 0):
        self.__set_alarm()
