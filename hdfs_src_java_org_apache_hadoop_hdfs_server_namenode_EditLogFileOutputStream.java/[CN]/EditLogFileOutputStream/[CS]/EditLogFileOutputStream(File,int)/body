{
  super();
  file=name;
  initBufferSize=size;
  bufCurrent=new DataOutputBuffer(size);
  bufReady=new DataOutputBuffer(size);
  writer=new FSEditLogOp.Writer(bufCurrent);
  RandomAccessFile rp=new RandomAccessFile(name,"rw");
  fp=new FileOutputStream(rp.getFD());
  fc=rp.getChannel();
  fc.position(fc.size());
}
