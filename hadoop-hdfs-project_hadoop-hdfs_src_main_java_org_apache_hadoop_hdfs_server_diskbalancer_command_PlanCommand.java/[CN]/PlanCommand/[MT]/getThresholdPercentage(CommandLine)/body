{
  Double value=0.0;
  if (cmd.hasOption(DiskBalancer.THRESHOLD)) {
    value=Double.parseDouble(cmd.getOptionValue(DiskBalancer.THRESHOLD));
  }
  if ((value <= 0.0) || (value > 100.0)) {
    value=getConf().getDouble(DFSConfigKeys.DFS_DISK_BALANCER_MAX_DISK_THRUPUT,DFSConfigKeys.DFS_DISK_BALANCER_MAX_DISK_THRUPUT_DEFAULT);
  }
  return value;
}
