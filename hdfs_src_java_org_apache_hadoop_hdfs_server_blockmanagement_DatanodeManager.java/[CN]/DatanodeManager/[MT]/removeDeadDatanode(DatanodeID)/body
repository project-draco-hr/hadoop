{
synchronized (datanodeMap) {
    DatanodeDescriptor d;
    try {
      d=getDatanode(nodeID);
    }
 catch (    IOException e) {
      d=null;
    }
    if (d != null && isDatanodeDead(d)) {
      NameNode.stateChangeLog.info("BLOCK* removeDeadDatanode: lost heartbeat from " + d.getName());
      removeDatanode(d);
    }
  }
}
