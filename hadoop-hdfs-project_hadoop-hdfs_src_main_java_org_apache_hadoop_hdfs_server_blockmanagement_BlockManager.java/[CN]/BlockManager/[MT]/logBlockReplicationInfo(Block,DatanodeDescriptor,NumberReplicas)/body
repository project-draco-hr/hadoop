{
  int curReplicas=num.liveReplicas();
  int curExpectedReplicas=getReplication(block);
  BlockCollection bc=blocksMap.getBlockCollection(block);
  StringBuilder nodeList=new StringBuilder();
  for (  DatanodeStorageInfo storage : blocksMap.getStorages(block)) {
    final DatanodeDescriptor node=storage.getDatanodeDescriptor();
    nodeList.append(node);
    nodeList.append(" ");
  }
  LOG.info("Block: " + block + ", Expected Replicas: "+ curExpectedReplicas+ ", live replicas: "+ curReplicas+ ", corrupt replicas: "+ num.corruptReplicas()+ ", decommissioned replicas: "+ num.decommissionedReplicas()+ ", excess replicas: "+ num.excessReplicas()+ ", Is Open File: "+ bc.isUnderConstruction()+ ", Datanodes having this block: "+ nodeList+ ", Current Datanode: "+ srcNode+ ", Is current datanode decommissioning: "+ srcNode.isDecommissionInProgress());
}
