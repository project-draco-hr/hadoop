{
  blockLog.info("BLOCK* invalidateBlock: " + b + " on "+ dn);
  DatanodeDescriptor node=getDatanodeManager().getDatanode(dn);
  if (node == null) {
    throw new IOException("Cannot invalidate " + b + " because datanode "+ dn+ " does not exist.");
  }
  NumberReplicas nr=countNodes(b.stored);
  if (nr.replicasOnStaleNodes() > 0) {
    blockLog.info("BLOCK* invalidateBlocks: postponing " + "invalidation of " + b + " on "+ dn+ " because "+ nr.replicasOnStaleNodes()+ " replica(s) are located on nodes "+ "with potentially out-of-date block reports");
    postponeBlock(b.corrupted);
    return false;
  }
 else   if (nr.liveReplicas() >= 1) {
    addToInvalidates(b.corrupted,dn);
    removeStoredBlock(b.stored,node);
    if (blockLog.isDebugEnabled()) {
      blockLog.debug("BLOCK* invalidateBlocks: " + b + " on "+ dn+ " listed for deletion.");
    }
    return true;
  }
 else {
    blockLog.info("BLOCK* invalidateBlocks: " + b + " on "+ dn+ " is the only copy and was not deleted");
    return false;
  }
}
