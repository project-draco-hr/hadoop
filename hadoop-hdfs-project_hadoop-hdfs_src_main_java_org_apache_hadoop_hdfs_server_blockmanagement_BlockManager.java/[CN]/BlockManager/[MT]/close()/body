{
  try {
    if (replicationThread != null) {
      replicationThread.interrupt();
      replicationThread.join(3000);
    }
  }
 catch (  InterruptedException ie) {
  }
 finally {
    if (pendingReplications != null)     pendingReplications.stop();
    blocksMap.close();
    datanodeManager.close();
  }
}
