{
  if (blkIndex < 0)   return null;
  BlockInfo curBlock=fileINode.getBlocks()[blkIndex];
  if (curBlock.isComplete())   return curBlock;
  BlockInfoUnderConstruction ucBlock=(BlockInfoUnderConstruction)curBlock;
  int numNodes=ucBlock.numNodes();
  if (!force && numNodes < minReplication)   throw new IOException("Cannot complete block: " + "block does not satisfy minimal replication requirement.");
  BlockInfo completeBlock=ucBlock.convertToCompleteBlock();
  fileINode.setBlock(blkIndex,completeBlock);
  namesystem.adjustSafeModeBlockTotals(0,1);
  namesystem.incrementSafeBlockCount(Math.min(numNodes,minReplication));
  return blocksMap.replaceBlock(completeBlock);
}
