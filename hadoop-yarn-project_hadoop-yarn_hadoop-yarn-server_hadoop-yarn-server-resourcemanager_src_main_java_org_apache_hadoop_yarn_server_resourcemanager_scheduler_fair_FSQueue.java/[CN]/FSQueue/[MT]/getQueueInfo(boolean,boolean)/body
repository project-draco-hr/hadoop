{
  QueueInfo queueInfo=recordFactory.newRecordInstance(QueueInfo.class);
  queueInfo.setQueueName(getQueueName());
  queueInfo.setCapacity((float)getFairShare().getMemory() / scheduler.getClusterCapacity().getMemory());
  queueInfo.setCapacity((float)getResourceUsage().getMemory() / scheduler.getClusterCapacity().getMemory());
  ArrayList<QueueInfo> childQueueInfos=new ArrayList<QueueInfo>();
  if (includeChildQueues) {
    Collection<FSQueue> childQueues=getChildQueues();
    for (    FSQueue child : childQueues) {
      childQueueInfos.add(child.getQueueInfo(recursive,recursive));
    }
  }
  queueInfo.setChildQueues(childQueueInfos);
  queueInfo.setQueueState(QueueState.RUNNING);
  return queueInfo;
}
