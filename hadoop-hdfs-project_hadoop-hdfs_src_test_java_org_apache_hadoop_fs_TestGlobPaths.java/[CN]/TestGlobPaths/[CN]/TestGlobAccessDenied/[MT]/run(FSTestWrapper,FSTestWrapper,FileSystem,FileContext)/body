{
  wrap.mkdir(new Path("/nopermission/val"),new FsPermission((short)0777),true);
  wrap.mkdir(new Path("/norestrictions/val"),new FsPermission((short)0777),true);
  wrap.setPermission(new Path("/nopermission"),new FsPermission((short)0));
  try {
    unprivilegedWrap.globStatus(new Path("/no*/*"),new AcceptAllPathFilter());
    Assert.fail("expected to get an AccessControlException when " + "globbing through a directory we don't have permissions " + "to list.");
  }
 catch (  AccessControlException ioe) {
  }
  Assert.assertEquals("/norestrictions/val",TestPath.mergeStatuses(unprivilegedWrap.globStatus(new Path("/norestrictions/*"),new AcceptAllPathFilter())));
}
