{
  checkOpen();
  TraceScope scope=newPathTraceScope("getErasureCodingPolicy",src);
  try {
    return namenode.getErasureCodingPolicy(src);
  }
 catch (  RemoteException re) {
    throw re.unwrapRemoteException(FileNotFoundException.class,AccessControlException.class,UnresolvedPathException.class);
  }
 finally {
    scope.close();
  }
}
