{
  int numErased=getNumErasedBlocks(inputBlocks);
  if (numErased == 0) {
    return new int[0];
  }
  int[] erasedIndexes=new int[numErased];
  int i=0, j=0;
  for (; i < inputBlocks.length && j < erasedIndexes.length; i++) {
    if (inputBlocks[i].isErased()) {
      erasedIndexes[j++]=i;
    }
  }
  return erasedIndexes;
}
