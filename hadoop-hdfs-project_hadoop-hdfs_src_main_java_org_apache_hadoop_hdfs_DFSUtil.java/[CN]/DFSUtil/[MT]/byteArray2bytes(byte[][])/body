{
  if (pathComponents.length == 0) {
    return EMPTY_BYTES;
  }
 else   if (pathComponents.length == 1 && (pathComponents[0] == null || pathComponents[0].length == 0)) {
    return new byte[]{(byte)Path.SEPARATOR_CHAR};
  }
  int length=0;
  for (int i=0; i < pathComponents.length; i++) {
    length+=pathComponents[i].length;
    if (i < pathComponents.length - 1) {
      length++;
    }
  }
  byte[] path=new byte[length];
  int index=0;
  for (int i=0; i < pathComponents.length; i++) {
    System.arraycopy(pathComponents[i],0,path,index,pathComponents[i].length);
    index+=pathComponents[i].length;
    if (i < pathComponents.length - 1) {
      path[index]=(byte)Path.SEPARATOR_CHAR;
      index++;
    }
  }
  return path;
}
