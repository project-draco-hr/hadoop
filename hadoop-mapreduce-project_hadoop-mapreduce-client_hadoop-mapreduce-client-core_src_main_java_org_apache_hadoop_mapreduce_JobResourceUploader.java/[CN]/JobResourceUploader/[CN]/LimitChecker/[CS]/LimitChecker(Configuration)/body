{
  this.maxNumOfResources=conf.getInt(MRJobConfig.MAX_RESOURCES,MRJobConfig.MAX_RESOURCES_DEFAULT);
  this.maxSizeMB=conf.getLong(MRJobConfig.MAX_RESOURCES_MB,MRJobConfig.MAX_RESOURCES_MB_DEFAULT);
  this.maxSizeOfResourceMB=conf.getLong(MRJobConfig.MAX_SINGLE_RESOURCE_MB,MRJobConfig.MAX_SINGLE_RESOURCE_MB_DEFAULT);
  this.totalConfigSizeBytes=maxSizeMB * 1024 * 1024;
  this.totalConfigSizeOfResourceBytes=maxSizeOfResourceMB * 1024 * 1024;
}
