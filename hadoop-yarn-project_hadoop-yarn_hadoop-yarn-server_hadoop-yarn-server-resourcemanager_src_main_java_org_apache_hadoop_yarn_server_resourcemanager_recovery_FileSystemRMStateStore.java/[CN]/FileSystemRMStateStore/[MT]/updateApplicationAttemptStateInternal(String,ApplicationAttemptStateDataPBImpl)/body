{
  ApplicationAttemptId appAttemptId=ConverterUtils.toApplicationAttemptId(attemptId);
  Path appDirPath=getAppDir(rmAppRoot,appAttemptId.getApplicationId().toString());
  Path nodeCreatePath=getNodePath(appDirPath,attemptId);
  LOG.info("Updating info for attempt: " + attemptId + " at: "+ nodeCreatePath);
  byte[] attemptStateData=attemptStateDataPB.getProto().toByteArray();
  try {
    updateFile(nodeCreatePath,attemptStateData);
  }
 catch (  Exception e) {
    LOG.info("Error updating info for attempt: " + attemptId,e);
    throw e;
  }
}
