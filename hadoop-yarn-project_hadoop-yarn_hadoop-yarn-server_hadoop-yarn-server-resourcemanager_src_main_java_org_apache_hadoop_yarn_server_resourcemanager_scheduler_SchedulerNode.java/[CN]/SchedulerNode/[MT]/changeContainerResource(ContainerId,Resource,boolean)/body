{
  if (increase) {
    deductUnallocatedResource(deltaResource);
  }
 else {
    addUnallocatedResource(deltaResource);
  }
  LOG.info((increase ? "Increased" : "Decreased") + " container " + containerId+ " of capacity "+ deltaResource+ " on host "+ rmNode.getNodeAddress()+ ", which has "+ numContainers+ " containers, "+ getAllocatedResource()+ " used and "+ getUnallocatedResource()+ " available after allocation");
}
