{
  if (increase) {
    deductAvailableResource(deltaResource);
  }
 else {
    addAvailableResource(deltaResource);
  }
  LOG.info((increase ? "Increased" : "Decreased") + " container " + containerId+ " of capacity "+ deltaResource+ " on host "+ rmNode.getNodeAddress()+ ", which has "+ numContainers+ " containers, "+ getUsedResource()+ " used and "+ getAvailableResource()+ " available after allocation");
}
