{
  for (; namesystem.isRunning(); ) {
    namesystem.writeLock();
    try {
      check();
    }
  finally {
      namesystem.writeUnlock();
    }
    try {
      Thread.sleep(recheckInterval);
    }
 catch (    InterruptedException ie) {
      LOG.warn(this.getClass().getSimpleName() + " interrupted: " + ie);
    }
  }
}
