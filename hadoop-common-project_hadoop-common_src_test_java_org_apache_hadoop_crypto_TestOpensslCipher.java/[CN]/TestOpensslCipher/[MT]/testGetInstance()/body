{
  if (!OpensslCipher.isNativeCodeLoaded()) {
    return;
  }
  OpensslCipher cipher=OpensslCipher.getInstance(OpensslCipher.AES_CTR,OpensslCipher.PADDING_NOPADDING);
  Assert.assertTrue(cipher != null);
  try {
    cipher=OpensslCipher.getInstance(OpensslCipher.AES_CTR + 100,OpensslCipher.PADDING_NOPADDING);
    Assert.fail("Should specify correct algorithm.");
  }
 catch (  NoSuchAlgorithmException e) {
  }
  try {
    cipher=OpensslCipher.getInstance(OpensslCipher.AES_CTR,OpensslCipher.PADDING_NOPADDING + 100);
    Assert.fail("Should specify correct padding.");
  }
 catch (  NoSuchPaddingException e) {
  }
}
