{
  MockRM rm=null;
  try {
    rm=new MockRM(conf);
    rm.start();
    Thread.sleep(10000);
    UserGroupInformation proxyUser=UserGroupInformation.createProxyUser(BAR_USER.getShortUserName(),FOO_USER);
    try {
      ProxyUsers.getDefaultImpersonationProvider().authorize(proxyUser,"localhost");
    }
 catch (    AuthorizationException e) {
      Assert.fail();
    }
  }
  finally {
    if (rm != null) {
      rm.stop();
      rm.close();
    }
  }
}
