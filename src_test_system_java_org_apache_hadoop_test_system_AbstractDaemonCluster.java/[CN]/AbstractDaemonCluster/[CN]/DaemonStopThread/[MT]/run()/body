{
  LOG.info("Waiting for Daemon " + daemon.getHostName() + " to stop.....");
  while (true) {
    try {
      daemon.ping();
      if (LOG.isDebugEnabled()) {
        LOG.debug(daemon.getHostName() + " is waiting state to stop.");
      }
      waitFor(60000);
    }
 catch (    Exception exp) {
      LOG.info("Daemon is : " + daemon.getHostName() + " stopped...");
      break;
    }
  }
}
