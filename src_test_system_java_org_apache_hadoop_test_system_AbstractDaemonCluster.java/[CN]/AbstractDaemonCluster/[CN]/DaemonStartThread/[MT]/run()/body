{
  LOG.info("Waiting for Daemon " + daemon.getHostName() + " to come up.....");
  while (true) {
    try {
      daemon.ping();
      LOG.info("Daemon is : " + daemon.getHostName() + " pinging...");
      break;
    }
 catch (    Exception exp) {
      if (LOG.isDebugEnabled()) {
        LOG.debug(daemon.getHostName() + " is waiting to come up.");
      }
      waitFor(60000);
    }
  }
}
