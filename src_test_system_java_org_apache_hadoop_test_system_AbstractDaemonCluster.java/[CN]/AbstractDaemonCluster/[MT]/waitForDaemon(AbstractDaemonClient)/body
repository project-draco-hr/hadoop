{
  final int TEN_SEC=10000;
  while (true) {
    try {
      LOG.info("Waiting for daemon at " + d.getHostName() + " to come up.");
      LOG.info("Daemon might not be " + "ready or the call to setReady() method hasn't been " + "injected to " + d.getClass() + " ");
      d.connect();
      break;
    }
 catch (    IOException e) {
      try {
        Thread.sleep(TEN_SEC);
      }
 catch (      InterruptedException ie) {
      }
    }
  }
}
