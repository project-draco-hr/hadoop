{
  writeLock.lock();
  try {
    demand=Resources.createResource(0);
    for (    FSQueue childQueue : childQueues) {
      childQueue.updateDemand();
      Resource toAdd=childQueue.getDemand();
      if (LOG.isDebugEnabled()) {
        LOG.debug("Counting resource from " + childQueue.getName() + " "+ toAdd+ "; Total resource consumption for "+ getName()+ " now "+ demand);
      }
      demand=Resources.add(demand,toAdd);
      demand=Resources.componentwiseMin(demand,maxShare);
      if (Resources.equals(demand,maxShare)) {
        break;
      }
    }
  }
  finally {
    writeLock.unlock();
  }
  if (LOG.isDebugEnabled()) {
    LOG.debug("The updated demand for " + getName() + " is "+ demand+ "; the max is "+ maxShare);
  }
}
