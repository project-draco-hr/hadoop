{
  ErasureCoder decoder;
  try {
    Constructor<? extends ErasureCoder> constructor=(Constructor<? extends ErasureCoder>)decoderClass.getConstructor(int.class,int.class);
    decoder=constructor.newInstance(numDataUnits,numParityUnits);
  }
 catch (  Exception e) {
    throw new RuntimeException("Failed to create decoder",e);
  }
  decoder.setConf(getConf());
  return decoder;
}
