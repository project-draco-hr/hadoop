{
  ErasureCoder encoder;
  try {
    Constructor<? extends ErasureCoder> constructor=(Constructor<? extends ErasureCoder>)encoderClass.getConstructor(int.class,int.class);
    encoder=constructor.newInstance(numDataUnits,numParityUnits);
  }
 catch (  Exception e) {
    throw new RuntimeException("Failed to create encoder",e);
  }
  encoder.setConf(getConf());
  return encoder;
}
