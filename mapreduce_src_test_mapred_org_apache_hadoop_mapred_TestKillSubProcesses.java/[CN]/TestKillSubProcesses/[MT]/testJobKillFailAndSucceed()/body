{
  if (Shell.WINDOWS) {
    System.out.println("setsid doesn't work on WINDOWS as expected. Not testing");
    return;
  }
  JobConf conf=null;
  try {
    mr=new MiniMRCluster(1,"file:///",1);
    conf=mr.createJobConf();
    JobTracker jt=mr.getJobTrackerRunner().getJobTracker();
    runTests(conf,jt);
  }
  finally {
    if (mr != null) {
      mr.shutdown();
    }
  }
}
