{
  if (isCachingEnabled) {
    pendingCacheBlocks.start();
    this.monitor=Executors.newSingleThreadExecutor(new ThreadFactoryBuilder().setDaemon(true).setNameFormat(CacheReplicationMonitor.class.toString()).build());
    monitor.submit(new CacheReplicationMonitor(namesystem,blockManager,datanodeManager,this,blocksToUncache,neededCacheBlocks,pendingCacheBlocks,conf));
    monitor.shutdown();
  }
}
