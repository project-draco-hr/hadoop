{
  Map<String,List<String>> ret=new HashMap<String,List<String>>();
  BufferedReader in=null;
  try {
    in=new BufferedReader(new FileReader(new File(getMtabFileName())));
    for (String str=in.readLine(); str != null; str=in.readLine()) {
      Matcher m=MTAB_FILE_FORMAT.matcher(str);
      boolean mat=m.find();
      if (mat) {
        String path=m.group(1);
        String type=m.group(2);
        String options=m.group(3);
        if (type.equals(CGROUPS_FSTYPE)) {
          List<String> value=Arrays.asList(options.split(","));
          ret.put(path,value);
        }
      }
    }
  }
 catch (  IOException e) {
    throw new IOException("Error while reading " + getMtabFileName(),e);
  }
 finally {
    try {
      in.close();
    }
 catch (    IOException e2) {
      LOG.warn("Error closing the stream: " + getMtabFileName(),e2);
    }
  }
  return ret;
}
