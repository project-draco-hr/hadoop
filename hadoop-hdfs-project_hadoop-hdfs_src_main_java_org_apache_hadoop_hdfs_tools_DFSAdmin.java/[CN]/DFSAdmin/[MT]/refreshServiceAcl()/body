{
  Configuration conf=getConf();
  conf.set(CommonConfigurationKeys.HADOOP_SECURITY_SERVICE_USER_NAME_KEY,conf.get(DFSConfigKeys.DFS_NAMENODE_USER_NAME_KEY,""));
  RefreshAuthorizationPolicyProtocolClientSideTranslatorPB refreshProtocol=new RefreshAuthorizationPolicyProtocolClientSideTranslatorPB(NameNode.getAddress(conf),getUGI(),conf);
  refreshProtocol.refreshServiceAcl();
  return 0;
}
