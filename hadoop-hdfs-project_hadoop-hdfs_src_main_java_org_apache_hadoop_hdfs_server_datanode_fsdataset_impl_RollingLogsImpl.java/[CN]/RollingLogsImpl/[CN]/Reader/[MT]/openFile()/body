{
  for (int i=0; i < 2; i++) {
    if (reader != null || i > 0) {
      file=isPrevious() ? curr : null;
    }
    if (file == null) {
      return false;
    }
    if (file.exists()) {
      break;
    }
  }
  if (reader != null) {
    reader.close();
    reader=null;
  }
  reader=new BufferedReader(new FileReader(file));
  return true;
}
