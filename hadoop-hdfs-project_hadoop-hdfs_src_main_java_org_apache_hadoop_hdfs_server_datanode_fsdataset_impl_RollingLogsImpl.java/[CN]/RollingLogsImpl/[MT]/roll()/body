{
  if (numReaders.get() > 0) {
    return false;
  }
  if (!prev.delete() && prev.exists()) {
    throw new IOException("Failed to delete " + prev);
  }
synchronized (this) {
    appender.close();
    final boolean renamed=curr.renameTo(prev);
    out=new PrintWriter(new OutputStreamWriter(new FileOutputStream(curr,true),Charsets.UTF_8));
    if (!renamed) {
      throw new IOException("Failed to rename " + curr + " to "+ prev);
    }
  }
  return true;
}
