{
  List<EditLogInputStream> streams=new ArrayList<EditLogInputStream>();
  selectInputStreams(streams,fromTxId,inProgressOk,true);
  try {
    checkForGaps(streams,fromTxId,toAtLeastTxId,inProgressOk);
  }
 catch (  IOException e) {
    if (recovery != null) {
      LOG.error(e);
    }
 else {
      closeAllStreams(streams);
      throw e;
    }
  }
  return streams;
}
