{
  this.type=type;
  if (outputBufferCapacity > 0) {
switch (type) {
case DIRECT_BUFFER:
      this.byteBuffer=ByteBuffer.allocateDirect(outputBufferCapacity);
    this.byteBuffer.order(ByteOrder.BIG_ENDIAN);
  break;
case HEAP_BUFFER:
this.byteBuffer=ByteBuffer.allocate(outputBufferCapacity);
this.byteBuffer.order(ByteOrder.BIG_ENDIAN);
break;
}
}
}
