{
  Path f=new Path(src);
  FileSystem srcFs=f.getFileSystem(getConf());
  FileStatus st;
  if (srcFs.exists(f)) {
    st=srcFs.getFileStatus(f);
    if (st.isDirectory()) {
      throw new IOException(src + " is a directory");
    }
 else     if (st.getLen() != 0)     throw new IOException(src + " must be a zero-length file");
  }
  FSDataOutputStream out=srcFs.create(f);
  out.close();
}
