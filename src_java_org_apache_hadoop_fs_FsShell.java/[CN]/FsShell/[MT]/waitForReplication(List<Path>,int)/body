{
  for (  Path f : waitList) {
    System.out.print("Waiting for " + f + " ...");
    System.out.flush();
    boolean printWarning=false;
    FileSystem pFS=f.getFileSystem(getConf());
    FileStatus status=pFS.getFileStatus(f);
    long len=status.getLen();
    for (boolean done=false; !done; ) {
      BlockLocation[] locations=pFS.getFileBlockLocations(status,0,len);
      int i=0;
      for (; i < locations.length && locations[i].getHosts().length == rep; i++)       if (!printWarning && locations[i].getHosts().length > rep) {
        System.out.println("\nWARNING: the waiting time may be long for " + "DECREASING the number of replication.");
        printWarning=true;
      }
      done=i == locations.length;
      if (!done) {
        System.out.print(".");
        System.out.flush();
        try {
          Thread.sleep(10000);
        }
 catch (        InterruptedException e) {
        }
      }
    }
    System.out.println(" done");
  }
}
