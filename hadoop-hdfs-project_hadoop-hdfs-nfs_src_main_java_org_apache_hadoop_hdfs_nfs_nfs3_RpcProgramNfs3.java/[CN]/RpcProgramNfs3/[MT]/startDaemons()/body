{
  if (pauseMonitor == null) {
    pauseMonitor=new JvmPauseMonitor();
    pauseMonitor.init(config);
    pauseMonitor.start();
    metrics.getJvmMetrics().setPauseMonitor(pauseMonitor);
  }
  writeManager.startAsyncDataService();
  try {
    infoServer.start();
  }
 catch (  IOException e) {
    LOG.error("failed to start web server",e);
  }
}
