{
  assert(message.length == stripeSize && parity.length == paritySize);
  for (int i=0; i < paritySize; i++) {
    dataBuff[i]=0;
  }
  for (int i=0; i < stripeSize; i++) {
    dataBuff[i + paritySize]=message[i];
  }
  GF.remainder(dataBuff,generatingPolynomial);
  for (int i=0; i < paritySize; i++) {
    parity[i]=dataBuff[i];
  }
}
