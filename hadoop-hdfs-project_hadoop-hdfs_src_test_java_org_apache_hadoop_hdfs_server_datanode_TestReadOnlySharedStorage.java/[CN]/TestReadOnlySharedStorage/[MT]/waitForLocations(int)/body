{
  for (int tries=0; tries < RETRIES; )   try {
    LocatedBlock locatedBlock=getLocatedBlock();
    assertThat(locatedBlock.getLocations().length,is(locations));
    break;
  }
 catch (  AssertionError e) {
    if (++tries < RETRIES) {
      Thread.sleep(1000);
    }
 else {
      throw e;
    }
  }
}
