{
  if (jvmToRunningTask.containsKey(jvmId)) {
    TaskRunner taskRunner=jvmToRunningTask.get(jvmId);
    JvmRunner jvmRunner=jvmIdToRunner.get(jvmId);
    Task task=taskRunner.getTaskInProgress().getTask();
    TaskControllerContext context=new TaskController.TaskControllerContext();
    context.env=jvmRunner.env;
    context.task=task;
    if (!jvmRunner.env.conf.get(JobContext.TASK_ATTEMPT_ID).equals(task.getTaskID().toString())) {
      try {
        tracker.getTaskController().initializeTask(context);
      }
 catch (      IOException e) {
        LOG.warn("Failed to initialize the new task " + task.getTaskID().toString() + " to be given to JVM with id "+ jvmId);
        throw e;
      }
    }
    return taskRunner.getTaskInProgress();
  }
  return null;
}
