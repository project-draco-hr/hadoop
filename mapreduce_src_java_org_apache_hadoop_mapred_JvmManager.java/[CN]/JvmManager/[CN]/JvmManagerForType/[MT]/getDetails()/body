{
  StringBuffer details=new StringBuffer();
  details.append("Number of active JVMs:").append(jvmIdToRunner.size());
  Iterator<JVMId> jvmIter=jvmIdToRunner.keySet().iterator();
  while (jvmIter.hasNext()) {
    JVMId jvmId=jvmIter.next();
    details.append("\n  JVMId ").append(jvmId.toString()).append(" #Tasks ran: ").append(jvmIdToRunner.get(jvmId).numTasksRan).append(" Currently busy? ").append(jvmIdToRunner.get(jvmId).isBusy()).append(" Currently running: ").append(jvmToRunningTask.get(jvmId).getTask().getTaskID().toString());
  }
  return details.toString();
}
