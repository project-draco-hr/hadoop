{
  Application app=containerManager.context.getApplications().get(appID);
  int timeout=0;
  while (!(app.getApplicationState().equals(finalState)) && timeout++ < 15) {
    LOG.info("Waiting for app to reach " + finalState + ".. Current state is "+ app.getApplicationState());
    Thread.sleep(1000);
  }
  Assert.assertTrue("App is not in " + finalState + " yet!! Timedout!!",app.getApplicationState().equals(finalState));
}
