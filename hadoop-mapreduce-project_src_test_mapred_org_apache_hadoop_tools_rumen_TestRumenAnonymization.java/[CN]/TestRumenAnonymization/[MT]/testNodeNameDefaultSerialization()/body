{
  JsonSerializer<?> defaultSerializer=new DefaultRumenSerializer();
  testSerializer(new NodeName("hostname.myorg.com"),"hostname.myorg.com",defaultSerializer);
  testSerializer(new NodeName("/rackname.myorg.com/hostname.myorg.com"),"/rackname.myorg.com/hostname.myorg.com",defaultSerializer);
  testSerializer(new NodeName("rackname.myorg.com","hostname.myorg.com"),"/rackname.myorg.com/hostname.myorg.com",defaultSerializer);
  testSerializer(new NodeName(null,"hostname.myorg.com"),"hostname.myorg.com",defaultSerializer);
  testSerializer(new NodeName("rackname.myorg.com",null),"rackname.myorg.com",defaultSerializer);
}
