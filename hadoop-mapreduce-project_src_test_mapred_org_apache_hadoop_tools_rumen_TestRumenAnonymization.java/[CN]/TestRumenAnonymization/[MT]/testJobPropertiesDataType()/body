{
  Properties properties=new Properties();
  JobProperties jp=new JobProperties(properties);
  assertEquals("Job Properties (default) store error",0,jp.getValue().size());
  properties.put("test-key","test-value");
  properties.put(MRJobConfig.USER_NAME,"bob");
  properties.put(JobConf.MAPRED_TASK_JAVA_OPTS,"-Xmx1G");
  jp=new JobProperties(properties);
  assertEquals("Job Properties (default) store error",3,jp.getValue().size());
  assertEquals("Job Properties (default) key#1 error","test-value",jp.getValue().get("test-key"));
  assertEquals("Job Properties (default) key#2 error","bob",jp.getValue().get(MRJobConfig.USER_NAME));
  assertEquals("Job Properties (default) key#3 error","-Xmx1G",jp.getValue().get(JobConf.MAPRED_TASK_JAVA_OPTS));
}
