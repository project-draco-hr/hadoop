{
  Path file=new Path(testBaseDir1() + "/file");
  Path link=new Path(testBaseDir1() + "/linkToFile");
  createAndWriteFile(file);
  fc.createSymlink(file,link,false);
  readFile(link);
  fc.delete(link,false);
  try {
    readFile(link);
    fail("Symlink should have been deleted");
  }
 catch (  IOException x) {
  }
  fc.createSymlink(file,link,false);
}
