{
  Configuration conf=new Configuration();
  modifyConf("A,B,CX");
  nodeLabelsProvider.init(conf);
  nodeLabelsProvider.start();
  assertNLCollectionEquals(toNodeLabelSet("A","B","CX"),nodeLabelsProvider.getNodeLabels());
  TimerTask timerTask=nodeLabelsProvider.getTimerTask();
  modifyConf("X,y,Z");
  timerTask.run();
  assertNLCollectionEquals(toNodeLabelSet("X","y","Z"),nodeLabelsProvider.getNodeLabels());
}
