{
  super.init(contextName,factory);
  LOG.debug("Initializing the GangliaContext31 for Ganglia 3.1 metrics.");
  Configuration conf=new Configuration();
  if (conf.get("slave.host.name") != null) {
    hostName=conf.get("slave.host.name");
  }
 else {
    try {
      hostName=DNS.getDefaultHost(conf.get("dfs.datanode.dns.interface","default"),conf.get("dfs.datanode.dns.nameserver","default"));
    }
 catch (    UnknownHostException uhe) {
      LOG.error(uhe);
      hostName="UNKNOWN.example.com";
    }
  }
}
