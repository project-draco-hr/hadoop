{
  lock.lock();
  try {
    checkNotClosed();
    toRemove.put(sock.fd,sock);
    kick();
    while (true) {
      try {
        processedCond.await();
      }
 catch (      InterruptedException e) {
        Thread.currentThread().interrupt();
      }
      if (!toRemove.containsKey(sock.fd)) {
        break;
      }
      checkNotClosed();
    }
  }
  finally {
    lock.unlock();
  }
}
