{
  try {
    if (lazyPersist) {
      EnumSet<CreateFlag> createFlags=EnumSet.of(CREATE,LAZY_PERSIST);
      return create(item.path,FsPermission.getFileDefault().applyUMask(FsPermission.getUMask(getConf())),createFlags,getConf().getInt(IO_FILE_BUFFER_SIZE_KEY,IO_FILE_BUFFER_SIZE_DEFAULT),lazyPersist ? 1 : getDefaultReplication(item.path),getDefaultBlockSize(),null,null);
    }
 else {
      return create(item.path,true);
    }
  }
  finally {
    if (!direct) {
      deleteOnExit(item.path);
    }
  }
}
