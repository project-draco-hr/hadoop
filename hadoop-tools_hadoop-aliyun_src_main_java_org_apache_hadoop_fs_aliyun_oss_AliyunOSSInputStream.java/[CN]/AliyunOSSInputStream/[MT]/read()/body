{
  checkNotClosed();
  if (partRemaining <= 0 && position < contentLength) {
    reopen(position);
  }
  int tries=MAX_RETRIES;
  boolean retry;
  int byteRead=-1;
  do {
    retry=false;
    try {
      byteRead=wrappedStream.read();
    }
 catch (    Exception e) {
      handleReadException(e,--tries);
      retry=true;
    }
  }
 while (retry);
  if (byteRead >= 0) {
    position++;
    partRemaining--;
  }
  if (statistics != null && byteRead >= 0) {
    statistics.incrementBytesRead(1);
  }
  return byteRead;
}
