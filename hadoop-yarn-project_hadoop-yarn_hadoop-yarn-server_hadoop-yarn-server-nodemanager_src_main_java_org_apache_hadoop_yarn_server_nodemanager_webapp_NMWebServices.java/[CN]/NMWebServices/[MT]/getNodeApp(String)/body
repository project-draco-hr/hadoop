{
  init();
  ApplicationId id=ConverterUtils.toApplicationId(recordFactory,appId);
  if (id == null) {
    throw new NotFoundException("app with id " + appId + " not found");
  }
  Application app=this.nmContext.getApplications().get(id);
  if (app == null) {
    throw new NotFoundException("app with id " + appId + " not found");
  }
  return new AppInfo(app);
}
