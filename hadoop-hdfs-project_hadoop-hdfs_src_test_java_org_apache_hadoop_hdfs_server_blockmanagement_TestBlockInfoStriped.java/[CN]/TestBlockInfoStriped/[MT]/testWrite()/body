{
  long blkID=1;
  long numBytes=1;
  long generationStamp=1;
  short dataBlockNum=6;
  short parityBlockNum=3;
  ByteBuffer byteBuffer=ByteBuffer.allocate(Long.SIZE / Byte.SIZE * 3 + Short.SIZE / Byte.SIZE * 2);
  byteBuffer.putShort(dataBlockNum).putShort(parityBlockNum).putLong(blkID).putLong(numBytes).putLong(generationStamp);
  ByteArrayOutputStream byteStream=new ByteArrayOutputStream();
  DataOutput out=new DataOutputStream(byteStream);
  BlockInfoStriped blk=new BlockInfoStriped(new Block(1,1,1),(short)6,(short)3);
  try {
    blk.write(out);
  }
 catch (  Exception ex) {
    fail("testWrite error:" + ex.getMessage());
  }
  assertEquals(byteBuffer.array().length,byteStream.toByteArray().length);
  assertArrayEquals(byteBuffer.array(),byteStream.toByteArray());
}
