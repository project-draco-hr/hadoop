{
  assert(block != null && sources != null && sources.length > 0);
  BlockECReconstructionInfo task=new BlockECReconstructionInfo(block,sources,targets,liveBlockIndices,ecPolicy);
  erasurecodeBlocks.offer(task);
  BlockManager.LOG.debug("Adding block reconstruction task " + task + "to "+ getName()+ ", current queue size is "+ erasurecodeBlocks.size());
}
