{
  assert(block != null && sources != null && sources.length > 0);
  BlockECRecoveryInfo task=new BlockECRecoveryInfo(block,sources,targets,liveBlockIndices,ecSchema);
  erasurecodeBlocks.offer(task);
  BlockManager.LOG.debug("Adding block recovery task " + task + "to "+ getName()+ ", current queue size is "+ erasurecodeBlocks.size());
}
