{
  cluster=new MiniDFSCluster.Builder(conf).nnTopology(MiniDFSNNTopology.simpleFederatedTopology(numNameNodes)).numDataNodes(numDatanodes).build();
  cluster.waitActive();
  for (int i=0; i < numNameNodes; i++) {
    DFSClient client=getDfsClient(cluster.getNameNode(i),conf);
    validateCluster(client,numDatanodes);
  }
}
