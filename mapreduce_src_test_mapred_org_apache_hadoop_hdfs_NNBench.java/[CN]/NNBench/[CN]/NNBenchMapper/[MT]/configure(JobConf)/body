{
  setConf(conf);
  try {
    filesystem=FileSystem.get(conf);
  }
 catch (  Exception e) {
    throw new RuntimeException("Cannot get file system.",e);
  }
  try {
    hostName=InetAddress.getLocalHost().getHostName();
  }
 catch (  Exception e) {
    throw new RuntimeException("Error getting hostname",e);
  }
}
