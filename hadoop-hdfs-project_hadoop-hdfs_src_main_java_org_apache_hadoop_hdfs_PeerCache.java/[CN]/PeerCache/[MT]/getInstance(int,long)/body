{
  if (isInitedOnce == false) {
    capacity=c;
    expiryPeriod=e;
    if (capacity == 0) {
      LOG.info("SocketCache disabled.");
    }
 else     if (expiryPeriod == 0) {
      throw new IllegalStateException("Cannot initialize expiryPeriod to " + expiryPeriod + "when cache is enabled.");
    }
    isInitedOnce=true;
  }
 else {
    if (capacity != c || expiryPeriod != e) {
      LOG.info("capacity and expiry periods already set to " + capacity + " and "+ expiryPeriod+ " respectively. Cannot set it to "+ c+ " and "+ e);
    }
  }
  return instance;
}
