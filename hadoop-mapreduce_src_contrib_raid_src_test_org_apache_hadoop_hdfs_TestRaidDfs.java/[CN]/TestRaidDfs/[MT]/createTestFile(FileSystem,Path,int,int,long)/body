{
  CRC32 crc=new CRC32();
  Random rand=new Random();
  FSDataOutputStream stm=fileSys.create(name,true,fileSys.getConf().getInt("io.file.buffer.size",4096),(short)repl,blocksize);
  final byte[] b=new byte[(int)blocksize];
  for (int i=0; i < numBlocks; i++) {
    rand.nextBytes(b);
    stm.write(b);
    crc.update(b);
  }
  stm.close();
  return crc.getValue();
}
