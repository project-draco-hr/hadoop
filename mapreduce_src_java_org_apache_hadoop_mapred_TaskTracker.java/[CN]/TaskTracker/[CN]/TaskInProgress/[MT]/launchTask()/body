{
  if (this.taskStatus.getRunState() == TaskStatus.State.UNASSIGNED || this.taskStatus.getRunState() == TaskStatus.State.FAILED_UNCLEAN || this.taskStatus.getRunState() == TaskStatus.State.KILLED_UNCLEAN) {
    localizeTask(task);
    if (this.taskStatus.getRunState() == TaskStatus.State.UNASSIGNED) {
      this.taskStatus.setRunState(TaskStatus.State.RUNNING);
    }
    setTaskRunner(task.createRunner(TaskTracker.this,this));
    this.runner.start();
    this.taskStatus.setStartTime(System.currentTimeMillis());
  }
 else {
    LOG.info("Not launching task: " + task.getTaskID() + " since it's state is "+ this.taskStatus.getRunState());
  }
}
