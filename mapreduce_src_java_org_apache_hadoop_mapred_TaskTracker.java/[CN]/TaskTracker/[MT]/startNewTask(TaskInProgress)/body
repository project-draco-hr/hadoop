{
  Thread launchThread=new Thread(new Runnable(){
    @Override public void run(){
      try {
        RunningJob rjob=localizeJob(tip);
        launchTaskForJob(tip,new JobConf(rjob.getJobConf()),rjob.ugi);
      }
 catch (      Throwable e) {
        String msg=("Error initializing " + tip.getTask().getTaskID() + ":\n"+ StringUtils.stringifyException(e));
        LOG.warn(msg);
        tip.reportDiagnosticInfo(msg);
        try {
          tip.kill(true);
          tip.cleanup(true);
        }
 catch (        IOException ie2) {
          LOG.info("Error cleaning up " + tip.getTask().getTaskID() + ":\n"+ StringUtils.stringifyException(ie2));
        }
        if (e instanceof Error) {
          LOG.error("TaskLauncher error " + StringUtils.stringifyException(e));
        }
      }
    }
  }
);
  launchThread.start();
}
