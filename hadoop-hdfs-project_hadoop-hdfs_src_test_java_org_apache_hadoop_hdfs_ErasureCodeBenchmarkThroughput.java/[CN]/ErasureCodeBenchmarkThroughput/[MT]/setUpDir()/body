{
  DistributedFileSystem dfs=(DistributedFileSystem)fs;
  dfs.mkdirs(new Path(DFS_TMP_DIR));
  Path repPath=new Path(REP_DIR);
  Path ecPath=new Path(EC_DIR);
  if (!dfs.exists(repPath)) {
    dfs.mkdirs(repPath);
  }
 else {
    Preconditions.checkArgument(dfs.getClient().getErasureCodingPolicy(repPath.toString()) == null);
  }
  if (!dfs.exists(ecPath)) {
    dfs.mkdirs(ecPath);
    dfs.getClient().setErasureCodingPolicy(ecPath.toString(),ecPolicy);
  }
 else {
    Preconditions.checkArgument(dfs.getClient().getErasureCodingPolicy(ecPath.toString()).equals(ecPolicy));
  }
}
