{
  try {
    Thread.sleep(delay);
    containerExecutor.signalContainer(new ContainerSignalContext.Builder().setContainer(container).setUser(user).setPid(pid).setSignal(signal).build());
  }
 catch (  InterruptedException e) {
    return;
  }
catch (  IOException e) {
    String message="Exception when user " + user + " killing task "+ pid+ " in DelayedProcessKiller: "+ StringUtils.stringifyException(e);
    LOG.warn(message);
    container.handle(new ContainerDiagnosticsUpdateEvent(container.getContainerId(),message));
  }
}
